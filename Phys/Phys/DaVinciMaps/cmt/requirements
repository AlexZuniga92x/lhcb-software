#============================================================================
package           DaVinciMaps
version           v1r3

#============================================================================
# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc src Kernel python
#============================================================================
# Used packages. Specify the version, * at the end specifies 'any revision'
#    Put as many lines as needed, with all packages, without the '#'
#============================================================================
use   PhysEvent      v*    Event
use   GaudiKernel    v*
use   GaudiPython    v*
#============================================================================
apply_pattern install_more_includes more=Kernel
#============================================================================
# Component library building rule
#============================================================================
library          DaVinciMapsLib    ../src/*.cpp
#============================================================================
# standard patterns (order is essential!)
#============================================================================
apply_pattern linker_library    library=DaVinciMapsLib
# =============== LCG Dictionaries ============================================
apply_pattern reflex_dictionary                                             \
              dictionary=DaVinciMaps                                      \
              headerfiles=$(DAVINCIMAPSROOT)/dict/DaVinciMapsDict.h     \
              selectionfile=$(DAVINCIMAPSROOT)/dict/DaVinciMapsDict.xml \
              options="-U__MINGW32__"
#============================================================================
apply_pattern install_python_modules
#============================================================================