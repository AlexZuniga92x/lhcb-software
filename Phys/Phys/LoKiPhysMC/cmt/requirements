package           LoKiPhysMC
version           v2r3
	
# =============== structure ==================================================
branches          cmt doc src LoKi Kernel options
	
# =============== environment ================================================
set LOKIPHYSMCOPTS $(LOKIPHYSMCROOT)/options

# =============== own includes ===============================================
include_dirs      $(LOKIPHYSMCROOT)
      
# =============== dependencies ===============================================
use               Relations          v* Kernel
use               LoKiMC             v* Phys 
use               LoKiPhys           v* Phys 
use               LoKiGenMC          v* Phys 
use               LinkerEvent        v* Event  
use               DaVinciMCTools     v* Phys  
use               DaVinciAssociators v* Phys  -no_autoimport 

# =============== constituents ===============================================
library           LoKiPhysMCLib ../src/*.cpp 
library           LoKiPhysMC    ../src/Components/*.cpp 

# =============== patterns ===================================================
apply_pattern     linker_library    library=LoKiPhysMCLib
apply_pattern     component_library library=LoKiPhysMC

