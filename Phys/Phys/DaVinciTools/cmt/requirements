package           DaVinciTools
version           v23r15

# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc src python

# Used packages. 
#============================================================================
use DaVinciKernel              v*     Phys
# Sub packages containing tools
# Might be appropriate to move some of these to Analysis eventually ...
use DaVinciCoreTools           v*     Phys 
use RelatedInfoTools           v*     Phys
use ExtraInfoTools             v*     Phys
use DaVinciPVTools             v*     Phys
use DaVinciFilters             v*     Phys
use DaVinciDecayFinder         v*     Phys
use TopologicalTools           v*     Phys
use DaVinciOverlapsAndClones   v*     Phys
use DaVinciNeutralTools        v*     Phys

# Component library building rule
#============================================================================
library          DaVinciTools    ../src/*.cpp
#============================================================================

# standard patterns (order is essential!)
#============================================================================
apply_pattern component_library library=DaVinciTools
#============================================================================
apply_pattern install_python_modules
#============================================================================
#QM tests
private
# Uses only needed to set up run time environment of tests
  macro DDDB_use "" QMTest "DDDB  v*  Det"
  use $(DDDB_use)
  apply_pattern QMTest
end_private
#============================================================================
