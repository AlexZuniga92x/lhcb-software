# Documentation on the requirement file can be found at
# http://cern.ch/lhcb-comp/Support/html/new_structure.pdf

package           DaVinciKernel
version           v1r0

# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc src Lib DaVinciTools

# Exported header files
#============================================================================
include_dirs     $(DAVINCIKERNELROOT)

# Used packages. 
#============================================================================
use PhysEvent  v* Event

# Linker library building rule
#============================================================================
library          DaVinciKernelLib    ../Lib/*.cpp

# Component library building rule
#============================================================================
library          DaVinciKernel    ../src/*.cpp

# standard patterns (order is essential!)
#============================================================================
apply_pattern component_library library=DaVinciKernel
apply_pattern linker_library    library=DaVinciKernelLib
