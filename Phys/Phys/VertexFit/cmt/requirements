package           DaVinciFilter
version           v1r0

# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc options src

# Exported header files
#============================================================================
include_dirs     $(DAVINCIFILTERROOT)

# Used packages. 
#============================================================================
use  VertexFit   v* Phys

# Component library building rule
#============================================================================
library          DaVinciFilter    ../src/*.cpp -import=AIDA

# standard patterns (order is essential!)
#============================================================================
apply_pattern component_library library=DaVinciFilter
	     

