#============================================================================
package           DecayTreeFitter
version           v1r0

#============================================================================
# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc src DecayTreeFitter
include_path      none

#============================================================================
# Used packages.
#============================================================================
use   CLHEP       	v* 	LCG_Interfaces -no_auto_imports
use   GaudiAlg        	v*
use   GaudiUtils        v*
use   PhysEvent         v*      Event
use   RecEvent		v*	Event
use   TrackEvent       	v*	Event
use   PartProp          v*      Kernel
use   LoKi              v*      Phys
use   TrackFitEvent     v*      Tr

apply_pattern install_more_includes more=DecayTreeFitter

#============================================================================
# Linker library building rule
#============================================================================
library       DecayTreeFitter   ../src/*.cpp -import=AIDA -import=CLHEP
apply_pattern linker_library    library=DecayTreeFitter
