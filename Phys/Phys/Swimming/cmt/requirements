#============================================================================
# Created    : 2011-04-13
# Maintainer : Vladimir Gligorov
#============================================================================
package           Swimming
version           v2r3

#============================================================================
# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc python
#============================================================================
# Used packages. Specify the version, * at the end specifies 'any revision'
#    Put as many lines as needed, with all packages, without the '#'
#============================================================================
use     GaudiPolicy     v*
use     GaudiKernel     v*
use     GaudiCOnf       v*
use     LHCbKernel      v*  Kernel
use     TisTosTobbing   v*  Phys

include_path      none

#============================================================================
# Linker library
#============================================================================
library          SwimmingFunctions  ../src/functions.cpp
apply_pattern    linker_library    library=SwimmingFunctions

#============================================================================
# Reflex dictionary
#============================================================================
apply_pattern     reflex_dictionary                                \
                  dictionary=SwimmingFunctions                     \
                  headerfiles=$(SWIMMINGROOT)/dict/functions.h     \
                  selectionfile=$(SWIMMINGROOT)/dict/functions.xml \
                  options="-U__MINGW32__"

apply_pattern install_python_modules
