package           NeuroBayesTool
version           v1r0

# Structure
#============================================================================
branches          cmt doc src
include_path      none

# Used packages
#============================================================================

use GaudiKernel         v*
use GaudiAlg            v*
use DaVinciKernel       v*  Phys
use LoKi                v*  Phys

# NeuroBayes
# NB is currently only supported on linux GCC (WIN32 libs in preparation)
macro use_NB_expert "neurobayes_expert v* LCG_Interfaces" WIN32 ""
use $(use_NB_expert)



#============================================================================
# Component library building rule
#============================================================================
library          NeuroBayesTool    ../src/*.cpp -import=AIDA

#============================================================================
# define component library link options
#============================================================================
apply_pattern    component_library library=NeuroBayesTool

# =============================================================================
# ======= the patterns ========================================================
apply_pattern install_python_modules


