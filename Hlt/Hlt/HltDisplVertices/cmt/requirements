package Hlt/HltDisplVertices
version           v4r0p1
#============================================================================
# Structure, i.e. directories to process.
#============================================================================
branches       Kernel  cmt doc src
#============================================================================
# Used packages. Specify the version, * at the end specifies 'any revision'
#    Put as many lines as needed, with all packages, without the '#'
#============================================================================
# Used packages.
#============================================================================

use DaVinciKernel       v* Phys
use DetDesc             v* Det
use CaloDet             v* Det
use LoKiHlt             v* Phys
use LoKi                v* Phys
use VeloDet             v* Det
use LoKiTrigger         v* Phys
use LoKiPhys            v* Phys

include_path      none
#============================================================================
# Component library building rule
#============================================================================
library          HltDisplVertices    ../src/*.cpp
#============================================================================
# define component library link options
#============================================================================
apply_pattern    component_library library=HltDisplVertices


apply_pattern install_more_includes more=Kernel
# ==== Auto added tests ====
apply_pattern    QMTest
private
  macro SQL_use "" QMTest "SQLDDDB v* Det --no-auto-imports"
  macro LHCbAlgs_use "" QMTest "LHCbAlgs v* Kernel --no-auto-imports"
  use $(SQL_use)
  use $(LHCbAlgs_use)
end_private

