package           HltLine
version           v5r1p7
# Structure
#============================================================================
branches          cmt doc src python
include_path none

# Used packages
#============================================================================
use GaudiAlg            v*

use Boost               v*  LCG_Interfaces
use Python              v*  LCG_Interfaces 
use SelectionLine       v*  Kernel
use SelPy               v*  Phys
use HltBase             v*  Hlt
# our python uses various instances defined in HltCommon...
use HltCommon           v*  Hlt


#============================================================================
# Component library building rule
#============================================================================
library          HltLine    ../src/*.cpp

#============================================================================
# define component library link options
#============================================================================
apply_pattern    component_library library=HltLine

# =============================================================================
# ======= the patterns ========================================================
macro HltLineUserModules "HltConf.HltLinesConfigurableUser"
apply_pattern install_python_modules

# ==== Auto added tests ====
apply_pattern    QMTest
private
  macro SQL_use "" QMTest "SQLDDDB v* Det --no-auto-imports"
  macro LHCbAlgs_use "" QMTest "LHCbAlgs v* Kernel --no-auto-imports"
  use $(SQL_use)
  use $(LHCbAlgs_use)
end_private

