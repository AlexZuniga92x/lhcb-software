# =============================================================================
# The helper package for configuration of Hlt(1)
# =============================================================================
package HltConf
version           v10r2

# =============================================================================
# ======= the actual dependencies =============================================
use       GaudiPolicy v*
use       Python      v* LCG_Interfaces
use       HltLine     v*  Hlt
use       Hlt1Lines   v*  Hlt
use       Hlt2Lines   v*  Hlt
use       HltTracking v* Hlt
use       Hlt2SharedParticles v* Hlt
use       HltSettings v* Hlt

# =============================================================================

use       HltLuminosity v* Hlt #dependency via Hlt1Lines, actually

# =============================================================================
# ======= the structure =======================================================
branches cmt doc python tests
# =============================================================================



# =============================================================================
# ======= the patterns ========================================================
macro HltConfConfUserModules "HltConf.Hlt1 HltConf.Hlt2 HltConf.Configuration"
apply_pattern install_python_modules
# =============================================================================

# =============================================================================
# The END
# =============================================================================

# ==== Auto added tests ====
apply_pattern    QMTest
private
  macro SQL_use "" QMTest "SQLDDDB v* Det --no-auto-imports"
  macro LHCbAlgs_use "" QMTest "LHCbAlgs v* Kernel --no-auto-imports"
  use $(SQL_use)
  use $(LHCbAlgs_use)
  use PRConfig v* 
end_private

