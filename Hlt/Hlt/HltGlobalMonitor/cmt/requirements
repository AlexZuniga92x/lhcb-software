package           HltGlobalMonitor
version           v4r0p1

# Structure
#============================================================================
branches          cmt doc src
include_path none

# Used packages
#============================================================================
use GaudiAlg            v*

use AIDA                v*   LCG_Interfaces
use Boost               v*   LCG_Interfaces


use HltEvent            v*    Event
use L0Event     		v*    Event
use TrackEvent          v*    Event

use HltBase             v*    Hlt
use GaudiUtils          v*    

use TrackInterfaces     v*    Tr

#============================================================================
# Component library building rule
#============================================================================
library          HltGlobalMonitor ../src/*.cpp -import=LCG_Interfaces/AIDA

#============================================================================
# define component library link options
#============================================================================
apply_pattern    component_library library=HltGlobalMonitor
# ==== Auto added tests ====
apply_pattern    QMTest
private
  macro SQL_use "" QMTest "SQLDDDB v* Det --no-auto-imports"
  macro LHCbAlgs_use "" QMTest "LHCbAlgs v* Kernel --no-auto-imports"
  use $(SQL_use)
  use $(LHCbAlgs_use)
end_private

