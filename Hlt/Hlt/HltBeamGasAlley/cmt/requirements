package           HltBeamGasAlley
version           v3r1

# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc src 
include_path      none


# Used packages
#============================================================================
use	GaudiAlg	v*
use	HltBase		v*	Hlt
use VeloDet     v*  Det
use	AIDA		v*	LCG_Interfaces

# Component library building rule
#============================================================================
library          HltBeamGasAlley    ../src/*.cpp

#============================================================================
# define component library link options
#============================================================================
apply_pattern	component_library	library=HltBeamGasAlley

# ==== Auto added tests ====
apply_pattern    QMTest
private
  macro SQL_use "" QMTest "SQLDDDB v* Det --no-auto-imports"
  macro LHCbAlgs_use "" QMTest "LHCbAlgs v* Kernel --no-auto-imports"
  use $(SQL_use)
  use $(LHCbAlgs_use)
end_private

