package           Hlt1Muons
version           v1r5p1

# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc src Hlt1Muons
include_path      none

# Used packages
#============================================================================
use GaudiAlg            v*
use TrackEvent		v*    Event
use MuonDet             v*    Det
use TrackInterfaces     v*    Tr

#============================================================================
# Component library building rule
#============================================================================
library          Hlt1Muons    ../src/*.cpp

#============================================================================
# define component library link options
#============================================================================
apply_pattern    component_library library=Hlt1Muons

# ==== Auto added tests ====
apply_pattern    QMTest
private
  macro SQL_use "" QMTest "SQLDDDB v* Det --no-auto-imports"
  macro LHCbAlgs_use "" QMTest "LHCbAlgs v* Kernel --no-auto-imports"
  use $(SQL_use)
  use $(LHCbAlgs_use)
end_private

