package           HltRecChecker
version           v2r0

# Structure
#============================================================================
branches          cmt doc src 
include_path none

# Used packages
#============================================================================

use GaudiKernel         v*

use MCEvent     v*      Event
use LinkerEvent	v*	Event	

use HltBase     v*      Hlt

#============================================================================
# Component library building rule
#============================================================================
library          HltRecChecker    ../src/*.cpp

#============================================================================
# define component library link options
#============================================================================
apply_pattern    component_library library=HltRecChecker

# ==== Auto added tests ====
apply_pattern    QMTest
private
  macro SQL_use "" QMTest "SQLDDDB v* Det --no-auto-imports"
  macro LHCbAlgs_use "" QMTest "LHCbAlgs v* Kernel --no-auto-imports"
  use $(SQL_use)
  use $(LHCbAlgs_use)
end_private

