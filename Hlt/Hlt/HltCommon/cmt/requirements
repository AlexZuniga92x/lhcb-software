use DetDesc             v*    Det

use PatTools            v*    Pat

#============================================================================
# Component library building rule
#============================================================================
library          HltCommon    ../src/*.cpp

#============================================================================
# define component library link options
#============================================================================
apply_pattern    component_library library=HltCommon
