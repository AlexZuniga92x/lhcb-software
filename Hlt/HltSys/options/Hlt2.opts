/** @file 
 *
 *  Hlt exclusive selections options
 *
 *  @author P. Koppenburg
 *  @date 2006-02-01
 */
//---------------------------------------------------------------------
//Common stuff. Probably already included in HltAlleys.
//---------------------------------------------------------------------
#include "$HLTSYSROOT/options/HltMainSequence.opts"
//---------------------------------------------------------------------
// Phys initialisation
//---------------------------------------------------------------------
#include "$HLTSYSROOT/options/HltInitSelections.opts"
//---------------------------------------------------------------------
// HLT exclusive Selections
//---------------------------------------------------------------------
Hlt.Members += { "GaudiSequencer/HltSelections" };
HltSelections.MeasureTime = true ;
HltSelections.Context = "HLT" ;
// just in case
HltSelections.Members += { "HltSummaryWriter"};

//---------------------------------------------------------------------
// Full reconstruction of all tracks 
//---------------------------------------------------------------------

HltSelections.Members += {"GaudiSequencer/PassedAlleys", // empty sequencer
                          "GaudiSequencer/HltRecoSequence"
};

//---------------------------------------------------------------------
// ProtoParticles and Particles
//---------------------------------------------------------------------
#include "$HLTSYSROOT/options/HltProtoParticles.opts"
//---------------------------------------------------------------------
// Empty Sequencer for MC truth filtering --- fill in HltSelChecker
//---------------------------------------------------------------------
HltSelections.Members += { "GaudiSequencer/SeqHltTruthFilter" } ;
//---------------------------------------------------------------------
// Standard HLT Particles
//---------------------------------------------------------------------
HltSelections.Members += { "GaudiSequencer/HltShared" };
#include "$HLTSELECTIONSROOT/options/HltShared.opts"
//---------------------------------------------------------------------
// Exclusive selections
//---------------------------------------------------------------------
HltSelections.Members += { "GaudiSequencer/HltExclusive" };
#include "$HLTSELECTIONSROOT/options/HltSelections.opts"

//--------------------------------------------------------------------
// Decision
//--------------------------------------------------------------------
HltSelections.Members += { "HltSelectionsDecision" } ;
//HltSelectionsDecision.OutputLevel = 2 ;

//-------------------------------------------------------------------
// True MC matching (DoD Svc)
//-------------------------------------------------------------------
#include "$HLTSYSROOT/options/HltTrackAssociator.opts"

