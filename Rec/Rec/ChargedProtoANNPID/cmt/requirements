package           ChargedProtoANNPID
version           v1r3

#============================================================================
# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc src python

#============================================================================
# Used packages.
#============================================================================
use  GaudiAlg                  v*
use  RecEvent                  v*   Event
use  ChargedProtoANNPIDParam   v* 
use  RecInterfaces             v*   Rec
# NB is currently only supported on linux GCC (WIN32 libs in preparation)
macro use_NB_expert "neurobayes_expert v* LCG_Interfaces" WIN32 ""
use $(use_NB_expert)

#============================================================================
# Component library building rule
#============================================================================
library          ChargedProtoANNPID    ../src/*.cpp 
apply_pattern    component_library library=ChargedProtoANNPID

# Setup Python Configurables
#============================================================================
apply_pattern install_python_modules
