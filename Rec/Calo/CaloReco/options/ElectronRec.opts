// ElectronRec.Detector        = "/dd/Structure/LHCb/Ecal" ;

ElectronRec.SelectionTools   =  { "CaloSelectorNOT/ElectronSelect"     } ;

///ElectronRec.CorrectionTools  = { "CaloSCorrectionSequence/CaloSPhoton" } ;
ElectronRec.CorrectionTools  = { "CaloSShape/SShape2Tanh"                  } ;
ElectronRec.CorrectionTools += { "CaloLCorrectionSimple/CaloLPhoton"   } ;
// Prs correction 
ElectronRec.CorrectionTools += { "CaloPrsCorrection/PrsCorrE"          } ;

ElectronRec.HypoTools        = { "CaloExtraDigits/SpdExtraE"           } ;
ElectronRec.HypoTools       += { "CaloExtraDigits/PrsExtraE"           } ;


