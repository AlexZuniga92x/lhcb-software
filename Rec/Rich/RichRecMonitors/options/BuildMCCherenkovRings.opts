
// Options need to build the Cherenkov Rings from MCRichSegments

// Run explicitly as a top algorithm
//ApplicationMgr.TopAlg += { "Rich::Rec::MC::MCMassHypoRingsAlg/BuildMCRichRings" };

// Use data-on-demand service to run as and when needed
DataOnDemandSvc.Algorithms += 
{ 
  "DATA='/Event/MC/Rich/CherenkovRings'               TYPE='Rich::Rec::MC::MCMassHypoRingsAlg/BuildMCRichRings'",
  "DATA='/Event/Prev/MC/Rich/CherenkovRings'          TYPE='Rich::Rec::MC::MCMassHypoRingsAlg/BuildMCRichRings'",
