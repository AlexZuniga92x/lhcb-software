  "DATA='/Event/LHCBackground/MC/Rich/CherenkovRings' TYPE='Rich::Rec::MC::MCMassHypoRingsAlg/BuildMCRichRings'",
  "DATA='/Event/Link/MC/Rich/Segments2MCCKRings'      TYPE='Rich::Rec::MC::MCMassHypoRingsAlg/BuildMCRichRings'"
};

