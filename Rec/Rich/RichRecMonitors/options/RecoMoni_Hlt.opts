// Rich Reconstruction monitors for common components

// Pixel monitor
CheckRICHSeq.Members += { "Rich::Rec::MC::PixelMonitor/RiRecPixelMoni" };

// Track geometry monitor
CheckRICHSeq.Members += { "Rich::Rec::MC::TrackGeomMoni/RiRecTkGeomMoni" };
RiRecTkGeomMoni.TrackSelection = { "trigger" };
RiRecTkGeomMoni.MCHistoPath = "RICH/RecTr/Geom/MC/";
RiRecTkGeomMoni.HistoPath   = "RICH/RecTr/Geom/";

// Track resolution monitors
// forward tracks - positive
CheckRICHSeq.Members += { "Rich::Rec::MC::TrackResolutionMoni/RiRecTrigTkPosResMoni" };
RiRecTrigTkPosResMoni.TrackSelection = { "unique","trigger" };
RiRecTrigTkPosResMoni.TrackChargeSel = 1;
RiRecTrigTkPosResMoni.MCHistoPath = "RICH/RecTr/Res/Trig/Pos/MC/";
RiRecTrigTkPosResMoni.HistoPath   = "RICH/RecTr/Res/Trig/Pos/";
// forward tracks - negative
CheckRICHSeq.Members += { "Rich::Rec::MC::TrackResolutionMoni/RiRecTrigTkNegResMoni" };
RiRecTrigTkNegResMoni.TrackSelection = { "unique","trigger" };
RiRecTrigTkNegResMoni.TrackChargeSel = -1;
RiRecTrigTkNegResMoni.MCHistoPath = "RICH/RecTr/Res/Trig/Neg/MC/";
RiRecTrigTkNegResMoni.HistoPath   = "RICH/RecTr/Res/Trig/Neg/";

// Reconstruction monitor
CheckRICHSeq.Members += { "Rich::Rec::MC::PhotonMonitor/RiRecPhotonMoni" };
RiRecPhotonMoni.MaxRichRecTracks = 230;

// Timing monitors
#include "$RICHRECMONITORSOPTS/RecoTiming_Hlt.opts"

