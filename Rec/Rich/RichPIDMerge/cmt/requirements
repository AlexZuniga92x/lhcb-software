package RichPIDMerge
version v1r1

# ================ structure ================================================
branches src cmt doc options

# ================ environment ==============================================
set RICHPIDMERGEOPTS $(RICHPIDMERGEROOT)/options
include_dirs $(RICHPIDMERGEROOT)

# ================ dependencies =============================================
use RichGlobalPID     v1r*  Rich
use RichLocalPID      v2r*  Rich
use RichRingRefit     v1r*  Rich

# ================ component library=========================================
library           RichPIDMerge   ../src/*.cpp

# define component library link options
#============================================================================
apply_pattern     package_Clinkopts
apply_pattern     packageShr

#============================================================================
private
apply_pattern     package_Cshlibflags
macro_append  RichPIDMerge_shlibflags " `cernlib kernlib` " \
                                  WIN32 " $(CERNLIB_linkopts) kernlib.lib "
