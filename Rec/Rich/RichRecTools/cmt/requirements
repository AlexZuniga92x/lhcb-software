package RichRecTools
version v1r0

# ================ structure ================================================
branches src cmt RichRecTools doc options

# ================ environment ==============================================
set RICHRECTOOLSOPTS $(RICHRECTOOLSROOT)/options
include_dirs $(RICHRECTOOLSROOT)

# ================ dependencies =============================================
use RichDetTools  v1r*  Rich
use RichRecEvent  v1r*  Rich
use RichRecKernel v1r*  Rich
use RichUtils     v1r*  Rich
use TrEvent       v11r* Event
# Temporary usage while SICB pixels used
use RiSicbGeom    v2r*  SICB

# ================ component library=========================================
library RichRecTools ../src/*.cpp

# define component library link options
#============================================================================
apply_pattern    package_Clinkopts
apply_pattern    packageShr
apply_pattern    linker_path

#============================================================================
private
apply_pattern    package_Cshlibflags
