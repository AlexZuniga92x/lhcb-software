package           RichMarkovRingFinder
version           v1r0

#============================================================================
# Structure
#============================================================================
branches          cmt doc src

#============================================================================
# Environment
#============================================================================
set RICHMARKOVRINGFINDEROPTS $(RICHMARKOVRINGFINDERROOT)/options

#============================================================================
# Usages
#============================================================================
use   AIDA             v*    LCG_Interfaces -no_auto_imports
use   RichRecBase      v1r*  Rich

#============================================================================
# Component library building rule
#============================================================================
library RichMarkovRingFinder -import=CLHEP -import=AIDA  ../src/opengl/*.cpp \
                                                         ../src/finder/*.cpp  \
                                                         ../src/component/*.cpp \
                                                         ../src/geometry/*.cpp
#macro_append cppflags " -pedantic "

#============================================================================
# define component library link options
#============================================================================
apply_pattern    package_Clinkopts
apply_pattern    packageShr

#============================================================================
private
include_dirs $(RICHMARKOVRINGFINDERROOT)/src
apply_pattern    package_Cshlibflags
