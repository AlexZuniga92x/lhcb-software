package           RichMarkovRingFinder
version           v2r0

#============================================================================
# Structure
#============================================================================
branches          cmt doc src DataFiles root

#============================================================================
# Environment
#============================================================================
set RICHMARKOVRINGFINDEROPTS $(RICHMARKOVRINGFINDERROOT)/options
set RICHMFINDERDATALOCATION $(RICHMARKOVRINGFINDERROOT)/DataFiles

#============================================================================
# Usages
#============================================================================
use   RichRecBase      v*    Rich
use   GSL              v*    LCG_Interfaces 
# Needs CLHEP for the moment. Need to decide how to remove this in the long run
use   CLHEP            v*    LCG_Interfaces  -no_auto_imports

#============================================================================
# Component library building rule
#============================================================================
library RichMarkovRingFinder -import=CLHEP \
            ../src/component/*.cpp \
            ../src/misc/Utils/*.cc \
            ../src/misc/Rich/*.cc  \
            ../src/misc/Rich/*.cpp

#============================================================================
# define component library link options
#============================================================================
apply_pattern component_library library=RichMarkovRingFinder

#============================================================================
private
include_dirs $(RICHMARKOVRINGFINDERROOT)/src/misc
