package RichGlobalPID
version v1r7

#============================================================================
# Structure
#============================================================================
branches src cmt doc options xml Event RichGlobalPID

#============================================================================
# Used packages.
#============================================================================
use RichRecBase       v1r*  Rich

#============================================================================
# Environment
#============================================================================
set RICHGLOBALPIDOPTS $(RICHGLOBALPIDROOT)/options
include_dirs $(RICHGLOBALPIDROOT)

#============================================================================
# Build GOD objects
#============================================================================

# Global PID XML
document obj2doth RichGlobalPID_Event_Obj2Doth ../xml/RichGlobalPID_Event.xml
document obj2dict RichGlobalPID_Event_Obj2Dict ../xml/RichGlobalPID_Event.xml

# ================ component library=========================================
library   RichGlobalPID           ../src/*.cpp  -import=AIDA
library   RichGlobalPIDEventDict  ../dict/*.cpp -import=GaudiIntrospection

# define component library link options
#============================================================================
apply_pattern component_library library=RichGlobalPID
apply_pattern component_library library=RichGlobalPIDEventDict

#============================================================================
private
include_dirs $(RICHGLOBALPIDROOT)/Event
