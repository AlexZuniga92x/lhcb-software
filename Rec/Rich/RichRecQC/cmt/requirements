package           RichRecQC
version           v2r42

# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc src options
include_path none

#================ environment ==============================================
set RICHRECQCOPTS $(RICHRECQCROOT)/options

# Used packages. Specify the version, * at the end specifies 'any revision'
#============================================================================
use MCEvent              v*    Event
use RichRecBase          v*    Rich
use MCInterfaces         v*    Kernel
use GaudiUtils           v*

# Component library building rule
#============================================================================
library          RichRecQC  ../src/*.cpp  -import=AIDA
apply_pattern component_library library=RichRecQC

# Setup Python Configurables
#============================================================================
macro RichRecQCConfUserModules "RichRecQC.Alignment RichRecQC.Configuration"
apply_pattern install_python_modules
