ToolSvc.Offline_RichPIDTool.Likelihood2.LikelihoodThreshold      = -1e-3;
ToolSvc.Offline_RichPIDTool.Likelihood2.MaxTrackChangesPerIt     = 5;
ToolSvc.Offline_RichPIDTool.Likelihood2.MinSignalForNoLLCalc     = 1e-3;

