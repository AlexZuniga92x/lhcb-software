//-----------------------------------------------------------------------------------------------------
// Configure the RichTrackSegment maker
// The slow but precise one
//-----------------------------------------------------------------------------------------------------
ToolSvc.Offline_RichToolRegistry.Tools += { "Rich::Rec::DetailedTrSegMakerFromRecoTracks/TrSegMaker" };
//ToolSvc.Offline_RichTrackCreator.TrSegMaker.PrimaryTrackExtrapolator = "TrackHerabExtrapolator";
//ToolSvc.Offline_RichTrackCreator.TrSegMaker.BackupTrackExtrapolator  = "TrackParabolicExtrapolator";
ToolSvc.Offline_RichTrackCreator.TrSegMaker.PrimaryTrackExtrapolator = "TrackParabolicExtrapolator";
ToolSvc.Offline_RichTrackCreator.TrSegMaker.BackupTrackExtrapolator  = "TrackLinearExtrapolator";
// which radiators to use                                    Aerogel   C4F10    CF4
ToolSvc.Offline_RichTrackCreator.TrSegMaker.UseRadiators = { false,     true,    true   };
// options
ToolSvc.Offline_RichTrackCreator.TrSegMaker.ExtrapolateFromReference = false;
ToolSvc.Offline_RichTrackCreator.TrSegMaker.SegmentType              = "AllStateVectors";
//ToolSvc.Offline_RichTrackCreator.TrSegMaker.MinRadiatorPathLength    = { 0,0,0 };
ToolSvc.Offline_RichTrackCreator.TrSegMaker.MinRadiatorPathLength    = { 0*mm,   500*mm,  1500*mm };
ToolSvc.Offline_RichTrackCreator.TrSegMaker.CheckBeamPipe            = { false,  true,    false   };
ToolSvc.Offline_RichTrackCreator.TrSegMaker.ZTolerances              = { 800*mm, 2000*mm, 3000*mm };
