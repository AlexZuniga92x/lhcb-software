
// Options to create RichRecTracks from Track reconstructed information

// Define the RichRecTrack creator
ToolSvc.Offline_RichToolRegistry.Tools += { "Rich::Rec::TrackCreatorFromRecoTracks/RichTrackCreator" };

// Input track location
//ToolSvc.Offline_RichTrackCreator.TracksLocation = "Hlt/Track/Forward";

// Momentum cuts ( in the for tracktype/minP/maxP )
//ToolSvc.Offline_RichTrackCreator.TrackSelector.TrackAlgs = { "Seed","Match","Forward","KsTrack","VeloTT" };
//ToolSvc.Offline_RichTrackCreator.TrackSelector.TrackAlgs = { "Forward","Match" };
ToolSvc.Offline_RichTrackCreator.TrackSelector.TrackAlgs = { "Forward" };
ToolSvc.Offline_RichTrackCreator.TrackSelector.VeloTT.MinPCut  = 1;
ToolSvc.Offline_RichTrackCreator.TrackSelector.KsTrack.MinPCut = 1;
ToolSvc.Offline_RichTrackCreator.TrackSelector.Seed.MinSeedLikelihood = -15;
ToolSvc.Offline_RichTrackCreator.TrackSelector.Match.MaxMatchChi2 = 200;
 
// define the RichTrackSegment nickname to use
ToolSvc.Offline_RichTrackCreator.TrackSegmentTool = "TrSegMaker";

/*
