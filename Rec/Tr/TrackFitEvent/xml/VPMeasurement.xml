<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE gdd SYSTEM 'gdd.dtd'>
<gdd>
  <package name = 'TrackFitEvent'>
    <class name = 'VPMeasurement'
           author = 'Heinrich Schindler'
           desc = 'Measurement made from a VPCluster'
           defaultconstructor = 'FALSE'
           serializers = 'FALSE'>
      <base name = 'LHCb::Measurement'/>
      <import name = 'Event/Measurement'/>
      <import name = 'Event/VPCluster'/>
      <import name = 'TrackInterfaces/IVPClusterPosition'/>
      <import name = 'DeVP' namespace = '::' soft = 'FORWARDONLY'/>
      <import name = 'StateVector' soft = 'FORWARDONLY'/>

      <enum name = 'VPMeasurementType'
            desc = 'x or y measurement'
            value = 'X = 1, Y = 2'
            access = 'PUBLIC'/>

      <constructor desc = 'Constructor from a VPCluster'>
        <arg type = 'DeVP' name = 'det' const = 'TRUE'/>
        <arg type = 'LHCb::VPCluster' name = 'cluster' const = 'TRUE'/>
        <arg type = 'IVPClusterPosition' name = 'clusPosTool' const = 'TRUE'/>
        <arg type = 'VPMeasurement::VPMeasurementType' name = 'xy'/>
      </constructor>
      <constructor desc = 'Constructor from a VPCluster and track state'>
        <arg type = 'DeVP' name = 'det' const = 'TRUE'/>
        <arg type = 'LHCb::VPCluster' name = 'cluster' const = 'TRUE'/>
        <arg type = 'IVPClusterPosition' name = 'clusPosTool' const = 'TRUE'/>
        <arg type = 'VPMeasurement::VPMeasurementType' name = 'xy'/>
        <arg type = 'LHCb::StateVector' name = 'ref' const = 'TRUE'/>
      </constructor>
      <constructor desc = 'Copy constructor'>
        <arg type = 'LHCb::VPMeasurement' name = 'other' const = 'TRUE'/>
      </constructor>

      <attribute type = 'Gaudi::XYZPoint'
                 name = 'position'
                 desc = 'Coordinates of the cluster'/>
      <attribute type = 'VPMeasurementType'
                 name = 'projection'
                 desc = 'x or y measurement'/>
      <attribute type = 'const LHCb::VPCluster*'
                 name = 'cluster'
                 desc = 'Pointer to the VPCluster'
                 getMeth = 'FALSE'
                 setMeth = 'FALSE'/>

      <method name = 'init'
              desc = 'Initialize the data members'
              access = 'PUBLIC'>
        <arg type = 'DeVP' name = 'det' const = 'TRUE'/>
        <arg type = 'IVPClusterPosition::toolInfo' name = 'info'
             const = 'TRUE'/>
      </method>
      <method type = 'const LHCb::VPCluster*'
              name = 'cluster'
              desc = 'Retrieve pointer to the VPCluster'
              const = 'TRUE'>
        <code>return m_cluster;</code>
      </method>
      <method type = 'LHCb::VPMeasurement*'
              name = 'clone'
              desc = 'Clone the VPMeasurement'
              virtual = 'TRUE'
              const = 'TRUE'>
        <code>return new LHCb::VPMeasurement(*this);</code>
      </method>
    </class>
  </package>
</gdd>

