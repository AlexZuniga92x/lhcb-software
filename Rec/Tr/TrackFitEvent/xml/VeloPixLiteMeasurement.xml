<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE gdd SYSTEM 'gdd.dtd'>
<gdd>
  <package name='TrackFitEvent'>

<!-- ================ MuonMeasurement class definition ================ -->

    <class
      name        = 'VeloPixLiteMeasurement'
      author      = 'Victor Coco, based on MuonMeasurement class'
      desc        = 'VeloPixLiteMeasurement is a measurement made from a VeloPixLite cluster'
      defaultconstructor ='FALSE'
      serializers = 'FALSE'>

      <base name='LHCb::Measurement' />
      <import name='Event/Measurement' />
      <import name='Event/VeloPixLiteCluster' />
      <import name='TrackInterfaces/IVeloPixClusterPosition'/>
      <import name='DeVeloPix' namespace='::' soft='FORWARDONLY'/>
      <import name='StateVector' soft='FORWARDONLY'/>
      <import name='DeVeloPixSquareType' namespace='::' soft='FORWARDONLY'/>

      <enum
        name   = 'VeloPixLiteMeasurementType'
        desc   = 'x or y measurement'
        value  = 'X=1,
	          Y=2'
        access = 'PUBLIC' />

      <constructor
        desc = 'Constructor from a VeloPixLitCluster'>
        <arg type='DeVeloPix' name='velopixdet' const='TRUE' />
        <arg type='LHCb::VeloPixLiteCluster' name='cluster' const='TRUE' />
        <arg type = 'IVeloPixClusterPosition' name = 'clusPosTool' const='TRUE' />
        <arg type='VeloPixLiteMeasurement::VeloPixLiteMeasurementType' name='xy' />
      </constructor>

      <constructor
        desc = 'Constructor from a VeloPixLitCluster with known TrState'>
        <arg type='DeVeloPix' name='velopixdet' const='TRUE' />
        <arg type='LHCb::VeloPixLiteCluster' name='cluster' const='TRUE' />
        <arg type = 'IVeloPixClusterPosition' name = 'clusPosTool' const='TRUE' />
        <arg type='VeloPixLiteMeasurement::VeloPixLiteMeasurementType' name='xy' />
        <arg type='LHCb::StateVector' name='refVector' const='TRUE' />
      </constructor>


     <constructor
        desc = 'Copy constructor'>
        <arg type='LHCb::VeloPixLiteMeasurement' name='other' const='TRUE'/>
      </constructor>

      <method
        name   = 'init'
        desc   = 'Initialize the data members'
        access = 'PUBLIC'>
        <arg type = 'DeVeloPix' name = 'det' const='TRUE' />
        <arg type = 'IVeloPixClusterPosition::toolInfo' name = 'clusinfo'
	  const='TRUE' />
      </method>

      <attribute
        type = 'Gaudi::XYZPoint'
        name = 'position'
        desc = 'Position of the pixel center'/>

      <attribute
        type = 'VeloPixLiteMeasurementType'
        name = 'veloPixProjection'
        desc = 'x or y veloPix measurement'/>

      <attribute
        type = 'const LHCb::VeloPixLiteCluster*'
        name = 'cluster'
        desc = 'Pointer to the VeloPixLiteCluster'
	getMeth = 'FALSE'
        setMeth = 'FALSE'  />

      <method
        type  = 'const LHCb::VeloPixLiteCluster*'
        name  = 'cluster'
        desc  = 'Retrieve const  Pointer to the VeloPixLiteCluster'
        const = 'TRUE'>
        <code>
  return m_cluster;
        </code>
      </method>


      <method
        type    = 'LHCb::VeloPixLiteMeasurement*'
        name    = 'clone'
        desc    = 'Clone the VeloPixLiteMeasurement'
        virtual = 'TRUE'
        const   = 'TRUE'>
        <code>
          return new LHCb::VeloPixLiteMeasurement(*this);
        </code>
      </method>


     <method
       type = 'const DeVeloPixSquareType&amp;'
       name = 'sensor'
       desc = 'Retrieve const the sector of the measurement'
       const = 'TRUE'>
      </method>


    </class>

  </package>
</gdd>

