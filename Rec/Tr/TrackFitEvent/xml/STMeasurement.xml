<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE gdd SYSTEM 'gdd.dtd'>
<gdd>
  <package name='TrackFitEvent'>

<!-- ================ STMeasurement class definition ================ -->

    <class
      name        = 'STMeasurement'
      author      = 'Jose Hernando, Eduardo Rodrigues'
      desc        = 'STMeasurement is a measurement made from a ST cluster (of TT or IT).'
      serializers = 'FALSE'>

      <base name='LHCb::Measurement' />
      <import name='Event/Measurement' />
      <import name='Event/STCluster' />
      <import name='STDet/DeSTDetector'/>
      <import name='Kernel/ISTClusterPosition' />

      <constructor
        desc = 'Constructor from an STCluster'>
        <arg type='LHCb::STCluster' name='stCluster' const='TRUE' />
        <arg type='DeSTDetector' name='det' const='TRUE' />
        <arg type='ISTClusterPosition' name='stClusPosTool' />
        <arg type='Gaudi::TrackVector' name='refVector' const='TRUE'/>
      </constructor>

      <constructor
        desc = 'Constructor from an STCluster'>
        <arg type='LHCb::STCluster' name='stCluster' const='TRUE' />
        <arg type='DeSTDetector' name='det' const='TRUE' />
        <arg type='ISTClusterPosition' name='stClusPosTool' />
      </constructor>

      <destructor
        desc = 'Destructor to delete m_trajectory'>
        <code>
          delete m_trajectory;
        </code>
      </destructor>

      <attribute
        type = 'const LHCb::STCluster*'
        name = 'cluster'
        desc = 'Pointer to the STCluster'
        getMeth = 'FALSE' />

      <method
        name   = 'init'
        desc   = 'Initialize the data members'
        access = 'PRIVATE'>
        <arg type='LHCb::STCluster' name='stCluster' const='TRUE' />
        <arg type='DeSTDetector' name='det' const='TRUE' />
        <arg type='ISTClusterPosition' name='stClusPosTool' />
        <arg type='bool' name='refIsSet'/>
      </method>

      <method
        type  = 'const LHCb::STCluster*'
        name  = 'cluster'
        desc  = 'Retrieve const  Pointer to the STCluster'
        const = 'TRUE'>
        <code>
          return m_cluster;
        </code>
      </method>

      <method
        type    = 'LHCb::STMeasurement*'
        name    = 'clone'
        desc    = 'Clone the STMeasurement'
        virtual = 'TRUE'
        const   = 'TRUE'>
        <code>
          LHCb::STMeasurement* me = new LHCb::STMeasurement();
          *me = *this; return me;
        </code>
      </method>

      <method
        name    = 'update'
        desc    = 'Update measurement parameters'
        argList = 'const Gaudi::TrackVector refVector'
        virtual = 'TRUE'>
        <code>
          this->setRefVector( refVector );
        </code>
      </method>

    </class>

  </package>
</gdd>

