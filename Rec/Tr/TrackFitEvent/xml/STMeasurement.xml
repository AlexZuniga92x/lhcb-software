<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE gdd SYSTEM 'gdd.dtd'>
<gdd>
  <package name='TrackFitEvent'>

<!-- ================ STMeasurement class definition ================ -->

    <class
      name        = 'STMeasurement'
      author      = 'Jose Hernando, Eduardo Rodrigues'
      desc        = 'STMeasurement is a measurement made from a ST cluster (of TT or IT).'
      serializers = 'FALSE'>

      <base name='LHCb::Measurement' />
      <import name='Event/Measurement' />
      <import name='Event/STCluster' />
      <import name='STDet/DeSTDetector'/>
      <import name='Kernel/ISTClusterPosition' />

      <constructor
        desc = 'Constructor from an ITCluster'
        argList = 'LHCb::STCluster stCluster,
                   DeSTDetector det,
                   ISTClusterPosition stClusPosTool' >
        <arg
        type = 'LHCb::STCluster'
        name = 'stCluster'
        const = 'FALSE' />

        <arg
        type = 'DeSTDetector'
        name = 'det'
        const = 'FALSE' />

        <arg
        type = 'ISTClusterPosition'
        name = 'stClusPosTool'
        const = 'FALSE' />

      </constructor>

      <attribute
        type = 'LHCb::STCluster*'
        name = 'cluster'
        desc = 'Pointer to the STCluster'/>

      <method
        type    = 'LHCb::STMeasurement*'
        name    = 'clone'
        desc    = 'Clone the STMeasurement'
        virtual = 'TRUE'
        const   = 'TRUE'>
        <code>
  LHCb::STMeasurement* me = new LHCb::STMeasurement(); *me = *this; return me;
        </code>
      </method>

      <method
        name    = 'update'
        desc    = 'Update measurement parameters'
        argList = 'const Gaudi::TrackVector refVector'
        virtual = 'TRUE'>
      </method>

    </class>

  </package>
</gdd>

