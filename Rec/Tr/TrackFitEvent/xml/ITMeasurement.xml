<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE gdd SYSTEM 'gdd.dtd'>
<gdd>
  <package name='TrackFitEvent'>

<!-- ================ ITMeasurement class definition ================ -->

    <class
      name        = 'ITMeasurement'
      author      = 'Jose Hernando, Eduardo Rodrigues'
      desc        = 'ITMeasurement is a measurement made from a IT cluster.'
      serializers = 'FALSE'>

      <base name='Measurement' />

      <import name='Event/Measurement' />
      <import name='Event/ITCluster' />

      <import name='STDet/DeSTDetector'/>
      <import name='STTools/ISTClusterPosition' />

      <constructor
        desc = 'Constructor from an ITCluster'>
        <arg type='ITCluster' name='itCluster' />
        <arg type='DeSTDetector' name='det' />
        <arg type='ISTClusterPosition' name='itClusPosTool' />
      </constructor>

      <attribute
        type = 'ITCluster*'
        name = 'cluster'
        desc = 'Pointer to the ITCluster'/>

      <method
        type    = 'ITMeasurement*'
        name    = 'clone'
        desc    = 'Clone the ITMeasurement'
        const   = 'TRUE'>
        <code>
  ITMeasurement* me = new ITMeasurement(); *me = *this; return me;
        </code>
      </method>

    </class>

  </package>
</gdd>

