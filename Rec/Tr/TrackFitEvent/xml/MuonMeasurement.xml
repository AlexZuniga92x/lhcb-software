<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE gdd SYSTEM 'gdd.dtd'>
<gdd>
  <package name='TrackFitEvent'>

<!-- ================ MuonMeasurement class definition ================ -->

    <class
      name        = 'MuonMeasurement'
      author      = 'Jose Hernando, Miriam Gandelman, Erica Polycarpo'
      desc        = 'MuonMeasurement is a measurement made from a Muon Hit'
      serializers = 'FALSE'>

      <base name='LHCb::Measurement' />
      <import name='Event/Measurement' />
      <import name='Kernel/MuonTileID' />

      <constructor
        desc = 'Constructor from a Muon Hit'>
        <arg type='LHCb::LHCbID' name='lhcbID' const='TRUE' />
        <arg type='Gaudi::XYZPoint' name='position' const='TRUE' />
        <arg type='double' name='dx' />
        <arg type='double' name='dy' />
      </constructor>

     <constructor
        desc = 'Copy constructor'>
        <arg type='LHCb::MuonMeasurement' name='other' const='TRUE'/>
      </constructor>

      <attribute
        type = 'Gaudi::XYZPoint'
        name = 'position'
        desc = 'Position of the pad center'/>

      <attribute
        type = 'double'
        name = 'dx'
        desc = 'Half of pad length in x'/>

      <attribute
        type = 'double'
        name = 'dy'
        desc = 'Half of pad length in y'/>

     <attribute
        type    = 'std::auto_ptr &lt; LHCb::Trajectory &gt;'
        name    = 'trajectoryY'
        desc    = 'the trajectory representing the Y measurement (owner)'
        access  = 'PROTECTED'
        setMeth = 'FALSE' />
	
      <method
        type    = 'LHCb::MuonMeasurement*'
        name    = 'clone'
        desc    = 'Clone the MuonMeasurement'
        virtual = 'TRUE'
        const   = 'TRUE'>
        <code>
          return new LHCb::MuonMeasurement(*this);
        </code>
      </method>

      <method
        type    = 'double'
        name    = 'errX2'
        desc    = 'X error squared'
        const   = 'TRUE'>
        <code>
          return m_dx*m_dx/3.;
        </code>
      </method>

      <method
        type    = 'double'
        name    = 'errY2'
        desc    = 'Y error squared'
        const   = 'TRUE'>
        <code>
          return m_dy*m_dy/3.;
        </code>
      </method>

    </class>

  </package>
</gdd>

