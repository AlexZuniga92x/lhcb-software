                     WIN32 " libHist.lib libGpad.lib libGraf.lib" \
                    osx104 " -lHist -lMatrix -lGpad -lGraf"
macro_append ROOT_linkopts "" \
       ROOT_GE_5_15&osx104 " -lNet "
