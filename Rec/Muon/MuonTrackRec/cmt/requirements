package MuonTrackRec
version v2r6


# ================ structure =========================================

branches src cmt doc options

include_dirs      $(MUONTRACKRECROOT)

# ================ used packages =========================================
# requires MuonDAQ v4r4 (head) or later
#
use MuonDAQ      v*     Muon
#
use MuonDet      v*     Det
use GaudiAlg     v*
#
use MCEvent     v*      Event
use LinkerEvent v*      Event

use TrackTools  v*      Tr
use Magnet      v*      Det

use TrackTools  v*      Tr
use Magnet      v*      Det

library MuonTrackRecLib  ../src/Lib/*.cpp
library MuonTrackRec  *  ../src/component/*.cpp


# =============== LCG Dictionaries ============================================
apply_pattern reflex_dictionary                                                 \
              dictionary=MuonTrackRec                                       \
              headerfiles=$(MUONTRACKRECROOT)/dict/dict.h     \
              selectionfile=$(MUONTRACKRECROOT)/dict/dict.xml \
              options="-U__MINGW32__"

apply_pattern linker_library library=MuonTrackRecLib
apply_pattern component_library library=MuonTrackRec

#===============================================================
