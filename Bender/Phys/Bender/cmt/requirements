package           Bender
version           v6r0

# ============================================================================
branches          cmt doc src python

# =============== environemnt =================================================
set               BENDERPYTHON $(BENDERROOT)/python

# =============== dependencies ================================================
use               HbookCnv    v* 
use               BenderDict  v*  Phys 
use               PhysDict    v*  Phys 
use               LoKiDict    v*  Phys 
use               LoKi        v*  Phys
use               DaVinci     v*  Phys 	

# =============== consituents =================================================

# =============== paths =======================================================
path_remove       PYTHONPATH "/Bender/" WIN32 "\Bender\"              
path_prepend      PYTHONPATH "$(BENDERPYTHON)"
path_remove       PATH       "/Bender/" WIN32 "\Bender\"                
path_prepend      PATH       "$(BENDERROOT)/$(BINDIR)"

# =============== set the Bender version = v * 100000 + r * 100 + p ==========
macro_append      app_Bender_cppflags " -DBenderVersion=600000 " \
                  VisualC             " /DBenderVersion=600000 "

# =============== standard patterns ===========================================
apply_pattern     application_path 


