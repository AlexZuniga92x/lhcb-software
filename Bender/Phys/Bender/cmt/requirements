package           Bender
version           v2r0

#============================================================================
branches          cmt doc src python

# =============== dependencies ================================================
use               BenderDict  v2r*  Tools 
use               DaVinci     v11r* Phys 
	
# =============== consituents =================================================
application       Bender      Bender.cpp

# =============== paths =======================================================
path_remove       PYTHONPATH "/Bender/" WIN32 "\Bender\"              
path_prepend      PYTHONPATH "$(BENDERROOT)/python"
path_remove       PATH       "/Bender/" WIN32 "\Bender\"                
path_prepend      PATH       "$(BENDERROOT)/$(BINDIR)"


macro PYSEAL "/afs/cern.ch/sw/lcg/app/releases/SEAL/$(SEAL_native_version)"
path_append       PYTHONPATH $(PYSEAL)/src/Scripting/PyROOT/src
macro PYPI   "/afs/cern.ch/sw/lcg/app/releases/PI/$(PI_native_version)"
path_append       PYTHONPATH $(PYPI)/src/AnalysisServices/PyAIDAProxy"

# =============== application macro ===========================================
path_remove       LD_PRELOAD  GaudiKernel
path_append       LD_PRELOAD  "" \
	          Linux $(GAUDIKERNELROOT)/$(CMTCONFIG)/libGaudiKernel.so

# =============== application macro ===========================================
macro             Bender_linkopts    "${application_linkopts}"

# =============== set the Bender version = v * 100000 + r * 100 + p ==========
macro_append      app_Bender_cppflags " -DBenderVersion=200000 " \
                  VisualC             " /DBenderVersion=200000 "

# =============== standard patterns ===========================================
apply_pattern     application_path 

