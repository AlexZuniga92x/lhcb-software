package           Bender
version           v4r7

# ============================================================================
branches          cmt doc src python

# =============== environemnt =================================================
set               BENDERPYTHON $(BENDERROOT)/python

# =============== dependencies ================================================
use               DaVinci     v*  Phys 	

use               BenderGCC   v*  Tools 
use               BenderDict  v*  Tools 
use               BenderRels  v*  Tools 
use               BenderDet   v*  Det  
use               LoKiHybrid  v*  Tools 

# =============== consituents =================================================
application       Bender      -import=Boost Bender.cpp

# =============== paths =======================================================
path_remove       PYTHONPATH "/Bender/" WIN32 "\Bender\"              
path_prepend      PYTHONPATH "$(BENDERPYTHON)"
path_remove       PATH       "/Bender/" WIN32 "\Bender\"                
path_prepend      PATH       "$(BENDERROOT)/$(BINDIR)"

# =============== application macro ===========================================
macro             Bender_linkopts    "${application_linkopts}"

# =============== set the Bender version = v * 100000 + r * 100 + p ==========
macro_append      app_Bender_cppflags " -DBenderVersion=400400 " \
                  VisualC             " /DBenderVersion=400400 "

# =============== standard patterns ===========================================
apply_pattern     application_path 


# ============================================================================
# $Log: not supported by cvs2svn $
