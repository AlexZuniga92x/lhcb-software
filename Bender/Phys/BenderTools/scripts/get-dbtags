# =============================================================================
__author__  = "Thomas RUF, Vanya BELYAEV"
__date__    = "2012-10-24"
__version__ = "$Revision: 189704 $"
# =============================================================================
import ROOT
ROOT.PyConfig.IgnoreCommandLineOptions = True
# =============================================================================
# logging 
# =============================================================================
from Bender.Logger import getLogger, make_colors
make_colors ()
if '__main__' == __name__ : logger = getLogger ( 'get-db-tags' )
else                      : logger = getLogger ( __name__      )
# =============================================================================

if '__main__' == __name__ :
    
    logger.info ( 100*'*')
    logger.info ( __doc__ ) 
    logger.info ( 100*'*')
    logger.info ( ' Author  : %s ' % __author__   ) 
    logger.info ( ' Version : %s ' % __version__  ) 
    logger.info ( ' Date    : %s ' % __date__     )
    logger.info ( 100*'*')
    
    from BenderTools.GetDBtags  import extractTags 
    import sys
    extractTags ( sys.argv[1:] )
    
# =============================================================================
# The END 
