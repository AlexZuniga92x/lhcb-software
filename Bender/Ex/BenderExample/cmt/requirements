package          BenderExample
author           Vanya BELYAEV
version          v4r6

# ============== structure ===================================================
branches         cmt doc src test python options jobs 

# ============== environment =================================================
set              BENDEREXAMPLEPYTHON  $(BENDEREXAMPLEROOT)/python
set              BENDEREXAMPLEOPTS    $(BENDEREXAMPLEROOT)/options
set              BENDEREXAMPLEJOBS    $(BENDEREXAMPLEROOT)/jobs 

# ============== dependencies ================================================
use              Bender      v* Phys 
use              BenderVis   v* Vis  
use              LoKiExample v* Ex 

use              LoKiHybrid  v* Tools 
use              LoKiHlt     v* Tools 

# ============== nesessary paths =============================================
path_remove      PYTHONPATH "BenderExample" 
path_prepend     PYTHONPATH "$(BENDEREXAMPLEROOT)/python"
path_remove      PATH        "BenderExample" 
path_prepend     PATH        "$(BENDEREXAMPLEPYTHON)"
path_prepend     PATH        "$(BENDEREXAMPLEJOBS)"

# ============== patterns =====================================================
apply_pattern    application_path 

