package           BenderTutor
version           v4r5

# =============== structure ==================================================
branches          cmt doc python options solution

# =============== environment ================================================
set               BENDERTUTORPYTHON    $(BENDERTUTORROOT)/python
set               BENDERTUTORSOLUTION  $(BENDERTUTORROOT)/solution
set               BENDERTUTOROPTS      $(BENDERTUTORROOT)/options

path_remove       PYTHONPATH 'BenderTutor'
path_append       PYTHONPATH $(BENDERTUTORPYTHON)
path_append       PYTHONPATH $(BENDERTUTORSOLUTION)

path_remove       PATH  'BenderTutor/python'   WIN32 'BenderTutor\python'
path_remove       PATH  'BenderTutor/solution' WIN32 'BenderTutor\solution'
path_append       PATH  $(BENDERTUTORPYTHON)
path_append       PATH  $(BENDERTUTORSOLUTION)

# =============== dependencies ===============================================
use               BenderExample      v*    Ex
use               BenderUser         v*    Phys 
# ============================================================================

# =============== standard patterns ===========================================
apply_pattern     application_path 

