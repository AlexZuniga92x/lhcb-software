package           BenderTutor
version           v8r0

# =============== structure ==================================================
branches          cmt doc python options solution data 

# =============== environment ================================================
set               BENDERTUTORPYTHON    $(BENDERTUTORROOT)/python
set               BENDERTUTORSOLUTION  $(BENDERTUTORROOT)/solution
set               BENDERTUTOROPTS      $(BENDERTUTORROOT)/options

path_remove       PYTHONPATH 'BenderTutor'
path_prepend      PYTHONPATH $(BENDERTUTORPYTHON)
path_append       PYTHONPATH $(BENDERTUTORROOT)/data

path_remove       PATH  'BenderTutor'
path_prepend      PATH  $(BENDERTUTORPYTHON)
path_append       PATH  $(BENDERTUTORSOLUTION)


# =============== dependencies ===============================================
use               Bender        v*    Phys 
use               BenderExample v*    Ex

# =============== standard patterns ===========================================
apply_pattern     application_path 

# ============================================================================
# The END 
# ============================================================================


