# ============================================================================
package           DisplVertices
version           v7r8

# ============================================================================
# Structure, i.e. directories to process. 
# ============================================================================
branches          cmt src options doc dict Kernel

# ============================================================================
# Used packages.
# ============================================================================
use DaVinciKernel       v* Phys

use CaloDet             v* Det
use VeloDet             v* Det
use DetDesc             v* Det
use HltEvent             v* Event

use HltInterfaces      v*    Kernel

# ============================================================================
# Eventually set new environnment values
# ============================================================================
# set name value \ 
#     name value

# ============================================================================
# Component library building rule
# ============================================================================
library     DisplVertices    ../src/*.cpp -import=AIDA

# ============================================================================
# define component library link options
# ============================================================================
apply_pattern component_library library=DisplVertices


apply_pattern install_more_includes more =Kernel


# =============== LCG Dictionaries ============================================
apply_pattern reflex_dictionary                                                     \
              dictionary=DisplVertices                                              \
              headerfiles=$(DISPLVERTICESROOT)/dict/DisplVerticesDict.h     \
              selectionfile=$(DISPLVERTICESROOT)/dict/DisplVerticesDict.xml \
              options="-U__MINGW32__"

