package AlignmentSys
version v4r7

branches cmt doc
 
#=======================================================
# LHCb Alignment packages
#=======================================================

# General purpose components
use AlignmentInterfaces	v3r2	Alignment # Johan Blouw
use AlignmentTools      v3r1    Alignment # Sebastien Viret
use AlignEvent		v1r1    Alignment # Wouter Hulsbergen
use AlignKernel		v3r2    Alignment # Adlene Hicheur, Wouter Hulsbergen
use AlignSolvTools	v3r0	Alignment # A. Hicheur, W. Hulsbergen
use AlignTrTools	v4r6p1	Alignment # Johan Blouw, Adlene Hicheur, Louis Nicolas
use TAlignment		v4r8	Alignment # Jan Amoraal, Johan Blouw, Marc Deissenroth, Florin Maciuc
use AlignT2Velo         v1r1    Alignment # Steve Blusk
use VeloAlignment	v4r8	Alignment # Marco Gersabeck
use MisAligner		v1r2	Alignment # Johan Blouw, Manuel Schiller
use Escher		v4r5	Alignment # Johan Blouw

#=======================================================
# LHCb Calibration packages
#=======================================================

use OTCalibration	v1r4	Calibration # Wouter Hulsbergen


# Declare this as a container package
apply_pattern container_package

# Allow the generation of QMTest summary 
apply_pattern QMTestSummarize

#============================================================================
# Install the configurable
apply_pattern install_python_modules

