#============================================================================
# Created    : 2013-01-23
# Maintainer : Jack Wimberley
#============================================================================
package           MassMonitor
version           v1r1

#============================================================================
# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc src data MassMonitor
#============================================================================
# Used packages. Specify the version, * at the end specifies 'any revision'
#    Put as many lines as needed, with all packages, without the '#'
#============================================================================
# use   Package      v1r*    Hat
use   GaudiAlg        	v*
use   GaudiUtils        v*
use   TrackKernel	v*	Tr
use   PartProp          v*      Kernel
use   PhysEvent         v*      Event
use   DAQEvent            v*    Event
use ROOT          	v*      LCG_Interfaces
use roofit	  	v*      LCG_Interfaces
#============================================================================
# Include directories
#============================================================================
apply_pattern install_more_includes more=MassMonitor

#============================================================================
# Component library building rule
#============================================================================
library MassBiasesMonitor ../src/MassBiasesMonitor.cpp -import=AIDA
#============================================================================
# define component library link options
#============================================================================
apply_pattern component_library library=MassBiasesMonitor
apply_pattern install_python_modules

#============================================================================
# Application building rule (1)
#============================================================================
application       MassBiasesFitter ../src/MassBiasesFitter.cpp ../src/SplitFitter.cpp
macro_append      MassBiasesFitter_cppflags "-g"
macro_append      ROOT_linkopts " -lRooFitCore -lRooFit -lMatrix -lMathCore -lMathMore -lCintex -lGraf -lGpad"
macro             MassBiasesFitter_use_linkopts $(use_linkopts)

#============================================================================
# Application building rule (2)
#============================================================================
application       MassShiftFitter ../src/MassShiftFitter.cpp
macro_append      MassShiftFitter_cppflags "-g"
macro_append      ROOT_linkopts " -lRooFitCore -lRooFit -lMatrix -lMathCore -lMathMore -lCintex -lGraf -lGpad"
macro             MassShiftFitter_use_linkopts $(use_linkopts)

#============================================================================
# Application alias rule
#============================================================================
alias MassBiasesFitter $(MASSMONITORROOT)/$(CMTCONFIG)/MassBiasesFitter.exe
alias MassShiftFitter $(MASSMONITORROOT)/$(CMTCONFIG)/MassShiftFitter.exe
