package Escher
version v1r3

branches doc cmt job options

#-- CMT and GaudiPolicy
use GaudiPolicy v*

#-- External libraries now taken from LCG, version defined by GaudiEnv
use RELAX v* LCG_Interfaces          -no_auto_imports

#-- Gaudi libraries (from GAUDI_v18r10)
use GaudiKernel		v*
use GaudiSvc 		v*        -no_auto_imports
use GaudiAlg 		v*         -no_auto_imports
use GaudiAud 	        v*         -no_auto_imports
use GaudiGSL		v*         -no_auto_imports
use GaudiPoolDb	        v*         -no_auto_imports
use RootHistCnv         v*         -no_auto_imports

#-- Database
use XmlDDDB             v*   Det  -no_auto_imports
use XmlConditions       v*    Det  -no_auto_imports
use FieldMap		v*         -no_auto_imports
use ParamFiles          v*         -no_auto_imports
#use BrunelDQ           v*    DQ   -no_auto_imports

#-- LHCb libraries (from LHCB_v21r11)
use LHCb                v*        -no_auto_imports

#-- Lbcom packages (from LBCOM_v5r8)
use LbcomSys            v*       -no_auto_imports

#-- Rec packages (from REC_v3r13)
use RecSys              v*         -no_auto_imports

#-- Alignment packages
use AlignmentSys        v1r2         -no_auto_imports

#
#===== build Escher =========================
application Escher $(GAUDICONFROOT)/src/GaudiMain.cpp
# ========================= set macros ============================

macro Escher_linkopts    "$(application_linkopts)"

apply_pattern application_path

# Set the default path for Escher options.
set ESCHEROPTS ${ESCHERROOT}/options
