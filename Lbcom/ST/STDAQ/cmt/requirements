package STDAQ
version v2r2

branches cmt doc src options

include_dirs $(STDAQROOT)

# Use here packages needed by link library and public interface
use STDet        v*  Det
use STEvent      v*  Event
use DAQEvent     v*  Event
use LHCbKernel   v*  Kernel
use GaudiKernel  v*
use SiDAQ        v*  Si

#---- link library
library STDAQLib ../src/Lib/*.cpp 

# macro_append cppflags ' -Weffc++'

#component
library STDAQ ../src/component/*.cpp -import=GSL

# standard patterns (order is essential!)
apply_pattern component_library library=STDAQ
apply_pattern linker_library    library=STDAQLib

private
# Use here packages needed only by component library
use DetDesc      v*  Det
use GaudiAlg     v*
use GSL          v*  LCG_Interfaces -no_auto_imports
