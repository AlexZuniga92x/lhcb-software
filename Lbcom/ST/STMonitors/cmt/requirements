package STMonitors
version v1r0

#============================================================================
# Structure, i.e. directories to process. 
#============================================================================

branches STMonitors src cmt doc

#============================================================================
# Used packages. 
#============================================================================

 
use STTELL1Event v*  ST
use STKernel     v*  ST
apply_pattern ld_library_path
private


use GaudiAlg      v* 

use AIDA          v*    LCG_Interfaces

#-----------------------------------------------------------------
# library building rule

library STMonitors ../src/*.cpp

#-----------------------------------------------------------------
# component library link options
apply_pattern component_library library=STMonitors

macro_append cppflags ' -ggdb -g3 -O0'
