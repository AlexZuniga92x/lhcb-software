package           RichMCTools
version           v1r0

#============================================================================
# Structure
#============================================================================
branches          cmt doc src RichMCTools

#============================================================================
# Environment
#============================================================================
include_dirs $(RICHMCTOOLSROOT)

#============================================================================
# Used packages.
#============================================================================
use   RichUtils      v3r*    Rich
use   RichDetTools   v3r*    Rich
use   RichEvent      v7r*    Event

#============================================================================
# Component library building rule
#============================================================================
library          RichMCTools    ../src/*.cpp


#============================================================================
# define component library link options
#============================================================================
apply_pattern    component_library library=RichMCTools
