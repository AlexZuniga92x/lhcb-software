package LbcomSys
version v7r9

branches doc cmt

#===============================================================
# LHCb packages shared by Boole and other applications
#===============================================================

# Common
use Associators       v3r7    Associators # Matt Needham

# Calorimeter
use CaloAssociators   v6r10   Calo      # Olivier Deschamps
use CaloTools         v5r13   Calo      # Olivier Deschamps

# HLT
use HltDAQ            v1r1p1  Hlt       # Tomasz Skwarnicki

# L0 trigger simulation
use L0Calo            v10r1   L0        # Olivier Deschamps, Patrick Robbe
use L0DU              v9r0    L0        # Olivier Deschamps   
use L0Muon            v8r5p2  L0        # Andrei Tsarogorodtsev, Julien Cogan
use L0MuonMonitor     v1r5    L0        # Julien Cogan
use PuVeto            v7r3p1  L0        # Marko Zupan

# Muon
use MuonAssociators   v3r2    Muon      # Alessia Satta

# Outer tracker
use OTAssociators     v4r3    OT        # Jan Amoraal
use OTMonitor         v3r0    OT        # Wouter Hulsbergen

# Rich
use RichAlgorithms    v1r2    Rich      # Chris Jones
use RichDAQ           v3r26   Rich      # Chris Jones
use RichMCMonitors    v1r7p1  Rich      # Chris Jones
use RichMCTools       v3r13   Rich      # Chris Jones
use RichTools         v2r28   Rich      # Chris Jones

# Silicon detectors
use SiTools           v1r7p1  Si        # Matt Needham

# Silicon Tracker
use STAlgorithms      v3r10   ST        # Jeroen van Tilburg, Matt Needham
use STAssociators     v1r6    ST        # Jeroen van Tilburg, Matt Needham
use STCheckers        v2r14   ST        # Jeroen van Tilburg, Matt Needham
use STDAQ             v3r20   ST        # Jeroen van Tilburg, Matt Needham
use STMonitors        v2r1    ST        # Mark Tobin
use STTools           v3r13   ST        # Jeroen van Tilburg, Matt Needham

# Velo
use VeloAlgorithms    v5r0    Velo      # Tomasz Szumlak
use VeloAssociators   v2r3    Velo      # Tomasz Szumlak
use VeloDAQ           v4r11   Velo      # Kurt Rinnert
use VeloSimulation    v3r6p1  Velo      # Tomasz Szumlak
use VeloTools         v3r4    Velo      # Tomasz Szumlak

# Declare this as a container package
apply_pattern container_package

# Allow the generation of QMTest summary 
apply_pattern QMTestSummarize
