package           LbcomSys
version           v14r1

branches doc cmt tests

#===============================================================
# LHCb packages shared by Boole and other applications
#===============================================================

# Patches: additional packages to override what is in LHCb v36r1 release
use FTDet v2r1 Det

# Common
use Associators       v3r8     Associators # Matt Needham

# Calorimeter
use CaloAssociators   v6r12p1  Calo      # Olivier Deschamps

# DAQ
use DAQMonitors       v1r9     DAQ       # Olivier Deschamps

# HLT
use HltDAQ            v2r17    Hlt       # Tomasz Skwarnicki

# L0 trigger simulation
use L0MuonMonitor     v2r3     L0        # Julien Cogan
use PuVeto            v7r9     L0        # Serena Oggero

# Muon
use MuonAssociators   v3r5     Muon      # Alessia Satta

# Outer tracker
use OTAssociators     v4r6     OT        # Alexandr Kozlinskiy
use OTMonitor         v3r6p1   OT        # Francesco Dettori

# Rich
use RichAlgorithms    v1r7     Rich      # Chris Jones
use RichMCMonitors    v1r10    Rich      # Chris Jones
use RichMCTools       v3r18    Rich      # Chris Jones
use RichTools         v2r42    Rich      # Chris Jones

# Silicon detectors
use SiTools           v1r9     Si        # Matt Needham

# Silicon Tracker
use STAlgorithms      v4r7     ST        # Jeroen van Tilburg
use STAssociators     v1r7     ST        # Jeroen van Tilburg
use STCheckers        v4r2     ST        # Jeroen van Tilburg
use STMonitors        v4r2p1   ST        # Mark Tobin
use STTools           v4r14p2  ST        # Jeroen van Tilburg

# Velo
use VeloAlgorithms    v5r7p1   Velo      # Tomasz Szumlak
use VeloAssociators   v2r5     Velo      # Tomasz Szumlak
use VeloSimulation    v3r14    Velo      # Tomasz Szumlak
use VeloTools         v4r2     Velo      # Tomasz Szumlak

# Velo Pixel
use VPTools           v2r1p1   VP        # Victor Coco

# Declare this as a container package
apply_pattern container_package

# Allow the generation of QMTest summary
apply_pattern QMTestSummarize

# Allow the generation of QMTests
apply_pattern QMTest
