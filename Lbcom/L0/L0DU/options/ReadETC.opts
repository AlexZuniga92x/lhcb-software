///////////////////////////////////////////////////////////////////////////////
///   Example job options to read L0 ETC created by ETC.opts                ///
///                                                                         ///
///   These options can be executed with any main program,                  ///
///   in an environment that has at least the following defined:            ///
///                                                                         ///
/// use GaudiSvc v*                                                         ///
/// use GaudiPoolDb v*                                                      ///
/// use GaudiConf v*                                                        ///
/// use HepMC v* LCG_Interfaces                                             ///
/// use DDDB v* Det                                                         ///
/// use ParamFiles v*                                                       ///
///////////////////////////////////////////////////////////////////////////////


//-------------------------------------------------------------------------
// Load the LCG dictionaries
//-------------------------------------------------------------------------
#include "$STDOPTS/DstDicts.opts"

//---------------------------------------------------------------------------
// Standard application setup
//---------------------------------------------------------------------------
#include "$STDOPTS/LHCbApplication.opts"
EventClockSvc.EventTimeDecoder = "OdinTimeDecoder";

//---------------------------------------------------------------------------
// Do something in the application. e.g., redo L0....
//---------------------------------------------------------------------------
ApplicationMgr.TopAlg = { "GaudiSequencer/L0" };  
#include "$L0DUROOT/options/L0Sequence.opts"

//---------------------------------------------------------------------------
// Define the input ETC
//---------------------------------------------------------------------------
ApplicationMgr.ExtSvc  += { "TagCollectionSvc/EvtTupleSvc" };
EventSelector.Input   = {
  "COLLECTION='TagCreator/1' DATAFILE='PFN:L0ETC.root'  TYP='POOL_ROOTTREE' SEL='(L0>0)'"};

//---------------------------------------------------------------------------
// File catalog must include the files that were used to make the ETC
//---------------------------------------------------------------------------
FileCatalog.Catalogs =  { "xmlcatalog_file:pool_xml_catalog.xml" } ;
