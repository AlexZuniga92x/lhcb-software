///////////////////////////////////////////////////////////////////////////////
///   Job options to run Brunel on L0-accepted events only                  ///
///   geometry lhcb-200601 (DC06)                                           ///
///////////////////////////////////////////////////////////////////////////////

//---------------------------------------------------------------------------
// Put the relevant Brunel main options here
//---------------------------------------------------------------------------
#include "$BRUNELOPTS/v200601.opts"

//---------------------------------------------------------------------------
// L0 sequence is defined here
//---------------------------------------------------------------------------
#include "$L0DUROOT/options/L0Sequence.opts"

//---------------------------------------------------------------------------
// Add L0 filter to the L0 sequences
//---------------------------------------------------------------------------
RecoL0Seq.Members += { "GaudiSequencer/L0", "L0Filter" }; // run L0 before Reco
MCLinksL0Seq.Members += { "L0Filter" };                   // Do MC links only for L0-yes
MoniL0Seq.Members += { "L0Filter" };                      // Do Moni only for L0-yes
CheckL0Seq.Members += { "L0Filter" };                     // Do Check only for L0-yes
OutputL0Seq.Members += { "L0Filter" };                    // Do Output only for L0-yes
DstWriter.RequireAlgs = { "L0Filter" } ;                  // Write out only L0-yes


ApplicationMgr.EvtMax = 100 ;

