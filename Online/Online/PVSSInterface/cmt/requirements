package PVSSInterface
version v1r0

branches  cmt doc
use PVSS v* Online
use PVSSManager  v* Online
use OnlineKernel v* Online
use Reflex       v* LCG_Interfaces -no_auto_imports
use Python       v* LCG_Interfaces -no_auto_imports

apply_pattern install_more_includes more=PVSSInterface offset=PVSS

library PVSSInterface *.cpp -import=Python
apply_pattern linker_library library=PVSSInterface
apply_pattern ld_library_path

path_remove  PYTHONPATH "/PVSSInterface/" WIN32 "\PVSSInterface\"
path_prepend PYTHONPATH "$(PVSSINTERFACEROOT)/scripts"
set          PYTHONHOME "$(Python_home)"
set GCCXML_CXXFLAGS "" slc4-ia32 " -m32"
macro_append gccxmlopts " -D__GCCXML "
apply_pattern reflex_dictionary dictionary=PVSSInterface \
                                headerfiles=$(PVSSINTERFACEROOT)/dict/dictionary.h \
                                selectionfile=$(PVSSINTERFACEROOT)/dict/dictionary.xml \
                                imports=Python
# Gnerate dictionary rootmap file
apply_pattern generate_rootmap library=PVSSInterfaceDict

application  PVSS00python  ../main/*.cpp
macro_append PVSS00python " -m32 " WIN32 ""
macro_append PVSS00pythonlinkopts " -m32  $(PVSS_linkopts) " WIN32 ""

private
use RELAX        v* LCG_Interfaces -no_auto_imports
