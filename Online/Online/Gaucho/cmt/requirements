package Gaucho
version v6r0

branches Gaucho src cmt doc

# add "use" statements
use GaudiKernel v*  
use AIDA v* LCG_Interfaces
use DIM v* Online

use GaudiAlg v*  

use OnlineHistDB v* Online
use OnlineKernel v* Online
use Boost v* LCG_Interfaces

macro Boost_config_version "1.35.0"
macro Boost_file_version "1_35"
macro_append Boost_linkopts " -lboost_thread-gcc34-mt -lboost_serialization-gcc34-mt -lboost_date_time-gcc34-mt "
macro_append ROOT_linkopts ' -lHist'

apply_pattern install_more_includes more=Gaucho

# build a component library
library Gaucho  ../src/components/*.cpp 
library GauchoLib  ../src/lib/*.cpp 

# define component library link options
apply_pattern component_library library="Gaucho"
apply_pattern linker_library library="GauchoLib" 
apply_pattern generate_rootmap library=Gaucho


macro_append  Gaucho_shlibflags ' -lboost_serialization-gcc34 -lpthread -lrt -lcurses ' WIN32 ' '
macro_append  GauchoLib_shlibflags ' -lboost_serialization-gcc34 -lpthread -lrt -lcurses ' WIN32 ' '



