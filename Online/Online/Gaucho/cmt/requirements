package  Gaucho
version  v7r6

branches Gaucho src cmt doc

# add "use" statements
use GaudiKernel v*
use AIDA v* LCG_Interfaces
use DIM v* Online
use GaudiAlg v*
#use Boost v* LCG_Interfaces
use ROOT v* LCG_Interfaces
use DAQEvent v* Event
use MDF      v* DAQ
use OnlineKernel v* Online

#macro_append Boost_linkopts " $(Boost_linkopts_serialization) "
macro_append ROOT_linkopts ' -lHist' WIN32 " libHist.lib "

apply_pattern install_more_includes more=Gaucho

# build a component library
library Gaucho  ../src/*.cpp

# define component library link options
apply_pattern linker_library library="Gaucho"
apply_pattern generate_rootmap  library=Gaucho
apply_pattern generate_configurables library=Gaucho

private
application Addertst ../src/Test/Addertst.cpp
macro_append  Addertst_dependencies   " Gaucho "

application RPCTest ../src/Test/RPCTest.cpp
macro_append  RPCTest_dependencies    " Gaucho "

application HistTest ../src/Test/HistTest.cpp
macro_append  HistTest_dependencies    " Gaucho "

macro_append Gaucho_shlibflags " -pthread " WIN32 ""
