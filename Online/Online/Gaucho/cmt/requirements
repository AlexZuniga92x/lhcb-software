package Gaucho
version v5r6

branches Gaucho src cmt doc

# add "use" statements
use GaudiKernel v*  
use AIDA v* LCG_Interfaces
use DIM v* Online
use GaudiAlg v*
use OnlineHistDB v* Online
use OnlineKernel v* Online
use Boost v* LCG_Interfaces

apply_pattern install_more_includes more=Gaucho

# build a component library
library Gaucho  ../src/components/*.cpp 
library GauchoLib  ../src/lib/*.cpp 

# define component library link options
apply_pattern component_library library="Gaucho"
apply_pattern linker_library library="GauchoLib" 

macro_append  Gaucho_shlibflags ' -lboost_serialization-gcc -lpthread -lrt -lcurses ' WIN32 ' '
macro_append  GauchoLib_shlibflags ' -lboost_serialization-gcc -lpthread -lrt -lcurses ' WIN32 ' '
macro_append ROOT_linkopts ' -lHist'
