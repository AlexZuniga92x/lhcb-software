package APR
version v1r0

branches  cmt
use LCG_Configuration v*
use LCG_Settings      v*

include_path none

macro APR_home '/home/frankm/apr' WIN32 'C:\Program Files\Apache Software Foundation\Apache2.2'

include_dirs  "$(APR_home)/include/apr-1" \
target-x86_64 "$(APR_home)/include64/apr-1"

macro APR_linkopts  "-L$(APR_home)/lib32 -lapr-1 " \
      target-x86_64 "-L$(APR_home)/lib64 -lapr-1 " \
      target-winxp  "/LIBPATH:$(APR_home)\lib apr-1.lib "

macro  APR_cppflags ' -DAPR_DECLARE_EXPORT '
path_remove LD_LIBRARY_PATH '/apr/'

path_append LD_LIBRARY_PATH $(APR_home)/lib32 \
              target-x86_64 $(APR_home)/lib64 \
              target-winxp  $(APR_home)/lib
