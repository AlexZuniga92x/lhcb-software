package           ZeroMQ
version           v4r1p2

#============================================================================
# Structure, i.e. directories to process.
#============================================================================
branches          cmt doc src zmq
#============================================================================
# Used packages. Specify the version, * at the end specifies 'any revision'
#    Put as many lines as needed, with all packages, without the '#'
#============================================================================
# use   Package      v1r*    Hat
use GaudiKernel v*

apply_pattern install_more_includes more=zmq
apply_pattern install_more_includes more=ZeroMQ

#============================================================================
# Component library building rule
#============================================================================
library          zmq    ../src/*.cpp
library          ZeroMQ ../component/*.cpp

#============================================================================
# define component library link options
#============================================================================
apply_pattern    linker_library library=zmq
apply_pattern    component_library library=ZeroMQ
