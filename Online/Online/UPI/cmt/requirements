package UPI
branches cmt UPI src
#
use OnlineKernel v* Online
#
apply_pattern install_more_includes more=UPI
#
library  UPI  ../src/*.cpp
library  UPIR ../src/*.cxx

apply_pattern ld_library_path
apply_pattern linker_library   library=UPI

apply_pattern library_path library=UPIR
apply_pattern library_Lshlibflags library=UPIR
apply_pattern library_stamps library=UPIR

macro lib_UPI_cppflags  " -DSCREEN "
macro lib_UPIR_cppflags ' -DREMOTE $(ppcmd)"$(ONLINEKERNELROOT)" '

private
macro_append  cppflags " -ansi -pedantic-errors -W -Wall -Woverloaded-virtual -Wno-long-long -Wnon-virtual-dtor -Wwrite-strings -Wpointer-arith -Wno-non-template-friend -Wimplicit -Wreturn-type -Wunused -Wparentheses -Wctor-dtor-privacy -pthread -fmessage-length=0 -ftemplate-depth-300 " WIN32 ""
