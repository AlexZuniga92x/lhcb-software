package UPI
branches cmt
#
use UPI v* Online -no_auto_imports
use OnlineKernel v* Online
#
library  UPIR $(UPIROOT)/src/*.cpp
macro lib_UPIR_cppflags  ' -DREMOTE $(ppcmd)"$(UPIROOT)" '
apply_pattern library_path library=UPIR
apply_pattern library_Lshlibflags library=UPIR
apply_pattern library_stamps library=UPIR

private
macro_append  cppflags " -ansi -pedantic -W -Wall -Woverloaded-virtual -Wno-long-long -Wnon-virtual-dtor -Wwrite-strings -Wpointer-arith -Wno-non-template-friend -Wimplicit -Wreturn-type -Wunused -Wparentheses -Wctor-dtor-privacy -pthread -fmessage-length=0 -ftemplate-depth-300 " WIN32 "
