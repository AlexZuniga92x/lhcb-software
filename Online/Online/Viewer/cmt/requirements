package Viewer
version v1r1

branches doc src cmt

include_path none

use GaudiPolicy v*
use ROOT        v* LCG_Interfaces
use DIM         v* Online

# Viewer does not build library
ignore_pattern package_stamps

application Viewer ../src/Viewer.cpp ../src/DimInfoHistos.cpp
application SaveHistos ../src/SaveHistos.cpp ../src/DimInfoHistos.cpp

