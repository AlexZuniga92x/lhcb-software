#============================================================================
# Maintainer : Markus Frank
#============================================================================
package           ROMon
version           v1r0
#============================================================================
branches          cmt doc src ROMon
# dependency list
use OnlineKernel  v* Online
use DIM           v* Online -no_auto_imports
use GaudiOnline   v* Online -no_auto_imports

apply_pattern install_more_includes more=ROMon

# ==================== component libraries ==================================
library ROMon *.cpp -import=DIM
apply_pattern linker_library   library=ROMon

apply_pattern reflex_dictionary dictionary=ROMon \
                                headerfiles=$(ROMONROOT)/dict/dictionary.h \
                                selectionfile=$(ROMONROOT)/dict/dictionary.xml \
                                imports=Python
macro_append ROMon_reflex_options " -D__GCCXML"

# Gnerate dictionary rootmap file
apply_pattern generate_rootmap library=ROMonDict
apply_pattern install_python_modules
