package           PyDIM 
version           v1r0
#============================================================================
branches          cmt doc src
use DIM           v* Online
use Reflex        v* LCG_Interfaces
use Python        v* LCG_Interfaces
use RELAX         v* LCG_Interfaces
use GaudiPolicy   v*

apply_pattern install_more_includes more=PyDim

# temporary, until SEAL does it properly
apply_pattern     reflex_dictionary                           \
                  dictionary=PyDIM                            \
                  imports="DIM ../src/DimPython.cpp"          \
                  headerfiles=$(PYDIMROOT)/src/dim_dict.h     \
                  selectionfile=$(PYDIMROOT)/src/dim_dict.xml
macro_append PyDIM_reflex_options ' --comments '
macro_append PyDIMDict_shlibflags ' $(DIM_linkopts) $(Python_linkopts) $(Reflex_linkopts) '

path_remove PYTHONPATH "/PyDIM/" WIN32 '\PyDIM\'
path_prepend PYTHONPATH $(PYDIMROOT)/python
apply_pattern ld_library_path
