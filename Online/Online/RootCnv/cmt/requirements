package RootCnv
author Markus Frank
version v0r1

branches  cmt dict src

use GaudiKernel v*
use ROOT        v* LCG_Interfaces

#===========================================================================
apply_pattern install_more_includes more=RootCnv
#===========================================================================
apply_pattern reflex_dictionary dictionary=RootCnv \
		headerfiles=$(ROOTCNVROOT)/dict/RootCnv_dict.h \
		selectionfile=$(ROOTCNVROOT)/dict/RootCnv_dict.xml
#===========================================================================
library     RootCnv ../src/*.cpp ../$(tag)/dict/RootCnv/*.cpp
# macro_append  RootCnv_dependencies RootCnvGen
apply_pattern component_library library=RootCnv

private
use GaudiExamples v*
use LHCbSys v*
set EXPORT_ALL_SYMBOLS "yes" GAUDI_V21 "" GAUDI_V22 "" G21_HIDE_SYMBOLS ""
macro_append cppflags " -O0 "

macro_append ROOT_linkopts " -lCintex -lRIO -lTree -lTreePlayer -lMathCore " target-winxp " libCintex.lib libRIO.lib libMathCore.lib "
macro_append ROOT_cppflags '' target-winxp '-FI"$(ROOTSYS)/include/w32pragma.h"'
