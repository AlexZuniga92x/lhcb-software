Neutrals.Members += { "CaloHypoAlg/PhotonFromMergedCalibration" };
// Corrections for Single Photons
Neutrals.Members += { "CaloHypoAlg/PhotonCalibration"   };

// Make neutral ProtoParticles
Neutrals.Members += { "NeutralPPsFromCPsAlg" };

