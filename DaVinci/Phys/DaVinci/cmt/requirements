# Allows reading of OO-DST data
#============================================================================
package           DaVinci
version           v12r2

# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc src job options

# Set the version environment variable
#============================================================================
pattern DaVinciVersion path APPVERSION <version>
apply_pattern DaVinciVersion

# Used packages. 
#============================================================================

#-- External libraries now taken from LCG, version defined by GaudiEnv

#-- Gaudi libraries
use GaudiSys            v*
# Event persistency
use GaudiPoolDb         v*

# Histogram persistency 
use HbookCnv            v*
use RootHistCnv         v*

#-- Database
use XmlDDDB             v22r3   Det
use FieldMap            v4r5
use ParamFiles          v3r8    -no_auto_imports

#-- LHCb libraries 
use LHCb                v16r2

#=======================================================
# DaVinciSys v12r2
#=======================================================

# Trigger packages
use  L0DU               	v6r7p2   L0
use  L0Calo             	v7r6     L0
use  L0Checker          	v2r2     L0
use  L0MuonKernel 		v2r1p1   L0
use  L0MuonTrigger 		v2r2     L0
use  L0mConf            	v2r2p3   L0

use  L1Decision         	v3r1     Trg
use  L1Reco             	v5r0     Trg
use  TrgChecker         	v5r0     Trg
use  TrgForward         	v3r0     Trg
use  TrgMonitor         	v3r0     Trg
use  TrgMuonID  		v2r0     Trg
use  TrgPrimVertex      	v3r0     Trg
use  TrgTools           	v5r0     Trg
use  TrgVelo            	v5r0     Trg
use  TrgVeloTT          	v5r0     Trg

# Enable neutral ProtoParticles production and CaloPIDs
use  CaloPIDs           	v2r4     Calo 
use  CaloReco           	v2r5     Calo

# Muon PID
use  MuonID             	v3r7p1   Muon

# Final Reconstruction
use  GlobalReco         	v4r8p1   Rec
use  PrimVtx            	v2r1p1   Rec
use  RecoTools          	v1r1     Rec

# Utility tools
use  TrExtrapolator     	v2r13    Tr

use  LoKi               	v3r4p2   Tools  

# Reconstruction tools 
use  Utilities          	v1r11    Tools

# Physics packages
use  CommonParticles    	v1r5p3   Phys
use  DaVinciFilter      	v1r1     Phys
use  DaVinciKernel      	v1r1     Phys
use  DaVinciTools       	v11r1    Phys
use  DaVinciUser        	v5r1p2   Phys
use  FlavourTagging     	v5r3     Phys
use  Ks2PiPiSel         	v1r4p1   Phys
use  ParticleMaker      	v1r1     Phys
use  PhysSelections		v6r10    Phys
use  DaVinciTransporter 	v1r1     Phys
use  VertexFit			v1r1     Phys

# Physics MC packages
use  DaVinciAssociators 	v5r2     Phys
use  DaVinciEff         	v3r1     Phys
use  DaVinciMCTools     	v5r6     Phys
use  DaVinciTest        	v5r2     Phys

# Stripping
use  Stripping          	v1r4     Tools

# Physics selections
use  PhysSelSys			v7r10    PhysSel

# Build DaVinci Application with standard executable
# Note that user code is located in a component library (see details
# in Gaudi User Guide)
#============================================================================
application      DaVinci    ../src/Main/DaVinciMain.cpp

# define link options
#============================================================================
apply_pattern application_path 

macro DaVinci_linkopts    "${application_linkopts}"

# define aliases
alias DaVinci "${DAVINCIROOT}/${BINDIR}/DaVinci.exe"
