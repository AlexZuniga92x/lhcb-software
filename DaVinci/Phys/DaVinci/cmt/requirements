# Allows reading of OO-DST data
#============================================================================
package           DaVinci
version           v11r6

# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc src job options

# Set the version environment variable
#============================================================================
pattern DaVinciVersion path_append DAVINCIVERS <version>
apply_pattern DaVinciVersion

# Used packages. 
#============================================================================
# Stolen from Brunel v23r6
#--- CMT and GaudiPolicy
use  GaudiPolicy 	v5r15
 
#--- External libraries (as defined in GAUDI_v14r5)
use  ExternalLibs	v4r5
use  AIDA		v3r300		-no_auto_imports
use  CLHEP		v2r1810p0
use  GSL		v2r14p0
use  XERCES		v2r230p0
use  CERNLIB 		v2r2002p1
use  ROOT 		v2r31002p0
use  PI			v1r112p1
use  PCRE		v1r44
use  UUID		v1r32
use  SEAL		v1r134p0
use  POOL		v1r163p0

# stolen from Boole v5r6
use  BOOST		v2r1302p0	-no_auto_imports

#--- Gaudi libraries (from GAUDI_v14r5)
use GaudiKernel         v15r3
use GaudiSvc            v11r6p1
use GaudiAlg            v7r2
use GaudiTools          v8r1
use GaudiAud            v6r4
use GaudiGSL            v6r0
use GaudiDb             v9r2
use GaudiRootDb         v9r4
use GaudiPoolDb         v1r6p1
use GaudiObjDesc        v6r2p1
use RootHistCnv         v9r1

use  GaudiPython        v6r4

#--- Histogram persistency
use  HbookCnv           v14r1
use  RootHistCnv    	v9r1

#--- Geometry Database
use  XmlDDDB		v22r1	 Det
use  FieldMap           v4r5
use  ParamFiles		v3r5	 $(LHCb_release_area)/PARAM -no_auto_imports

#--- LHCb libraries (from LHCB_v15r7)
use  LHCb               v15r7

#=======================================================
# DaVinciSys v11r6
#=======================================================

#    Enable neutral ProtoParticles production and CaloPIDs
use  CaloPIDs           v2r2     Calo 
use  CaloReco           v2r1p1   Calo

#    Muon PID
use  MuonID             v3r7p1   Muon

#    Final Reconstruction
use  GlobalReco         v4r6     Rec
use  PrimVtx            v2r1     Rec

#    Utility tools
use  TrExtrapolator     v2r10    Tr

#    Reconstruction tools 
use  RecoTools          v1r1     Rec
use  Utilities          v1r2     Tools

use  LoKi               v2r3     Tools  

#    Physics packages
use  CommonParticles    v1r2     Phys
use  DaVinciAssociators v4r5     Phys
use  DaVinciChecks      v2r3     Phys
use  DaVinciEff         v2r10    Phys
use  DaVinciMCTools     v5r4     Phys
use  DaVinciTest        v4r4     Phys
use  DaVinciTools       v9r3     Phys
use  DaVinciUser        v5r0     Phys
use  FlavourTagging     v4r9     Phys
use  Ks2PiPiSel         v1r2     Phys
use  PhysSelections	v6r4     Phys

use  PhysSelSys		v7r0     PhysSel

# Build DaVinci Application with standard executable
# Note that user code is located in a component library (see details
# in Gaudi User Guide)
#============================================================================
application      DaVinci    ../src/Main/DaVinciMain.cpp

# define link options
#============================================================================
apply_pattern application_path 

macro DaVinci_linkopts    "${application_linkopts}"

# define aliases
alias DaVinci "${DAVINCIROOT}/${BINDIR}/DaVinci.exe"
