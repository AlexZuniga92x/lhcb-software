# Allows reading of OO-DST data
#============================================================================
package           DaVinci
version           v12r1

# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc src job options

# Set the version environment variable
#============================================================================
pattern DaVinciVersion path APPVERSION <version>
apply_pattern DaVinciVersion

# Used packages. 
#============================================================================
#-- CMT and GaudiPolicy
use GaudiPolicy v5r18

#-- External libraries now taken from LCG, version defined by GaudiEnv

#-- Gaudi libraries (from GAUDI_v15r1)
use GaudiKernel         v16r1
use GaudiSvc            v12r2p1
use GaudiAud            v6r5
use GaudiAlg            v8r0
use GaudiGSL            v6r1
use GaudiPoolDb         v1r8p1
use GaudiObjDesc        v6r3
use RootHistCnv         v9r3
use HbookCnv            v14r2

#-- Database
use XmlDDDB             v22r3   Det
use FieldMap            v4r5
use ParamFiles          v3r8    -no_auto_imports

#-- LHCb libraries 
use LHCb                v16r1
use LHCbAlgs            v1r0   Kernel

#=======================================================
# DaVinciSys v12r1
#=======================================================

# Trigger packages
use  L0DU               	v6r7p1   L0
use  L0Calo             	v7r6     L0
use  L0Checker          	v2r2     L0
use  L0MuonKernel 		v2r1p1   L0
use  L0MuonTrigger 		v2r1     L0
use  L0mConf            	v2r2p3   L0

use  L1Decision         	v2r2     Trg
use  L1Reco             	v4r0p1   Trg
use  TrgChecker         	v4r2     Trg
use  TrgForward         	v2r3     Trg
use  TrgMonitor         	v2r0p1   Trg
use  TrgMuonID  		v1r0     Trg
use  TrgPrimVertex      	v2r0p1   Trg
use  TrgTools           	v4r3     Trg
use  TrgVelo            	v4r0     Trg
use  TrgVeloTT          	v4r2     Trg
use  STDAQ              	v1r3     IT

# To rebuild velo clusters
use  VeloDAQ            	v1r0     Velo

# Enable neutral ProtoParticles production and CaloPIDs
use  CaloPIDs           	v2r3     Calo 
use  CaloReco           	v2r4     Calo

# Muon PID
use  MuonID             	v3r7p1   Muon

# Final Reconstruction
use  GlobalReco         	v4r8     Rec
use  PrimVtx            	v2r1p1   Rec
use  RecoTools          	v1r1     Rec

# Utility tools
use  TrExtrapolator     	v2r13    Tr

use  LoKi               	v3r4p1   Tools  

# Reconstruction tools 
use  Utilities          	v1r9     Tools

# Physics packages
use  CommonParticles    	v1r5p2   Phys
use  DaVinciFilter      	v1r1     Phys
use  DaVinciKernel      	v1r1     Phys
use  DaVinciTools       	v11r1    Phys
use  DaVinciUser        	v5r1p1   Phys
use  FlavourTagging     	v5r2     Phys
use  Ks2PiPiSel         	v1r4p1   Phys
use  ParticleMaker      	v1r1     Phys
use  PhysSelections		v6r9     Phys
use  DaVinciTransporter 	v1r1     Phys
use  VertexFit			v1r1     Phys

# Physics MC packages
use  DaVinciAssociators 	v5r1     Phys
use  DaVinciEff         	v3r1     Phys
use  DaVinciMCTools     	v5r4     Phys
use  DaVinciTest        	v5r0     Phys

# Stripping
use  Stripping          	v1r3     Tools

# Physics selections
use  PhysSelSys			v7r8     PhysSel

# Build DaVinci Application with standard executable
# Note that user code is located in a component library (see details
# in Gaudi User Guide)
#============================================================================
application      DaVinci    ../src/Main/DaVinciMain.cpp

# define link options
#============================================================================
apply_pattern application_path 

macro DaVinci_linkopts    "${application_linkopts}"

# define aliases
alias DaVinci "${DAVINCIROOT}/${BINDIR}/DaVinci.exe"
