# Allows reading of OO-DST data
#============================================================================
package           DaVinci
version           v9r2

# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc src job options

# Used packages. 
#============================================================================

#--- CMT and GaudiPolicy
use  GaudiPolicy v5r11p2

#--- External libraries (as defined in GAUDI_v12r0)
use  ExternalLibs	v4r0p1
use  AIDA		v3r22p2
use  CLHEP		v2r1800p0
use  HTL		v2r1321p0
use  NAGC		v2r50p0		
use  XERCES		v2r220p0
use  CERNLIB 		v2r2002p0
use  ROOT 		v2r30504p0

#--- Gaudi libraries (from GAUDI_v12r0)
use  GaudiKernel	v13r4p1
use  GaudiSvc 		v10r2
use  GaudiAlg 		v6r4
use  GaudiAud 		v6r2
use  GaudiNagC 		v7r3
use  GaudiDb 		v8r4
use  GaudiRootDb 	v9r2

#--- Histogram persistency
use  HbookCnv           v13r4
use  RootHistCnv    	v8r2

#--- LHCb libraries (from LHCB_v12r1)
use GaudiConf           v6r10
use BookKeeping         v1r2    Tools
use KernelSys           v1r4	Kernel
use DetSys              v2r1    Det
use EventKernel		v2r3	Event
use Event		v3r4	Event
use VeloEvent		v12r1	Event
use ITEvent		v12r1	Event
use OTEvent		v12r1	Event
use TrEvent		v12r1	Event
use RichEvent		v5r0	Event
use CaloEvent		v11r6	Event
use MuonEvent		v2r4	Event
use L0Event		v13r2	Event
use L1Event		v11r7	Event
use PhysEvent		v7r6	Event
use HltEvent		v4r0    Event
use DbCnv		v7r1	Event
use AssociatorsSys      v1r4    Associators


#--- Geometry Database
use  XmlDDDB		v17r0	 Det

#--- DaVinciSys v8r0 packages 

#    Enable L0 and L1 Trigger reprocessing and HLT 
use  L0DU          	v6r5	 L0
use  L1Decision         v2r1     L1
use  HltTools           v4r0     Hlt
use  HltVelo            v4r0     Hlt
use  HltVeloTT          v4r0     Hlt
use  HltLongTrack       v4r0     Hlt
use  HltChecker         v4r0     Hlt
use  HltMuonID          v2r0     Hlt
use  HltPrimaryVertex   v2r0     Hlt

#    Enable neutral ProtoParticles production and CaloPIDs
use  CaloInterfaces     v2r4     Calo
use  CaloUtils 	        v4r4     Calo
use  CaloReco           v1r6     Calo
use  CaloPIDs           v1r1     Calo 

#    Muon PID
use  MuonID             v3r6     Muon

#    Final Reconstruction
use  GlobalReco         v4r1     Rec
use  PrimVtx            v2r1     Rec

#    Utility tools
use  TrExtrapolator     v2r6     Tr

#    Monte Carlo tools
use  MCTools            v1r1p1   Phys

#    Reconstruction tools 
use  RecoTools          v1r1     Rec

#    Physics packages
use  DaVinciTools       v8r3     Phys
use  DaVinciAssociators v4r2p1   Phys
use  DaVinciMCTools     v5r0p1   Phys
use  DaVinciTest        v4r1p2   Phys
use  Ks2PiPiSel         v1r0     Phys
use  CommonParticles    v1r0     Phys
use  PhysSelections	v6r0p2   Phys
use  FlavourTagging     v4r6p1   Phys
use  DaVinciEff         v2r8p1   Phys
use  DaVinciUser        v4r2     Phys
use  PhysSelSys		v6r0     PhysSel

#    Generic utilities
use  Utilities          v1r2     Tools

# Build DaVinci Application with standard executable
# Note that user code is located in a component library (see details
# in Gaudi User Guide)
#============================================================================
application      DaVinci    ../src/Main/DaVinciMain.cpp

# define link options
#============================================================================
apply_pattern application_path 

macro DaVinci_linkopts    "${application_linkopts}"

# set the DaVinci version = v * 100000 + r * 100 + p
#============================================================================
macro_append cppflags " -DDaVinciVersion=900200 " \
             VisualC  " /DDaVinciVersion=900200 "
