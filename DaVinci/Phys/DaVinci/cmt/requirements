# Allows reading of OO-DST data
#============================================================================
package           DaVinci
version           v11r4

# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc src job options

# Set the version environment variable
#============================================================================
pattern DaVinciVersion path_append DAVINCIVERS <version>
apply_pattern DaVinciVersion

# Used packages. 
#============================================================================

#--- CMT and GaudiPolicy
use  GaudiPolicy 	v5r14
 
#--- External libraries (as defined in GAUDI_v14r3)
use  ExternalLibs	v4r4
use  AIDA		v3r300		-no_auto_imports
use  BOOST		v2r1302p0	-no_auto_imports
use  CLHEP		v2r1810p0
use  GSL		v2r14p0
use  XERCES		v2r230p0
use  CERNLIB 		v2r2002p0
use  ROOT 		v2r31002p0
use  PI			v1r112
use  PCRE		v1r44
use  UUID		v1r32
use  SEAL		v1r133p1
use  POOL		v1r150p1

#--- Gaudi libraries (from GAUDI_v14r3)
use  GaudiKernel	v15r2
use  GaudiSvc 		v11r4
use  GaudiAud 		v6r4
use  GaudiAlg 		v7r1
use  GaudiGSL           v5r1
use  GaudiDb 		v9r2
use  GaudiRootDb 	v9r4
use  GaudiPoolDb	v1r5
use  GaudiObjDesc       v6r2p1
use  GaudiPython        v6r3

#--- Histogram persistency
use  HbookCnv           v14r1
use  RootHistCnv    	v9r1

#--- Geometry Database
use  XmlDDDB		v22r0	 Det
use  FieldMap           v4r3
use  ParamFiles		v3r4	 $(LHCb_release_area)/PARAM -no_auto_imports

#--- LHCb libraries (from LHCB_v15r4)
use  LHCb               v15r4

#--- DaVinciSys v11r3 packages 

#    Enable neutral ProtoParticles production and CaloPIDs
use  CaloPIDs           v2r1     Calo 
use  CaloReco           v2r1     Calo

#    Muon PID
use  MuonID             v3r7p1   Muon

#    Final Reconstruction
use  GlobalReco         v4r5     Rec
use  PrimVtx            v2r1     Rec

#    Utility tools
use  TrExtrapolator     v2r10    Tr

#    Reconstruction tools 
use  RecoTools          v1r1     Rec
use  Utilities          v1r2     Tools

#    Physics packages
use  CommonParticles    v1r0     Phys
use  DaVinciAssociators v4r4     Phys
use  DaVinciChecks      v2r2     Phys
use  DaVinciEff         v2r9     Phys
use  DaVinciMCTools     v5r3     Phys
use  DaVinciTest        v4r2     Phys
use  DaVinciTools       v9r1     Phys
use  DaVinciUser        v4r2     Phys
use  FlavourTagging     v4r8     Phys
use  Ks2PiPiSel         v1r1     Phys
use  PhysSelections	v6r3     Phys

use  PhysSelSys		v6r4     PhysSel

# Build DaVinci Application with standard executable
# Note that user code is located in a component library (see details
# in Gaudi User Guide)
#============================================================================
application      DaVinci    ../src/Main/DaVinciMain.cpp

# define link options
#============================================================================
apply_pattern application_path 

macro DaVinci_linkopts    "${application_linkopts}"

# define aliases
alias DaVinci "${DAVINCIROOT}/${BINDIR}/DaVinci.exe"
