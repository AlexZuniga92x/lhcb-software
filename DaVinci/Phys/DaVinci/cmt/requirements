# Allows reading of OO-DST data
#============================================================================
package           DaVinci
version           v7r2

# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc src job options

# Used packages. 
#============================================================================
#--- Minimal Gaudi libraries (from GAUDI_v11r4)
use  GaudiSys           v11r0

#--- Additional Gaudi libraries (from GAUDI_v11r4)
use  GaudiNagC      	v*
use  GaudiRootDb        v*

#--- Histogram persistency
use  HbookCnv           v*
use  RootHistCnv    	v*

#--- LHCb libraries (from LHCB_v11r5)
use  LHCb               v11r5

#--- Geometry description (from DBASE)
use  XmlDDDB		v14r4	Det

#--- DaVinciSys v7r2 packages 

#    Enable Trigger reprocessing
use  L0Calo             v6r4     L0
use  L0Muon             v6r3     L0
use  L1VeloTrack        v3r5     L1
use  L0DU          	v6r2	 L0
use  L1Decision         v1r4     L1

#    Enable neutral ProtoParticles production  
use  CaloInterfaces     v2r4     Calo
use  CaloUtils 	        v4r4     Calo
use  CaloReco           v1r2     Calo

#    Final Reconstruction
use  GlobalReco         v2r3     Rec
use  KsReco		v1r4	 Rec

#    Utility tools
use  TrExtrapolator     v2r4     Tr

#    Physics packages
use  DaVinciTools       v7r2     Phys
use  DaVinciAssociators v3r1     Phys
use  DaVinciMCTools     v4r1     Phys
use  DaVinciTest        v4r0     Phys
use  PhysSelections     v4r2     Phys
use  FlavourTagging     v4r2     Phys
use  DaVinciEff         v2r1     Phys
use  DaVinciUser        v4r0     Phys

# Build DaVinci Application with standard executable
# Note that user code is located in a component library (see details
# in Gaudi User Guide)
#============================================================================
application      DaVinci    ../src/Main/DaVinciMain.cpp

# define link options
#============================================================================
apply_pattern application_path 

macro DaVinci_linkopts    "${application_linkopts}"

# set the DaVinci version = v * 100000 + r * 100 + p
#============================================================================
macro_append cppflags " -DDaVinciVersion=700200 " \
             VisualC  " /DDaVinciVersion=700200 "
