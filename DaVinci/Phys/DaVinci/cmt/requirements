# Allows reading of OO-DST data
#============================================================================
package           DaVinci
version           v8r1

# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc src job options

# Used packages. 
#============================================================================
#--- Minimal Gaudi libraries (from GAUDI_v11r5)
use  GaudiSys           v11r0

#--- Additional Gaudi libraries (from GAUDI_v11r5)
use  GaudiNagC      	v*
use  GaudiRootDb        v*

#--- Histogram persistency
use  HbookCnv           v*
use  RootHistCnv    	v*

#--- LHCb libraries (from LHCB_v11r12)
use  LHCb               v11r12	

#--- Geometry description (from DBASE)
use  XmlDDDB		v15r3	 Det

#--- DaVinciSys v8r0 packages 

#    Enable L0 and L1 Trigger reprocessing and HLT 
use  L0DU          	v6r5	 L0
use  L1Decision         v2r0     L1
use  HltTools           v2r0     Hlt
use  HltVelo            v2r0     Hlt
use  HltVeloTT          v2r0     Hlt
use  HltLongTrack       v2r1     Hlt
use  HltChecker         v2r0     Hlt

#    Enable neutral ProtoParticles production and CaloPIDs
use  CaloInterfaces     v2r4     Calo
use  CaloUtils 	        v4r4     Calo
use  CaloReco           v1r5     Calo
use  CaloPIDs           v1r0     Calo 

#    Muon PID
use  MuonID             v3r6     Muon

#    Final Reconstruction
use  GlobalReco         v4r0     Rec
use  KsReco		v1r4p1	 Rec
use  PrimVtx            v2r0     Rec

#    Utility tools
use  TrExtrapolator     v2r5     Tr

#    Monte Carlo tools
use  MCTools            v1r1     Phys

#    Reconstruction tools 
use  RecoTools          v1r0     Rec

#    Physics packages
use  DaVinciTools       v8r1     Phys
use  DaVinciAssociators v4r1     Phys
use  DaVinciMCTools     v5r0     Phys
use  DaVinciTest        v4r1p1   Phys
use  PhysSelections	v5r0     Phys
use  FlavourTagging     v4r4p1   Phys
use  DaVinciEff         v2r5     Phys
use  DaVinciUser        v4r1     Phys
use  PhysSelSys		v5r2     PhysSel

# Generic utilities
use  Utilities          v1r0     Tools

# Build DaVinci Application with standard executable
# Note that user code is located in a component library (see details
# in Gaudi User Guide)
#============================================================================
application      DaVinci    ../src/Main/DaVinciMain.cpp

# define link options
#============================================================================
apply_pattern application_path 

macro DaVinci_linkopts    "${application_linkopts}"

# set the DaVinci version = v * 100000 + r * 100 + p
#============================================================================
macro_append cppflags " -DDaVinciVersion=800100 " \
             VisualC  " /DDaVinciVersion=800100 "
