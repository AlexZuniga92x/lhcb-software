#============================================================================
package           DaVinci
version           v16r1

# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc src job options

# Set the version environment variable
#============================================================================
pattern DaVinciVersion path APPVERSION <version>
apply_pattern DaVinciVersion

# Used packages. 
#============================================================================
#-- External libraries taken from LCG, version defined by GaudiEnv
use RELAX v* LCG_Interfaces          -no_auto_imports

#-- Gaudi libraries (from GAUDI_v18r2)
use GaudiAlg 		v*         -no_auto_imports
use GaudiAud            v*         -no_auto_imports
use GaudiGSL		v*         -no_auto_imports
use GaudiKernel		v*
use GaudiObjDesc 	v*         -no_auto_imports
use GaudiPoolDb		v*         -no_auto_imports
use GaudiSvc 		v*         -no_auto_imports
use RootHistCnv         v*         -no_auto_imports

#-- Database
use XmlDDDB             v30r0   Det  -no_auto_imports
use XmlConditions       v1r4    Det  -no_auto_imports
use FieldMap		v4r6         -no_auto_imports
use ParamFiles          v4r1         -no_auto_imports
# use BrunelDQ		v1r0	DQ   -no_auto_imports

#-- LHCb libraries (from LHCB_v20r3)
use LHCb	v20r4                -no_auto_imports

#-- Lbcom packages (from LBCOM_v4r3)
use LbcomSys    v4r4                 -no_auto_imports

#-- Rec packages (from REC_v3r1)
use RecSys      v3r2                 -no_auto_imports

#-- Phys packages (from PHYS_v3r1)
use PhysSys     v3r1

# Build DaVinci Application with standard executable
# Note that user code is located in a component library (see details
# in Gaudi User Guide)
#============================================================================
# application      DaVinci    ../src/Main/DaVinciMain.cpp
application DaVinci $(GAUDICONFROOT)/src/GaudiMain.cpp


# define link options
#============================================================================
apply_pattern application_path 

macro DaVinci_linkopts    "${application_linkopts}"

# define aliases
alias DaVinci "${DAVINCIROOT}/${BINDIR}/DaVinci.exe"
