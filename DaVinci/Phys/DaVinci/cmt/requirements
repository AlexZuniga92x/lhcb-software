# Allows reading of OO-DST data
#============================================================================
package           DaVinci
version           v11r6

# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc src job options

# Set the version environment variable
#============================================================================
pattern DaVinciVersion set DAVINCIVERS <version>
apply_pattern DaVinciVersion

# Used packages. 
#============================================================================
 


#--- Geometry Database
use  XmlDDDB		v22r1	 Det
use  ParamFiles		v3r6	 -no_auto_imports
use  FieldMap           v4r5

#--- LHCb libraries (from LHCB_v15r8)
use  LHCb               v15r8

#=======================================================
# DaVinciSys v11r6
#=======================================================

#    Enable neutral ProtoParticles production and CaloPIDs
use  CaloPIDs           v2r3     Calo 
use  CaloReco           v2r1p1   Calo

#    Muon PID
use  MuonID             v3r7p1   Muon

#    Final Reconstruction
use  GlobalReco         v4r6     Rec
use  PrimVtx            v2r1     Rec

# Trigger packages
use  L0DU               v6r7     L0
use  L0Calo             v7r4     L0

use  TrgTools           v3r1     Trg
use  TrgVelo            v3r0     Trg
use  TrgVeloTT          v3r1     Trg
use  L1Reco             v3r1     Trg
use  TrgMonitor         v1r0     Trg
use  TrgChecker         v3r0p1   Trg
use  L1Decision         v1r1     Trg
use  STDAQ              v1r1     IT

#    Utility tools
use  TrExtrapolator     v2r11    Tr

#    Reconstruction tools 
use  RecoTools          v1r1     Rec
use  Utilities          v1r3     Tools

use  LoKi               v2r3     Tools  

#    Physics packages
use  CommonParticles    v1r2     Phys
use  DaVinciAssociators v4r5     Phys
use  DaVinciChecks      v2r3     Phys
use  DaVinciEff         v2r10    Phys
use  DaVinciMCTools     v5r4     Phys
use  DaVinciTest        v4r4     Phys
use  DaVinciTools       v9r3     Phys
use  DaVinciUser        v5r0     Phys
use  FlavourTagging     v4r9     Phys
use  Ks2PiPiSel         v1r2     Phys
use  PhysSelections	v6r4     Phys

use  PhysSelSys		v7r0     PhysSel

#--- Gaudi libraries (from GAUDI_v14r5)
use GaudiSvc            v*
use GaudiAlg            v*
use GaudiTools          v*
use GaudiAud            v*
use GaudiGSL            v*
use GaudiRootDb         v*
use GaudiPoolDb         v*
use RootHistCnv         v*
use  GaudiPython        v*
use  HbookCnv           v*


# Build DaVinci Application with standard executable
# Note that user code is located in a component library (see details
# in Gaudi User Guide)
#============================================================================
application      DaVinci    ../src/Main/DaVinciMain.cpp

# define link options
#============================================================================
apply_pattern application_path 

macro DaVinci_linkopts    "${application_linkopts}"

# define aliases
alias DaVinci "${DAVINCIROOT}/${BINDIR}/DaVinci.exe"
