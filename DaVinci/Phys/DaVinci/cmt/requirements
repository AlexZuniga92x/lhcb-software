# Allows reading of OO-DST data
#============================================================================
package           DaVinci
version           v9r1p4

# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc src job options

# Used packages. 
#============================================================================

#--- CMT and GaudiPolicy
use  GaudiPolicy v5r11p2

#--- External libraries (as defined in GAUDI_v12r0)
use  ExternalLibs	v4r0p1
use  AIDA		v3r22p2
use  CLHEP		v2r1800p0
use  HTL		v2r1321p0
use  NAGC		v2r50p0		
use  XERCES		v2r220p0
use  CERNLIB 		v2r2002p0
use  ROOT 		v2r30504p0

#--- Gaudi libraries (from GAUDI_v12r0)
use  GaudiKernel	v13r4p1
use  GaudiSvc 		v10r2
use  GaudiAlg 		v6r4
use  GaudiAud 		v6r2
use  GaudiNagC 		v7r3
use  GaudiDb 		v8r4
use  GaudiRootDb 	v9r2

#--- Histogram persistency
use  HbookCnv           v13r4
use  RootHistCnv    	v8r2

#--- LHCb libraries (from LHCB_v12r1)
use  LHCb               v12r1	

#--- Geometry Database
use  XmlDDDB		v17r0	 Det

#--- DaVinciSys v8r0 packages 

#    Enable L0 and L1 Trigger reprocessing and HLT 
use  L0DU          	v6r5	 L0
use  L1Decision         v2r1     L1
use  HltTools           v3r0     Hlt
use  HltVelo            v3r0     Hlt
use  HltVeloTT          v3r0     Hlt
use  HltLongTrack       v3r0     Hlt
use  HltChecker         v3r0     Hlt
use  HltMuonID          v1r0     Hlt

#    Enable neutral ProtoParticles production and CaloPIDs
use  CaloInterfaces     v2r4     Calo
use  CaloUtils 	        v4r4     Calo
use  CaloReco           v1r6     Calo
use  CaloPIDs           v1r1     Calo 

#    Muon PID
use  MuonID             v3r6     Muon

#    Final Reconstruction
use  GlobalReco         v4r1     Rec
use  PrimVtx            v2r1     Rec

#    Utility tools
use  TrExtrapolator     v2r6     Tr

#    Monte Carlo tools
use  MCTools            v1r1p1   Phys

#    Reconstruction tools 
use  RecoTools          v1r0p1   Rec

#    Physics packages
use  DaVinciTools       v8r2     Phys
use  DaVinciAssociators v4r2p1   Phys
use  DaVinciMCTools     v5r0     Phys
use  DaVinciTest        v4r1p2   Phys
use  Ks2PiPiSel         v1r0     Phys
use  PhysSelections	v6r0p2   Phys
use  FlavourTagging     v4r6p1   Phys
use  DaVinciEff         v2r8p1   Phys
use  DaVinciUser        v4r1p1   Phys
use  PhysSelSys		v5r14    PhysSel

#    Generic utilities
use  Utilities          v1r0     Tools

# Build DaVinci Application with standard executable
# Note that user code is located in a component library (see details
# in Gaudi User Guide)
#============================================================================
application      DaVinci    ../src/Main/DaVinciMain.cpp

# define link options
#============================================================================
apply_pattern application_path 

macro DaVinci_linkopts    "${application_linkopts}"

# set the DaVinci version = v * 100000 + r * 100 + p
#============================================================================
macro_append cppflags " -DDaVinciVersion=900104 " \
             VisualC  " /DDaVinciVersion=900104 "
