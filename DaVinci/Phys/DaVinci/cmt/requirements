# Allows reading of OO-DST data
#============================================================================
package           DaVinci
version           v11r12

# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc src job options

# Set the version environment variable
#============================================================================
pattern DaVinciVersion set DAVINCIVERS <version>
apply_pattern DaVinciVersion

# Used packages. 
#============================================================================
#-- External libraries (as defined in GAUDI_v14r6)
use ExternalLibs        v4r5
use AIDA                v3r300          -no_auto_imports
use CLHEP               v2r1810p0       -no_auto_imports
use GSL                 v2r14p0         -no_auto_imports
use XERCES              v2r230p0        -no_auto_imports
use CERNLIB             v2r2002p1       -no_auto_imports
use ROOT                v2r31002p0      -no_auto_imports
use PI                  v1r112p1        -no_auto_imports
use PCRE                v1r44           -no_auto_imports
use UUID                v1r32           -no_auto_imports
use SEAL                v1r134p0        -no_auto_imports
use POOL                v1r163p0        -no_auto_imports

#-- Gaudi libraries (from GAUDI_v14r6)
use GaudiKernel         v15r4
use GaudiSvc            v11r7
use GaudiAlg            v7r3p1
use GaudiTools          v8r1
use GaudiAud            v6r5
use GaudiGSL            v6r0
use GaudiDb             v9r2
use GaudiRootDb         v9r4
use GaudiPoolDb         v1r6p1
use GaudiObjDesc        v6r2p1
use RootHistCnv         v9r1p1
use HbookCnv            v14r1
#-- Database
use XmlDDDB             v22r2   Det
use FieldMap            v4r5
use ParamFiles          v3r8    -no_auto_imports

#-- LHCb libraries 
use LHCb        v15r13

#=======================================================
# DaVinciSys v11r12
#=======================================================

# Trigger packages
use  L0DU               v6r7     L0
use  L0Calo             v7r6     L0
use  L0Checker          v2r1     L0
use  L0MuonKernel 	v2r1p1   L0
use  L0MuonTrigger 	v2r1     L0
use  L0mConf 		v2r2d2   L0

use  L1Decision         v2r0     Trg
use  L1Reco             v4r0     Trg
use  TrgChecker         v4r0     Trg
use  TrgForward         v2r0     Trg
use  TrgMonitor         v2r0     Trg
use  TrgPrimVertex      v2r0     Trg
use  TrgTools           v4r0     Trg
use  TrgVelo            v4r0     Trg
use  TrgVeloTT          v4r0     Trg
use  STDAQ              v1r2     IT

# To rebuild velo clusters
use  VeloDAQ            v1r0     Velo

# Enable neutral ProtoParticles production and CaloPIDs
use  CaloPIDs           v2r3     Calo 
use  CaloReco           v2r4     Calo

# Muon PID
use  MuonID             v3r7p1   Muon

# Final Reconstruction
use  GlobalReco         v4r8     Rec
use  PrimVtx            v2r1     Rec
use  RecoTools          v1r1     Rec

# Utility tools
use  TrExtrapolator     v2r12    Tr

# Reconstruction tools 
use  Utilities          v1r7     Tools

use  LoKi               v2r8     Tools  

# Physics packages
use  CommonParticles    v1r5p2   Phys
use  DaVinciTools       v10r0    Phys
use  DaVinciUser        v5r1p1   Phys
use  FlavourTagging     v5r1     Phys
use  Ks2PiPiSel         v1r4p1   Phys
use  PhysSelections	v6r8p2   Phys

# Physics MC packages
use  DaVinciChecks      v2r4p1   Phys
use  DaVinciAssociators v5r0p2   Phys
use  DaVinciEff         v3r0     Phys
use  DaVinciMCTools     v5r4     Phys
use  DaVinciTest        v4r5p2   Phys

# Physics selections
use  PhysSelSys		v7r6     PhysSel

# Stripping
use  Stripping          v1r2p1   Tools

# Build DaVinci Application with standard executable
# Note that user code is located in a component library (see details
# in Gaudi User Guide)
#============================================================================
application      DaVinci    ../src/Main/DaVinciMain.cpp

# define link options
#============================================================================
apply_pattern application_path 

macro DaVinci_linkopts    "${application_linkopts}"

# define aliases
alias DaVinci "${DAVINCIROOT}/${BINDIR}/DaVinci.exe"
