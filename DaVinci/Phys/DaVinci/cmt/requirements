# Allows reading of OO-DST data
#============================================================================
package           DaVinci
version           v12r6

# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc src job options

# Set the version environment variable
#============================================================================
pattern DaVinciVersion path APPVERSION <version>
apply_pattern DaVinciVersion

# Used packages. 
#============================================================================

#-- External libraries now taken from LCG, version defined by GaudiEnv

#-- Gaudi libraries
use GaudiSys            v*
# Event persistency
use GaudiPoolDb         v*

# Histogram persistency 
use HbookCnv            v*
use RootHistCnv         v*

#-- Database
use XmlDDDB             v22r3   Det
use FieldMap            v4r5
use ParamFiles          v3r8    -no_auto_imports

#-- LHCb libraries 
use LHCb                v16r4

# TMP:
use RichTools           v1r2p2 Rich

#=======================================================
# DaVinciSys v12r6
#=======================================================

# L0 Trigger packages
use  L0DU               	v6r7p2   L0
use  L0Calo             	v7r6     L0
use  L0Checker          	v3r0     L0
use  L0MuonKernel 		v2r4     L0
use  L0MuonTrigger 		v2r3p1   L0
use  L0mConf            	v2r2p3   L0

#-- L1 Trigger libraries 
use TrgSys                      v1r1p1   Trg

#-- RICH Trigger libraries 
use RichHLTSys                  v1r0     Rich
use RichRecQC                   v1r10    Rich

#-- HLT trigger
use HltGeneric                  v2r0     Hlt

# Enable neutral ProtoParticles production and CaloPIDs
use  CaloPIDs           	v2r4     Calo 
use  CaloReco           	v2r7     Calo
# Muon PID
use  MuonID             	v3r7p1   Muon

# Final Reconstruction
use  GlobalReco         	v4r8p1   Rec
use  PrimVtx            	v2r1p1   Rec
use  RecoTools          	v1r1     Rec

# Utility tools
use  TrExtrapolator     	v2r14    Tr

use  LoKi               	v3r7     Tools  
use  LoKiHlt             	v2r0     Tools  

# Reconstruction tools 
use  Utilities          	v1r13    Tools

# Physics packages
use  CommonParticles    	v1r5p3   Phys
use  DaVinciFilter      	v1r4     Phys
use  DaVinciKernel      	v3r0     Phys
use  DaVinciTools       	v11r4    Phys
use  FlavourTagging     	v5r3p1   Phys
use  Ks2PiPiSel         	v1r4p1   Phys
use  ParticleMaker      	v1r2     Phys
use  PhysSelections		v6r11    Phys
use  DaVinciTransporter 	v2r0     Phys
use  VertexFit			v1r3     Phys
use  Tampering                  v1r0     Phys

# Physics MC packages
use  DaVinciAssociators 	v5r2p1   Phys
use  DaVinciEff         	v3r2     Phys
use  DaVinciMCTools     	v5r7     Phys
use  DaVinciTest        	v5r5     Phys
use  DaVinciUser        	v5r2     Phys

# Stripping
use  Stripping          	v1r6     Tools

# Physics selections
use  PhysSelSys			v7r14    PhysSel

use GaudiPython v*

# Build DaVinci Application with standard executable
# Note that user code is located in a component library (see details
# in Gaudi User Guide)
#============================================================================
application      DaVinci    ../src/Main/DaVinciMain.cpp

# define link options
#============================================================================
apply_pattern application_path 

macro DaVinci_linkopts    "${application_linkopts}"

# define aliases
alias DaVinci "${DAVINCIROOT}/${BINDIR}/DaVinci.exe"
