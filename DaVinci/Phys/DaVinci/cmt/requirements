# Created    : 07/02/2002
# Maintainer : P. Koppenburg, J. Palacios
#

#============================================================================
package           DaVinci
version           v18r1

# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc src job options

# Set the version environment variable
#============================================================================
pattern DaVinciVersion path APPVERSION <version>
apply_pattern DaVinciVersion

# Used packages. 
#============================================================================
#-- External libraries taken from LCG, version defined by GaudiEnv
use RELAX v* LCG_Interfaces          

#-- Gaudi libraries
use GaudiConf           v*
use GaudiAlg 		v*         
use GaudiAud            v*         
use GaudiGSL		v*         
use GaudiKernel		v*
use GaudiObjDesc 	v*         
use GaudiPoolDb		v*         
use GaudiSvc 		v*         
use RootHistCnv         v*         

#-- Database
use XmlDDDB             v30r14   Det  
use XmlConditions       v2r4    Det  
use FieldMap            v4r7         
use ParamFiles          v5r0         

#-- LHCb
# Kernel packages
use KernelSys           v*   Kernel

# Detector description
use DetSys              v*   Det

# Event data model
use EventSys            v*   Event

# DAQ Buffer encoding and decoding
use DAQSys              v*   DAQ

# Extra stuff
use LHCbAlgs            v*    Kernel
use CaloInterfaces      v*    Calo
use CaloUtils           v*    Calo
use SimComponents       v*    Sim
use LinkerInstances     v*    Event

#-- Lbcom
use LbcomSys    v6r1

#-- Rec
use RecSys      v4r1

#-- Hlt
use HltSys      v1r2

#-- Phys
use PhysSys     v5r1

#-- Analysis
use AnalysisSys v1r0

# Build DaVinci Application with standard executable
# Note that user code is located in a component library (see details
# in Gaudi User Guide)
#============================================================================
# application      DaVinci    ../src/Main/DaVinciMain.cpp
application DaVinci $(GAUDICONFROOT)/src/GaudiMain.cpp


# define link options
#============================================================================
apply_pattern application_path 

macro DaVinci_linkopts    "${application_linkopts}"

# define aliases
alias DaVinci "${DAVINCIROOT}/${BINDIR}/DaVinci.exe"
