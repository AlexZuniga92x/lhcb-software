# Allows reading of OO-DST data
#============================================================================
package           DaVinci
version           v6r1

# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc src job options

# Used packages. 
#============================================================================
#--- CMT and Gaudi policy
use  GaudiPolicy    	v5r5

#--- External libraries - Gaudi v10r4
use  ExternalLibs   	v3r6
use  AIDA           	v2r2
use  CLHEP          	v17r10p1
use  HTL            	v13r10p1
use  NAGC           	v5r0
use  XERCES         	v16r0p1
use  CERNLIB        	v2001
use  ROOT           	v2r303p0

#--- Gaudi libraries - Gaudi v10r4
use  GaudiKernel        v12r3
use  GaudiSvc           v8r4
use  GaudiAlg           v6r1
use  GaudiAud           v6r0
use  GaudiNagC          v7r0
use  GaudiDb            v8r1
use  GaudiRootDb        v9r0

#--- Histogram persistency
use  HbookCnv           v12r0
use  RootHistCnv        v8r0p2

#--- LHCb common libraries
use  GaudiConf      	v6r3
use  BookKeeping    	v1r1   Tools
use  LHCbKernel     	v1r4   Kernel

#--- Subdetector Kernels ( add any other Kernel you need )
use  VeloKernel   	v1r2    Velo
use  RichKernel   	v1r2   Rich
use  TrKernel     	v11r0  Tr
use  CaloKernel   	v2r0   Calo
use  MuonKernel   	v2r1   Muon

#--- Detector description ( add any other Det package you need )
use  DetDesc        	v10r4   Det
use  XmlDDDB        	v13r1   Det
use  VeloDet        	v7r1    Det
use  ITDet          	v1r1    Det
use  OTDet          	v3r0    Det
use  CaloDet        	v5r1    Det
use  CaloDetXmlCnv  	v2r0    Det
use  Magnet         	v1r1    Det
use  MuonDet        	v4r1    Det

#--- Event Model
use  EventKernel  	v2r0    Event
use  Event        	v2r0    Event
use  VeloEvent    	v11r1   Event
use  ITEvent      	v11r0   Event
use  OTEvent      	v11r0   Event
use  TrEvent      	v11r3   Event
use  RichEvent    	v3r2    Event
use  CaloEvent    	v11r2   Event
use  MuonEvent    	v2r1    Event
use  L0Event      	v12r2   Event
use  L1Event      	v11r1   Event
use  PhysEvent    	v7r0    Event
use  DbCnv        	v7r0    Event

#--- Associators
use  ITAssociators      v2r1    IT
use  OTAssociators      v2r2    OT
use  VeloAssociators    v1r2    Velo
use  CaloAssociators    v3r0    Calo
use  CaloRec   		v2r4    Calo
use  MuonAssociators    v1r0    Muon
use  TrFitEvent         v3r2    Tr
use  TrAssociators      v3r2    Tr
use  L0Calo		v6r1	L0
use  L1VeloTrack 	v3r1	L1

#--- Trigger
use  L0DU          	v6r1	L0

#--- ProtoParticles 
use  CaloInterfaces     v2r2   Calo
use  CaloUtils 	        v4r2   Calo
use  CaloTools          v4r4   Calo
use  GlobalReco         v2r1   Rec

#--- Reprocessing
use  CaloAlgs           v7r2   Calo

#--- Necessary tools
use  TrExtrapolator     v2r2   Tr

#--- DaVinci packages
use  DaVinciTools       v7r0   Phys
use  DaVinciAssociators v3r0   Phys
use  DaVinciMCTools     v4r0   Phys
use  DaVinciTest        v4r0   Phys
use  PhysSelections     v4r0   Phys
use  FlavourTagging     v4r0   Phys
use  DaVinciEff         v2r0   Phys
use  DaVinciUser        v4r0   Phys
use  DaVinciChecks      v2r0   Phys

# Build DaVinci Application with standard executable
# Note that user code is located in a component library (see details
# in Gaudi User Guide)
#============================================================================
application      DaVinci    ../src/Main/DaVinciMain.cpp

# define link options
#============================================================================
apply_pattern application_path 

macro DaVinci_linkopts    "${application_linkopts}"

# set the DaVinci version = v * 100000 + r * 100 + p
#============================================================================
macro_append cppflags " -DDaVinciVersion=600100 " \
             VisualC  " /DDaVinciVersion=600100 "
