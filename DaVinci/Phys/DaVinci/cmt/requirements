# Allows reading of OO-DST data
#============================================================================
package           DaVinci
version           v12r14

# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc src job options

# Set the version environment variable
#============================================================================
pattern DaVinciVersion path APPVERSION <version>
apply_pattern DaVinciVersion

# Used packages. 
#============================================================================

#-- External libraries now taken from LCG, version defined by GaudiEnv

#-- Gaudi libraries
use GaudiSys            v*
# Event persistency
use GaudiPoolDb         v*
# Stager Service
use GaudiSiteSvc        v*

# Histogram persistency 
use HbookCnv            v*
use RootHistCnv         v*

#-- Database
use XmlDDDB             v22r2     Det
use FieldMap            v*
use ParamFiles          v*    -no_auto_imports

# TMP:

use LHCb                        v*  

#=======================================================
# packages included in PhysCoreSys
#=======================================================                                                                                                                                                                            
use  CommonParticles    	v1r5p3   Phys
use  DaVinciFilter      	v3r1p1   Phys
use  DaVinciKernel      	v3r6     Phys
use  DaVinciTools       	v12r1    Phys
use  FlavourTagging     	v6r2     Phys
use  Ks2PiPiSel         	v1r7     Phys
use  ParticleMaker      	v1r6     Phys
use  PhysSelections		v6r12    Phys
use  DaVinciTransporter 	v2r1     Phys
use  VertexFit			v1r6p1   Phys
use  Tampering                  v1r2     Phys
# Generic tools 
use  Utilities          	v2r1     Tools
use  RecoTools          	v1r1     Rec

#=======================================================
# packages included in PhysMCSys
#=======================================================
use  DaVinciAssociators 	v5r5     Phys
use  DaVinciEff         	v3r4     Phys
use  DaVinciMCTools     	v5r15    Phys
use  DaVinciTest        	v5r6     Phys
use  DaVinciUser        	v5r2     Phys
use  FlavourTaggingChecker      v1r0     Phys
use  PVEff	                v1r0     Phys

#=======================================================
# packages included in LoKiSys
#=======================================================
use  LoKi               	v3r14p1  Tools  
use  LoKiHlt             	v2r2     Tools  
use  LoKiGen             	v2r1     Tools  
use  LoKiJets             	v1r1     Tools  
use  KtJet	             	v1r0     External

#=======================================================
# packages included in HltSys
#=======================================================
use HltGeneric                  v2r6     Hlt
use HltSelections               v3r7     Hlt
use HltSelChecker               v3r6     Hlt

#=======================================================
use  PhysSelSys			v8r7     PhysSel
#=======================================================

########################################################
# NON-Phys stuff
########################################################

# Enable neutral ProtoParticles production and CaloPIDs
use  CaloPIDs           	v2r4     Calo 
use  CaloReco           	v2r7     Calo
# Muon PID
use  MuonID             	v3r9     Muon

#-- RICH Trigger libraries 
use RichHLTSys                  v1r0p1   Rich
use RichRecQC                   v1r10    Rich
use RichTools                   v1r2p2 Rich

# Final Reconstruction
use  GlobalReco         	v4r8p1   Rec
use  PrimVtx            	v2r1p1   Rec

# Utility tools
use  TrExtrapolator     	v2r14    Tr

# L0 Trigger packages
use  L0DU               	v6r7p5   L0
use  L0Calo             	v7r6     L0
use  L0Checker          	v3r2     L0
use  L0MuonKernel 		v2r4     L0
use  L0MuonTrigger 		v2r3p1   L0
use  L0mConf            	v2r2p3   L0

#-- L1 Trigger libraries 
use TrgSys                      v1r10    Trg

use GaudiPython v*

# Build DaVinci Application with standard executable
# Note that user code is located in a component library (see details
# in Gaudi User Guide)
#============================================================================
application      DaVinci    ../src/Main/DaVinciMain.cpp

# define link options
#============================================================================
apply_pattern application_path 

macro DaVinci_linkopts    "${application_linkopts}"

# define aliases
alias DaVinci "${DAVINCIROOT}/${BINDIR}/DaVinci.exe"
