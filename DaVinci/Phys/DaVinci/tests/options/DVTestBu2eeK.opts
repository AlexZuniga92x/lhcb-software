//--------------------------------------------------------------
//
// Preselection
//
#include "$B2DILEPTONROOT/options/DVPreselBu2LLK.opts"
//
// Truth checking for B0 -> D*Pi
//
ApplicationMgr.TopAlg += { "GaudiSequencer/FindTrueDecay"};
FindTrueDecay.IgnoreFilterPassed = true ;
//-----------------------------------------------------------------------------
//
// Truth filter for B+/- -> e+e- K+/-  No PID
//
FindTrueDecay.Members += { "FilterDesktop/SelectTrueNoPIDsDecay"};

SelectTrueNoPIDsDecay.PhysDesktop.InputLocations = { "Phys/StdNoPIDsKaons",
                                                     "Phys/StdNoPIDsElectrons"} ;

SelectTrueNoPIDsDecay.Filter.Selections =  { "K+ : TrueMCFilterCriterion/Decay",
                                             "e+ : TrueMCFilterCriterion/Decay"} ;
//
// The decay descriptor is the only part that requires some thinking...
//
SelectTrueNoPIDsDecay.Filter.Decay.MCDecayFinder.Decay = "[B+ -> ^K+ ^e+ ^e- {,gamma}{,gamma}{,gamma}{,gamma}{,gamma}]cc" ;
//
// Dummy MakeResonances to check that all tracks are there
//
FindTrueDecay.Members += { "MakeResonances/AllTrueNoPIDsDecay"};
AllTrueNoPIDsDecay.PhysDesktop.InputLocations = {"Phys/SelectTrueNoPIDsDecay"};
AllTrueNoPIDsDecay.DecayDescriptor = "[B+ -> K+ e- e+]cc" ; // all particles need to be there
//-----------------------------------------------------------------------------
//
// Truth filter for Bd -> D*Pi Loose PID : copy of above with NoPIDs -> Loose 
//
FindTrueDecay.Members += { "FilterDesktop/SelectTrueLooseDecay"};
SelectTrueLooseDecay.PhysDesktop.InputLocations = { "Phys/StdLooseKaons",
                                                    "Phys/StdLooseElectrons"} ;

SelectTrueLooseDecay.Filter.Selections =  { "K+ : TrueMCFilterCriterion/Decay",
                                            "e+ : TrueMCFilterCriterion/Decay"} ;
//
// The decay descriptor is the only part that requires some thinking...
//
SelectTrueLooseDecay.Filter.Decay.MCDecayFinder.Decay = "[B+ -> ^K+ ^e+ ^e- {,gamma}{,gamma}{,gamma}{,gamma}{,gamma}]cc" ;
//
// Dummy MakeResonances to check that all tracks are there
//
FindTrueDecay.Members += { "MakeResonances/AllTrueLooseDecay"};
AllTrueLooseDecay.PhysDesktop.InputLocations = {"Phys/SelectTrueLooseDecay"};
AllTrueLooseDecay.DecayDescriptor = "[B+ -> K+ e- e+]cc" ; // all particles need to be there

PrintDiLeptonForPreselBu2LLK.OutputLevel=4;
//
// Correlations
//
ApplicationMgr.TopAlg += { "SelResultCorrelations/TestCorrelations" };

TestCorrelations.Algorithms = { "AllTrueNoPIDsDecay", 
                                "AllTrueLooseDecay",
                                "DiLeptonForPreselBu2LLK",
                                "PreselBu2LLK" };

