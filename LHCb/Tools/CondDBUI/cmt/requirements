# $Id: requirements,v 1.13 2007-02-16 15:54:05 marcocle Exp $
package CondDBUI

version v2r0

branches python src cmt db
ignore_pattern package_stamps

# ============== Dependencies ========================================

# library path needed for mysql backend
use mysql         v*    LCG_Interfaces

# library path needed for sqlite backend
use sqlite        v*    LCG_Interfaces

# library path needed for oracle backend
use oracle        v*    LCG_Interfaces
 
#set TNS_ADMIN "$SITEROOT/project/oracle/admin" WIN32 "$SITEROOT\project\oracle\admin"
set TNS_ADMIN ${CONDDBUIROOT}/cmt

# Needed for whatever reason...
use COOL v* LCG_Interfaces
use CORAL v* LCG_Interfaces
use ROOT  v* LCG_Interfaces
apply_tag    NEEDS_COOL_FACTORY
apply_tag    NEEDS_PYCOOL

use Python v* LCG_Interfaces

# This one is needed by CORAL
use XercesC v* LCG_Interfaces

# Needed because of a bug in PyCintex
use CLHEP v* LCG_Interfaces

# ============== Environment =========================================

# CORAL path
set  CORAL_AUTH_PATH       ${HOME}/private
set  CORAL_DBLOOKUP_PATH   ${CONDDBUIROOT}/cmt

# Qt libraries access
#macro         qt_native_version "4.2.1"
macro         qt_native_version "3.3.4"
macro         qt_base         "$(LCG_external)/qt/$(qt_native_version)"
macro         qt_home         "$(qt_base)/$(LCG_system)"
#apply_pattern set_lib_path
path_remove  LD_LIBRARY_PATH "/qt/" WIN32 ""
path_prepend LD_LIBRARY_PATH "$(qt_home)/lib" WIN32 ""

# python path update
# python path update
#macro        pyqt_native_version "4.1"
macro        pyqt_native_version "3.13_python234"
macro        pyqt_base           "$(LCG_external)/pyqt/$(pyqt_native_version)"
macro        pyqt_home           "$(pyqt_base)/$(LCG_system)"
path_remove  PYTHONPATH 	 "/pyqt/" WIN32 "\pyqt\"
#path_prepend PYTHONPATH          "$(pyqt_home)/lib/python$(Python_version)/site-packages"
path_prepend PYTHONPATH          "$(pyqt_base)/slc3_gcc323/lib/python2.3.4/site-packages"

path_remove  PYTHONPATH 	 "/<Package>/" WIN32 "\<Package>\"
path_prepend PYTHONPATH          "$(CONDDBUIROOT)/src"

# Sessions path
set  CONDDBUI_SESSIONS_PATH ${CONDDBUIROOT}/python

alias CondDBBrowser "python ${CONDDBUIROOT}/python/browser.py"

#=====================================================================
private
