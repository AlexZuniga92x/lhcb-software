package  VeloDet 
version  v8r7

# =============== structure ===============================================	
branches         src cmt doc VeloDet 

# =============== own includes ============================================
include_dirs      $(VELODETROOT)

# =============== used packages ===========================================
use DetDescCnv   v2r*   Det 
use VeloKernel   v1r*   Velo
use LHCbKernel	v3r*	Kernel

# =============== link library (base classes) =============================
library          VeloDetLib        Lib/*.cpp 

# =============== component library =======================================
library          VeloDet           component/*.cpp

#================ patterns ================================================
apply_pattern component_library library=VeloDet
apply_pattern linker_library    library=VeloDetLib

