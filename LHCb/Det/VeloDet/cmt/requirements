# =========================================================================

package  VeloDet 
version  v8r6

# =============== structure ===============================================	
branches         src cmt doc VeloDet 

# =============== own includes ============================================
include_dirs      $(VELODETROOT)

# =============== used packages ===========================================
use DetDescCnv   v2r*   Det 
use VeloKernel   v1r*   Velo
use LHCbKernel	v2r*	Kernel

# =============== own options ==========================================
set VELODETOPTS  ${VELODETROOT}/options

# =============== link library (base classes) =============================
library          VeloDetLib        Lib/*.cpp 

# =============== component library =======================================
library          VeloDet           component/*.cpp

#================ patterns ================================================

apply_pattern    package_Lstamps
apply_pattern    package_Llinkopts 
apply_pattern    linker_path

#================ private stuff ===========================================
private
apply_pattern    package_Cshlibflags
apply_pattern    package_Lshlibflags
macro_append     VeloDetLib_shlibflags " $(DetDesc_linkopts) "
macro_append     VeloDetLib_shlibflags  " $(GaudiKernel_linkopts) "
macro_append     VeloDetLib_shlibflags  " $(CLHEP_linkopts) "

