package  CaloDet 
version  v2

# =============== structure ===============================================	
branches         src cmt doc options CaloDet 

# =============== own includes ============================================
include_dirs      $(CALODETROOT)

# =============== used packages ===========================================
use DetDesc      v7*  Det 
use CaloGen      v2*  Calo 

# =============== own options ==========================================
set CALODETOPTS  ${CALODETROOT}/options

# =============== link library (base classes) =============================
library          CaloDetLib        Lib/*.cpp 
apply_pattern    package_Lstamps
apply_pattern    package_Llinkopts 
apply_pattern    linker_path

# =============== component library =======================================
library          CaloDet           component/*.cpp

#================ private stuff ===========================================
private
apply_pattern    package_Cshlibflags
apply_pattern    package_Lshlibflags
macro_append     CalloDetLib_shlibflags " $(DetDesc_linkopts) "
macro_append     CaloDetLib_shlibflags  " $(GaudiKernel_linkopts) "
macro_append     CaloDetLib_shlibflags  " $(CLHEP_linkopts) "

