package DetSys
version v8r0

branches cmt doc dict

use DetDesc             v16r2   Det
use DetDescCnv		v3r0    Det
use DetDescSvc          v1r2    Det
use XmlTools		v3r9    Tools
use VeloDet        	v10r0   Det
use OTDet               v6r0    Det
use CaloDet	   	v7r0    Det
use CaloDetXmlCnv  	v2r3p2	Det
use MuonDet             v5r0    Det
use Magnet              v3r1    Det
#use MuonTools	   	v3r8	Muon
use RichDet	   	v9r0    Det
use RichCondition       v1r1    Rich
use STDet          	v2r0    Det

# =============== LCG Dictionaries ============================================
apply_pattern     lcg_dictionary                                       \
                  dictionary=Det                                 \
                  headerfiles=$(DETSYSROOT)/dict/DetDict.h     \
                  selectionfile=$(DETSYSROOT)/dict/DetDict.xml \
                  options="--split --reflex"

# =============== patterns ====================================================
apply_pattern     component_library    library=DetDict

# ==== DetCond needed to compile DetDict but do not link with DetCondLib
private
use DetCond v* Det
macro_remove use_linkopts $(DetCond_linkopts)
macro_remove use_linkopts $(COOL_linkopts)
