package DetSys
version v7r7

branches cmt doc dict

use DetDesc             v15r6   Det
use DetDescCnv		v2r10   Det
use XmlTools		v3r8    Tools
use VeloDet        	v9r8    Det
use OTDet          	v5r6    Det
use CaloDet	   	v6r9p1  Det
use CaloDetXmlCnv  	v2r3p1	Det
use MuonDet        	v4r8	Det
use Magnet        	v2r9    Det
use MuonTools	   	v3r8	Muon
use RichDet	   	v8r5    Det
use RichCondition       v1r0    Rich
use STDet          	v2r0    Det

# =============== LCG Dictionaries ============================================
apply_pattern     lcg_dictionary                                       \
                  dictionary=Det                                 \
                  headerfiles=$(DETSYSROOT)/dict/DetDict.h     \
                  selectionfile=$(DETSYSROOT)/dict/DetDict.xml \
                  options="--split --reflex"

# =============== patterns ====================================================
apply_pattern     component_library    library=DetDict

# ==== DetCond needed to compile DetDict but do not link with DetCondLib
private
use DetCond v* Det
macro_remove use_linkopts $(DetCond_linkopts)
macro_remove use_linkopts $(COOL_linkopts)
