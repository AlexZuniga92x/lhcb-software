package           DetDescChecks
version           v3r0

# =============== structure ===================================================
branches          cmt doc src options python

# =============== dependencies ================================================
use               DetDesc     v* Det
use               DetDescSvc  v* Det
use               GaudiAlg    v*   	
use               Boost       v* LCG_Interfaces 
use               GaudiPython v* 	
# =============== constituents ================================================
library           DetDescChecks   *.cpp -import=AIDA

# =============== patterns ====================================================
apply_pattern     component_library library=DetDescChecks 

# =============================================================================
# Build an application
# =============================================================================
application       DetDescCheck $(GAUDICONFROOT)/src/GaudiMain.cpp

path_remove  PYTHONPATH "DetDescChecks"
path_prepend PYTHONPATH "$(DETDESCCHECKSROOT)/python"

private
use               XmlDDDB       v* Det
use               XmlConditions v* Det
use               RootHistCnv v*
use               GaudiConf   v*
use               GaudiSvc    v*
use               DetDescCnv  v* Det
macro DetDescCheck_linkopts "$(application_linkopts)"
apply_pattern     application_path

