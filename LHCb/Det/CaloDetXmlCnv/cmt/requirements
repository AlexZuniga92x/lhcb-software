# =============================================================================
# The package with XML-converters gfor Caloriometer Detector Model 
# =============================================================================
package   CaloDetXmlCnv
version   v2r3

# =============== structure ===================================================	
branches         src cmt doc options 

# =============== own includes ================================================
include_dirs      $(CALODETXMLCNVROOT)

# =============== used packages ===============================================
use CaloDet      v6r*  Det 
use DetDescCnv   v2r*  Det 

# =============== own options =================================================
set CALODETXMLCNVOPTS  ${CALODETXMLCNVROOT}/options

# =============== component library ===========================================
library          CaloDetXmlCnv  *.cpp

# =============== patterns ====================================================
apply_pattern    component_library library=CaloDetXmlCnv 

