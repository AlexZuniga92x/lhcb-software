package  OTDet 
version  v5r2

# =============== structure ===============================================	
branches         src cmt doc OTDet 

# =============== own includes ============================================
include_dirs      $(OTDETROOT)

# =============== used packages ===========================================
use DetDescCnv   v2r*   Det 
use LHCbKernel	v4r*	Kernel

# =============== own options ==========================================
set OTDETOPTS  ${OTDETROOT}/options

# =============== link library (base classes) =============================
library          OTDetLib        Lib/*.cpp 

# =============== component library =======================================
library          OTDet           component/*.cpp

#================ patterns ================================================
apply_pattern component_library library=OTDet
apply_pattern linker_library    library=OTDetLib 

