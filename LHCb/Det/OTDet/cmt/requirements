# =========================================================================

package  OTDet 
version  v3r3

# =============== structure ===============================================	
branches         src cmt doc OTDet 

# =============== own includes ============================================
include_dirs      $(OTDETROOT)

# =============== used packages ===========================================
use LHCbKernel   v2r*   Kernel
use DetDesc      v11r*  Det 

# =============== own options ==========================================
set OTDETOPTS  ${OTDETROOT}/options

# =============== link library (base classes) =============================
library          OTDetLib        Lib/*.cpp 

# =============== component library =======================================
library          OTDet           component/*.cpp

#================ patterns ================================================

apply_pattern    package_Lstamps
apply_pattern    package_Llinkopts 
apply_pattern    linker_path

#================ private stuff ===========================================
private
apply_pattern    package_Cshlibflags
apply_pattern    package_Lshlibflags
macro_append     OTDetLib_shlibflags  " $(DetDesc_linkopts) "
macro_append     OTDetLib_shlibflags  " $(GaudiKernel_linkopts) "
macro_append     OTDetLib_shlibflags  " $(CLHEP_linkopts) "
