# $Id: requirements,v 1.23 2002-12-03 16:52:43 andreav Exp $
package DetCond
version v4r2

branches DetCond cmt src doc

# GAUDI framework dependencies
use GaudiKernel v13r*
use GaudiSvc    v10r*

# Objy-based ConditionsDB
macro CondDBObjy_use        "CONDDB v3r02p3" \
      rh72_gcc2952          "" \
      rh73_gcc2952          "" \
      WIN32                 ""
use $(CondDBObjy_use)

# Oracle-based ConditionsDB
macro CondDBOracle_use      "" \
      rh72_gcc2952          "CondDBOracle v4r17 Det" \
      rh73_gcc2952          "CondDBOracle v4r17 Det" \
      WIN32                 "CondDBOracle v4r17 Det"
use $(CondDBOracle_use)

# MYSQL-based ConditionsDB
macro CondDBMySQL_use       "" \
      rh72_gcc2952          "CondDBMySQL v0r06 Det" \
      rh73_gcc2952          "CondDBMySQL v0r06 Det" \
      WIN32                 "CondDBMySQL v0r06 Det"
use $(CondDBMySQL_use)

# Detector Description
# This is only needed because updateObj assumes a Condition (TEMPORARY?)
use DetDesc v11r* Det

include_dirs $(DETCONDROOT)

# Build a component library
macro DetCond_sources "component/*.cpp" 
library DetCond $(DetCond_sources)

# Export the component library to dependent packages
apply_pattern package_Clinkopts
apply_pattern packageShr

apply_pattern ld_library_path

#==================================================================
private

apply_pattern package_Cshlibflags
macro_append DetCond_shlibflags " $(GaudiKernel_linkopts)"
macro_append DetCond_shlibflags " $(CONDDB_linkopts)" \
             WIN32              " $(CondDBOracle_linkopts)"





