# $Id: requirements,v 1.8 2001-12-16 15:59:26 andreav Exp $
package DetCond
version v2r0

branches DetCond cmt src doc

# GAUDI framework dependencies
use GaudiSys v9*

# ConditionsDB package
use CONDDB v3r02*

# Detector Description
# This is only needed because updateObj assumes a Condition (TEMPORARY?)
use DetDesc v9* Det

include_dirs $(DETCONDROOT)

# Build a component library
library DetCond component/*.cpp

ignore_pattern package_stamps

apply_pattern ld_library_path

# This is the directory where you will build the dOxygen html doc
# This is also the directory where you will find the dOxygen tagfile
set DETCOND_DOXYGEN \
  /afs/cern.ch/user/v/valassi/www/dOxygen/DetCond/html
# ${DETCONDROOT}/doc/html

# This is the URL prefix where you will access the dOxygen documentation
set DETCOND_DOXYURL \
  http://www.cern.ch/~valassi/dOxygen/DetCond/html
# file:${DETCONDROOT}/doc/html

# This is the package version number
set DETCOND_DOXYVERSION $(DETCONDVERSION)

#==================================================================
private

apply_pattern package_Cshlibflags
apply_pattern package_Lshlibflags
macro_append DetCond_shlibflags "$(GaudiKernel_linkopts) $(CONDDB_linkopts)"





