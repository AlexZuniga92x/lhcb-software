package DetCond
version v6r0

branches DetCond cmt src doc

# GAUDI framework dependencies
use GaudiKernel v*
use GaudiSvc    v*

use COOL v0r1

# Detector Description
# This is only needed because updateObj assumes a Condition (TEMPORARY?)
use DetDesc v* Det

include_dirs $(DETCONDROOT)



# Build a component library
macro DetCond_sources "component/*.cpp" 
library DetCond $(DetCond_sources)

# Export the component library to dependent packages
apply_pattern package_Clinkopts
apply_pattern packageShr

apply_pattern ld_library_path

#==================================================================
private

apply_pattern package_Cshlibflags
macro_append DetCond_shlibflags " $(GaudiKernel_linkopts)"
macro_append DetCond_shlibflags "" \
        slc3_ia32_gcc323_dbg " -L/afs/cern.ch/user/c/cattanem/w0/LHCB/LHCB_v18r0/Det/DetDesc/v14r3/slc3_ia32_gcc323 -L/afs/cern.ch/user/c/cattanem/w0/LHCB/LHCB_v18r0/Det/DetDescCnv/v2r3/slc3_ia32_gcc323"
macro_append DetCond_shlibflags " $(COOL_linkopts)" 