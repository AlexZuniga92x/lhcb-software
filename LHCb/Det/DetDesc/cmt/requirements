# $Id: requirements,v 1.26 2001-12-14 14:35:22 ranjard Exp $ 
# =============================================================================
package DetDesc
version v9r0

branches DetDesc doc cmt src

include_dirs $(DETDESCROOT)

use GaudiKernel v11r*
use CLHEP v17r*
use XERCES v1*

# avoid displaying of warning messages coming from xerces
set XmlBaseDetElemCnv_cpp_cppflags "-w"
set XmlGenericCnv_cpp_cppflags "-w"
set XmlTabulatedPropertyCnv_cpp_cppflags "-w"
set XmlSurfaceCnv_cpp_cppflags "-w"
set XmlMixtureCnv_cpp_cppflags "-w"
set XmlLVolumeCnv_cpp_cppflags "-w"
set XmlCatalogCnv_cpp_cppflags "-w"
set XmlDetectorElementCnv_cpp_cppflags "-w"
set XmlElementCnv_cpp_cppflags "-w"
set XmlIsotopeCnv_cpp_cppflags "-w"
set XmlCnvSvc_cpp_cppflags "-w"
set XmlParserSvc_cpp_cppflags "-w"

# build a Linker library
library DetDescLib   Lib/*.cpp
apply_pattern package_Lstamps

# build a component library
library DetDesc      component/*.cpp

apply_pattern package_Llinkopts

apply_pattern linker_path

#==================================================================
private
apply_pattern package_Lshlibflags
apply_pattern package_Cshlibflags
macro_append  DetDescLib_shlibflags "$(GaudiKernel_linkopts) " 
macro_append  DetDescLib_shlibflags "$(CLHEP_linkopts) " 
macro_append  DetDescLib_shlibflags "$(XERCES_linkopts) " 
macro_append  DetDescLib_shlibflags "$(ExternalLibs_linkopts) "
# remove warnings form unused variables in XML-xerces headers 
macro_append  DetDesc_cppflags " "  \ 
          Linux "-Wno-unused "     
