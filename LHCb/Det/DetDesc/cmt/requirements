# $Id: requirements,v 1.30 2002-01-22 15:24:38 sponce Exp $ 
# =============================================================================
package DetDesc
version v9r2

branches DetDesc doc cmt src

include_dirs $(DETDESCROOT)

use GaudiKernel v11r*
use CLHEP v17r*
use XERCES v15r*

# build a Linker library
library DetDescLib   Lib/*.cpp
apply_pattern package_Lstamps

# build a component library
library DetDesc      component/*.cpp

apply_pattern package_Llinkopts

apply_pattern linker_path

#==================================================================
private
apply_pattern package_Lshlibflags
apply_pattern package_Cshlibflags
macro_append  DetDescLib_shlibflags "$(GaudiKernel_linkopts) " 
macro_append  DetDescLib_shlibflags "$(CLHEP_linkopts) " 
macro_append  DetDescLib_shlibflags "$(XERCES_linkopts) " 
