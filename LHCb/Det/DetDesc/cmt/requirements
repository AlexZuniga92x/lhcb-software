package DetDesc
version v10r1

branches DetDesc doc cmt src

include_dirs $(DETDESCROOT)

use GaudiKernel v12r*
use CLHEP       v17r*
use AIDA        v2r* 
use XERCES      v16r*

# build a Linker library
library DetDescLib   Lib/*.cpp
apply_pattern package_Lstamps

# build a component library
library DetDesc      component/*.cpp

apply_pattern package_Llinkopts

apply_pattern linker_path

#==================================================================
private
apply_pattern package_Lshlibflags
apply_pattern package_Cshlibflags
private
macro_remove  use_linkopts "$(DetDesc_linkopts)"
macro_append  DetDescLib_shlibflags " $(use_linkopts)" 

private 
application   SolidsTest -check  Test/SolidsTest.cpp 
macro_prepend SolidsTestlinkopts " $(DetDesc_linkopts) "
apply_pattern application_path
path_remove   PATH                  "DetDesc"
path_append   PATH                  ${DETDESCROOT}/${BINDIR}
