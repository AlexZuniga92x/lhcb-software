# =========== constituents =====================================================
library       DetDescLib        Lib/*.cpp
library       DetDesc           component/*.cpp

# =========== standard patterns (the order is essential!) ====================== 
apply_pattern component_library library=DetDesc 
apply_pattern linker_library    library=DetDescLib 
apply_pattern library_stamps    library=DetDescLib 