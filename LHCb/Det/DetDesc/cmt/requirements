# $Id: requirements,v 1.28 2002-01-21 13:54:24 cattanem Exp $ 
# =============================================================================
package DetDesc
version v9r1

branches DetDesc doc cmt src

include_dirs $(DETDESCROOT)

use GaudiKernel v11r*
use CLHEP v17r*
use XERCES v15r*

# build a Linker library
library DetDescLib   Lib/*.cpp
apply_pattern package_Lstamps

# build a component library
library DetDesc      component/*.cpp

apply_pattern package_Llinkopts

apply_pattern linker_path

#==================================================================
private
apply_pattern package_Lshlibflags
apply_pattern package_Cshlibflags
macro_append  DetDescLib_shlibflags "$(GaudiKernel_linkopts) " 
macro_append  DetDescLib_shlibflags "$(CLHEP_linkopts) " 
macro_append  DetDescLib_shlibflags "$(XERCES_linkopts) " 

# remove warnings due to XERCES headers 
macro XmlBaseDetElemCnv_pp_cppflags "$(XERCES_warnings)"
macro XmlBaseConditionCnv_pp_cppflags "$(XERCES_warnings)"
macro XmlGenericCnv_pp_cppflags "$(XERCES_warnings)"
macro XmlTabulatedPropertyCnv_pp_cppflags "$(XERCES_warnings)"
macro XmlSurfaceCnv_pp_cppflags "$(XERCES_warnings)"
macro XmlMixtureCnv_pp_cppflags "$(XERCES_warnings)"
macro XmlLVolumeCnv_pp_cppflags "$(XERCES_warnings)"
macro XmlCatalogCnv_pp_cppflags "$(XERCES_warnings)"
macro XmlDetectorElementCnv_pp_cppflags "$(XERCES_warnings)"
macro XmlElementCnv_pp_cppflags "$(XERCES_warnings)"
macro XmlIsotopeCnv_pp_cppflags "$(XERCES_warnings)"
macro XmlCnvSvc_pp_cppflags "$(XERCES_warnings)"
macro XmlParserSvc_pp_cppflags "$(XERCES_warnings)"
macro XmlConditionCnv_pp_cppflags "$(XERCES_warnings)"
