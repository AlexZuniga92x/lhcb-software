#============================================================================
package           TfKernel
version           v1r0

#============================================================================
# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc src TfKernel

#============================================================================
# Used packages.
#============================================================================
use     DAQEvent        v*      Event
use     RecEvent        v*      Event
use     OTDet           v*      Det
use     STDet           v*      Det
use     VeloDet         v*      Det
use     GaudiAlg        v*
use     LoKiCore        v*      Phys

#============================================================================
# Install public includes
#============================================================================
apply_pattern install_more_includes more=TfKernel

#============================================================================
# Linker library building rule
#============================================================================
library          TfKernelLib    ../src/Lib/*.cpp 
apply_pattern    linker_library library=TfKernelLib

#============================================================================
# Component library building rule
#============================================================================
library          TfKernel       ../src/component/*.cpp
apply_pattern    component_library library=TfKernel


