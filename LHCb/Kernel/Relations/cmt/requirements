# CVS tag $Name: not supported by cvs2svn $ ; version $Revision: 1.11 $  
# =============================================================================
package Relations
author  I.Belyaev
manager I.Belyaev

version v3r0

# ============= structure =====================================================
branches      Relations doc cmt src dict python

# ============== own includes =================================================
include_dirs     $(RELATIONSROOT)

# ============== dependencies =================================================
use              GaudiAlg    v*
use              Python      v* LCG_Interfaces -no_auto_import 
use              Reflex      v* LCG_Interfaces -no_auto_import 
use              Boost       v* LCG_Interfaces -no_auto_import 

# ============== Produce LCG dictionary =======================================
apply_pattern     reflex_dictionary                                 \
                  dictionary=Relations                              \
                  headerfiles=$(RELATIONSROOT)/dict/selection.h     \
                  selectionfile=$(RELATIONSROOT)/dict/selection.xml

# ============== constituents =================================================
library          RelationsLib *.cpp

# ============== patterns =====================================================
apply_pattern    component_library library=RelationsDict
apply_pattern    linker_library    library=RelationsLib

# ============== find memory leaks ============================================
macro_append     Relations_pp_cppflags '  -DCOUNT_INSTANCES  ' \
                 WIN32                 ' /D"COUNT_INSTANCES" '

path_remove  PYTHONPATH "Relations"
path_prepend PYTHONPATH "$(RELATIONSROOT)/python"
path_prepend PYTHONPATH "$(RELATIONSROOT)/$(BINDIR)"

# private
apply_pattern application_path 

# =============================================================================
# The END 
# =============================================================================
# The END 
# =============================================================================
