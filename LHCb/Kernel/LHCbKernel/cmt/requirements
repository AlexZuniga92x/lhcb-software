package LHCbKernel
author  M.Frank    CERN/LHCb
manager M.Cattaneo CERN/LHCb

version v1r0

include_dirs $(LHCBKERNELROOT)

# Main program and standard job options
use GaudiKernel   v11r*
use CLHEP         v17r*

library LHCbKernel *.cpp

apply_pattern package_linkopts
apply_pattern package_stamps
apply_pattern ld_library_path

#==========================================================================
private
apply_pattern package_shlibflags
macro_append LHCbKernel_shlibflags "$(GaudiKernel_linkopts) $(CLHEP_linkopts)"
