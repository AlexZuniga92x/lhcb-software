# CVS tag $Name: not supported by cvs2svn $
# =============================================================================
package LHCbKernel
author  M.Frank    CERN/LHCb
manager M.Cattaneo CERN/LHCb

version v1r0

include_dirs $(LHCBKERNELROOT)

# Dependency on GaudiKernel via GaudiObjDesc 
use GaudiObjDesc       v3r*
use CLHEP              v17r*

# Produce Header-Files from XML description, overriding default destination
#============================================================================
macro LHCbKernelObj2Doth_GODflags " -o ../Kernel/ " \
      WIN32                       " -o ..\Kernel\ "
document obj2doth LHCbKernelObj2Doth ../xml/*.xml

# Dictionary not yet working on ITChannelID, looking for include file in /Event
macro LHCbKernelObj2Dict_GODflags " -l Kernel/ " \
      WIN32                       " -l Kernel\ "
document obj2dict LHCbKernelObj2Dict ../xml/*.xml

library LHCbKernel *.cpp \
                   ../dict/*.cpp

apply_pattern package_linkopts
apply_pattern package_stamps
apply_pattern linker_path

# =============================================================================
# Private stuff 
# =============================================================================
private
macro_remove use_linkopts $(LHCbKernel_linkopts)
macro LHCbKernel_shlibflags "$(use_linkopts) $(libraryshr_linkopts)"

# =============================================================================
# The End 
# =============================================================================
