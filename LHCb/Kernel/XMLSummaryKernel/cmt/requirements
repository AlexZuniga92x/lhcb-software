#============================================================================
package XMLSummaryKernel 
version v1r0

# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc src options tests XMLSummaryKernel

# Packages needed to compile and link the application
use XMLSummaryBase     v* Kernel
use GaudiKernel        v*
use GaudiUtils        v*
#use GaudiSvc           v*                   -no_auto_imports

# Packages needed to resolve external dependencies at run time
private
  use GaudiConf          v*                   -no_auto_imports
  use Python             v*    LCG_Interfaces -no_auto_imports
end_private


library XMLSummaryKernel *.cpp -import=Python

# define link options
#============================================================================
#
apply_pattern component_library library=XMLSummaryKernel
#apply_pattern install_python_modules
apply_pattern install_more_includes more=XMLSummaryKernel
apply_pattern QMTest
