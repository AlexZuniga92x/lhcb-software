package   RichRecBase
version   v1r14

#============================================================================
# Structure
#============================================================================
branches xml doc src cmt Event RichRecBase

#============================================================================
# Used packages.
#============================================================================
use   RichEvent      v8r*    Event

#============================================================================
# Environment
#============================================================================
include_dirs $(RICHRECBASEROOT)

#============================================================================
# Build GOD objects
#============================================================================
document obj2doth RichRecBase_CommonObj2Doth   ../xml/*.xml
document obj2dict RichRecBase_CommonObj2Dict   ../xml/*.xml

#============================================================================
# Build libraries (including dictionary)
#============================================================================
library RichRecBase           ../src/event/*.cpp ../src/base/*.cpp
library RichRecBaseEventDict  ../dict/*.cpp

apply_pattern component_library library=RichRecBaseEventDict
apply_pattern linker_library    library=RichRecBase

#============================================================================
private
include_dirs $(RICHRECBASEROOT)/Event
