#============================================================================
# Created    : 2002-11-19
# Maintainer : Chris Jones
#
# Documentation on the requirement file can be found at
# http://cern.ch/lhcb-comp/Support/html/new_structure.pdf
#============================================================================

package   RichRecBase
version   v1r3

#============================================================================
# Structure
#============================================================================
branches xml doc src cmt Event RichRecBase

#============================================================================
# Used packages.
#============================================================================
use   RichEvent      v5r*  Event
use   RichKernel     v3r*  Rich
use   RichUtils      v3r*  Rich
use   RichDetTools   v2r*  Rich
use   GaudiObjDesc   v5r*  -no_auto_imports

#============================================================================
# Environment
#============================================================================
include_dirs $(RICHRECBASEROOT)

#============================================================================
# Build GOD objects
#============================================================================

# Common XML
document obj2doth RichRecBase_CommonObj2Doth   ../xml/RichRecBase_Event.xml
document obj2dict RichRecBase_CommonObj2Dict   ../xml/RichRecBase_Event.xml

# Build libraries (including dictionary)
#============================================================================
library RichRecBase           ../src/event/*.cpp ../src/base/*.cpp
library RichRecBaseEventDict  ../dict/*.cpp -import=GaudiIntrospection
apply_pattern  package_linkopts
apply_pattern  package_stamps
apply_pattern  linker_path
macro_append   RichRecBase_linkopts "" WIN32 " /include:_RichRecBaseEvent_loadRef"

#============================================================================
private
apply_pattern package_shlibflags
include_dirs $(RICHRECBASEROOT)/Event
macro RichRecBaseEventDict_shlibflags  "$(GaudiIntrospection_linkopts) $(RichRecBase_linkopts) $(use_linkopts) $(libraryshr_linkopts)"

#============================================================================
