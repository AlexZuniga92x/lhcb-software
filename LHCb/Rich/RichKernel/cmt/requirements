# ================ structure =================================================
branches RichKernel RichEvent cmt doc src


# ================ dependencies ==============================================
use DetDesc            v*   Det
use LHCbKernel         v*   Kernel
use GaudiAlg           v*
use Boost              v*   LCG_Interfaces

# ================ environment ===============================================
apply_pattern install_more_includes more=RichKernel offset=RichEvent

# ================ linker library ============================================
library RichKernel ../src/*.cpp
apply_pattern linker_library library=RichKernel

# Debug flag
macro_append cppflags "" \
          Linux&debug " -DRICHDEBUG "
