package RichKernel
version v5r3

# ================ structure =================================================
branches RichKernel cmt doc src

# ================ environment ===============================================
include_dirs $(RICHKERNELROOT)

# ================ dependencies ==============================================
use DetDesc     v14r*   Det
use LHCbKernel  v5r*    Kernel
use GaudiAlg    v*
use GSL         v*	LCG_Interfaces

# ================ linker library ============================================
library RichKernel ../src/*.cpp
apply_pattern linker_library library=RichKernel
