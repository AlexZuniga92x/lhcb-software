package RichKernel
version v1r1

# ================ structure =================================================
branches RichKernel cmt doc src

# ================ environment ===============================================
include_dirs $(RICHKERNELROOT)

# ================ dependencies ==============================================
use LHCbKernel	v1r* Kernel

# ================ linker library ============================================
library RichKernel ../src/*.cpp

apply_pattern package_linkopts
apply_pattern package_stamps
apply_pattern ld_library_path

#=============================================================================
private
apply_pattern package_shlibflags
