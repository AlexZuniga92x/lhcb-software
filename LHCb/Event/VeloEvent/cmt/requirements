package VeloEvent
version v10r0

branches Event src cmt xml dict

use GaudiKernel v11*
use GaudiObjDesc v4r0
use CLHEP v17r*
use LHCbEvent v* Event
use EventKernel v* Event
use VeloAlgs v1* Velo
use LHCbKernel v*

include_dirs $(VELOEVENTROOT)

# Produce Header-Files & dictionary from XML description
#============================================================================
document obj2doth VeloEventObj2Doth ../xml/VeloEvent.xml

# Generation of data dictionary for Gaudi Introspection Service
#============================================================================
document obj2dict VeloEventObj2Dict -group=dict ../xml/VeloEvent.xml
library VeloEventDict -group=dict ../dict/*.cpp
macro VeloEventDict_shlibflags "$(use_linkopts) $(libraryshr_linkopts)"

#component library
#============================================================================
library VeloEvent          ../src/*.cpp

apply_pattern package_Clinkopts
apply_pattern packageShr

# ========================================================================
private 

apply_pattern package_Cshlibflags 




















