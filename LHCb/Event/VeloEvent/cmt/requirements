# $Id: requirements,v 1.23 2003-06-16 12:35:17 sponce Exp $
package VeloEvent
version v12r0

branches Event src xml cmt doc dict

use Event        v3r* Event
use GaudiObjDesc v5r* -no_auto_imports

include_dirs	 $(VELOEVENTROOT)

#---- Produce Header-Files from XML description
document obj2doth VeloEventObj2Doth ../xml/VeloEvent.xml
document obj2dict VeloEventObj2Dict ../xml/VeloEvent.xml

# Build libraries (including dictionary)
#============================================================================
library          VeloEvent      *.cpp
library          VeloEventDict  ../dict/*.cpp -import=GaudiIntrospection

apply_pattern package_linkopts
apply_pattern linker_path
apply_pattern package_stamps
macro_append VeloEvent_linkopts "" WIN32 "/include:_VeloEvent_loadRef"


apply_pattern package_shlibflags
#============================================================================
private
macro VeloEventDict_shlibflags  "$(GaudiIntrospection_linkopts) $(use_linkopts) $(libraryshr_linkopts)"
#============================================================================
