package VeloEvent

version v15r0

branches cmt doc src xml Event

include_dirs    $(VELOEVENTROOT)

use LHCbKernel     v* Kernel
use EventBase      v* Event
use MCEvent        v* Event

#---- Produce Header-Files from XML description
document obj2doth VeloEventObj2Doth ../xml/*.xml
document obj2dict VeloEventObj2Dict ../xml/*.xml

# Build libraries (including dictionary)
#============================================================================
library          VeloEventDict  ../$(tag)/dict/VeloEvent/*.cpp
#
apply_pattern component_library library=VeloEventDict
macro_remove VeloEvent_dependencies "VeloEvent_linker_library"
#
private
use GaudiObjDesc v* -no_auto_imports
