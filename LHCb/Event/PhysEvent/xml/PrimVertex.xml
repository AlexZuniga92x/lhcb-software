<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE gdd SYSTEM "gdd.dtd" >

<gdd>

  <package name="PhysEvent">
<!-- ****************************************************************
     * PrimVertex                                                   *
     ****************************************************************-->

     <class 
      author="Gloria Corti"
      desc="Physics analysis Primary Vertex. Inherits from Vertex plus TrTracks information"
      name="PrimVertex"
      id="804"
      keyedContTypeDef="TRUE"
     >
       <base name="Vertex"/>
       &KeyedObject;
       <import name="Event/TrStoredTrack" soft="TRUE"/>
       <relation
        name="tracks"
        desc="Reference to tracks composing the vertex"
        multiplicity="N"
        type="TrStoredTrack"
       />
     </class>
  </package>
</gdd>