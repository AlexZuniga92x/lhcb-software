<!-- ****************************************************************
     * AxPartCandidate                                              *
     ****************************************************************-->

    <class
     name="AxPartCandidate"
     id="810"
     author="G. Corti"
     desc="Transient Class for Particle Candidates">
      <desc>Representing what is known or assumed about a particle in the event.</desc>
      <base name="KeyedObject&lt;int&gt;"/>
      <!-- the following line is necessary to not use LHCbEvent -->
      <import name="Event/SummaryPID"/>
      <location
        name="Default"
        place="/Event/Rec/AxPartCandidates"
      />
      <method
       name="threeMomentum"
       type="Hep3Vector"
       desc="Retrieve the measured three momentum vector of a particle"
      />
      <method
       type="HepLorentzVector"
       name="fourMomentum"
       argList="double massValue"
       desc="Retrieve the four momentum vector of a particle. The user must provide the mass"
      />
      <attribute
       name="particleID"
       type="ParticleID"
       desc="Particle ID according to PDG+LHCb numbering"
      />
      <attribute
       name="pIDConfidenceLevel"
       type="double"
       desc="Confidence level for Particle ID"
      />
      <attribute
       name="summaryPID"
       type="SummaryPID"
       desc="Compatible Particle ID Summary"
      />
      <attribute
       name="summaryDet"
       type="long"
       desc="Summary of Detector elements that &apos;saw&apos;this candidate"
      />
      <attribute
       name="mass"
       type="double"
       desc="Measured mass"
      />
      <attribute
       name="charge"
       type="double"
       desc="Charge"
      />
      <attribute
       name="firstPoint"
       type="HepPoint3D"
       init="0.0, 0.0, 0.0"
       desc="First measured point"
      />
      <attribute
       name="fitSlopeX"
       type="double"
       desc="Slope in X direction"
      />
      <attribute
       name="fitSlopeY"
       type="double"
       desc="Slope in Y direction"
      />
      <attribute
       name="fitMomentum"
       type="double"
       desc="Measured total momentum"
      />
      <attribute
       name="fitChiSquare"
       type="double"
       desc="Fit Chi2"
      />
      <attribute
       name="fitCovariance"
       type="HepSymMatrix"
       init="6,0"
       desc="Fit Covariance Matrix"
      />
      <attribute
       name="addrMCTruth"
       type="long"
       desc="Coded word to access corresponding MCParticle"
      />
      <attribute
       name="lastZ"
       type="double"
       desc="Z of last point used in tracking fit"
      />
      <attribute
       name="trkQuality"
       type="long"
       desc="Tracking quality for physics"
      />
      <attribute
       name="nMeasurements"
       type="long"
       desc="Number of measurements used in tracking fit"
      />
    </class>

<!-- ****************************************************************
     * SummaryPID                                                   *
     ****************************************************************-->
    
    <class
     name='SummaryPID'
     author='G. Corti'
     desc='Class containing summary of all possible compatible particleID with a track'
    >
      <constructor
       argList='long pValue, long antipValue'
       desc='special constructor'
      >
        <code>  m_pIDCode = pValue; m_antiPIDCode = antipValue; </code>
      </constructor>
      <attribute
       name='pIDCode'
       type='long'
       desc='Particle ID Summary number'
      />
      <attribute
       name='antiPIDCode'
       type='long'
       desc='Anti Particle Summary number'
      />
    </class>

