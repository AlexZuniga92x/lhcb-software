# Documentation on the requirement file can be found at

package           PhysEvent
version           v4r0

# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc src xml Event

# Include directories
#============================================================================
include_dirs $(PHYSEVENTROOT)

# Used packages. 
#============================================================================
use GaudiObjDesc v3r*
# For next release with Full new Event Model uncomment following lines
use LHCbKernel   v1r*
use EventKernel  v1r*    Event
use Event        v1r*  Event

# Produce Header-Files & dictionary from XML description
#============================================================================
document obj2doth PhysEventObj2Doth ../xml/PhysEvent.xml
document obj2dict PhysEventObj2Dict ../xml/PhysEvent.xml

# Build library (including dictionary)
#============================================================================
library     PhysEvent    *.cpp        \ 
                         ../dict/*.cpp

# Define link options
#============================================================================
apply_pattern    package_linkopts
apply_pattern    package_stamps
apply_pattern    linker_path

#============================================================================
private
macro_remove use_linkopts $(PhysEvent_linkopts)
macro PhysEvent_shlibflags "$(use_linkopts) $(libraryshr_linkopts)"
