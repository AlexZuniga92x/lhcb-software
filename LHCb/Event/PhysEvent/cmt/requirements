package           PhysEvent
version           v8r11

# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc src xml Event

# Include directories
#============================================================================
include_dirs $(PHYSEVENTROOT)

# Used packages. 
#============================================================================
use RichEvent    v*  Event
use MuonEvent    v*  Event

# Produce Header-Files & dictionary from XML description
#============================================================================
document obj2doth PhysEventObj2Doth ../xml/*.xml
document obj2dict PhysEventObj2Dict ../xml/*.xml

# Build libraries (including dictionary)
#============================================================================
library     PhysEvent     *.cpp
library     PhysEventDict ../$(tag)/dict/PhysEvent/*.cpp

# Define link options
#============================================================================
apply_pattern component_library library=PhysEventDict
apply_pattern linker_library    library=PhysEvent
macro_append PhysEvent_linkopts "" WIN32 "/include:_PhysEvent_loadRef"

private
use GaudiObjDesc v*
