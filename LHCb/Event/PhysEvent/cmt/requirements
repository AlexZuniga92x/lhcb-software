# $Id: requirements,v 1.29 2002-12-04 15:28:24 ranjard Exp $
# Created      : 20/06/2001
# Maintainer   : Gloria Corti
#
package           PhysEvent
version           v7r3

# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc dict src xml Event

# Include directories
#============================================================================
include_dirs $(PHYSEVENTROOT)

# Used packages. 
#============================================================================
use TrEvent      v12r* Event
use RichEvent    v4r*  Event
use CaloEvent    v11r* Event
use MuonEvent    v2r*  Event
use GaudiObjDesc v*  -no_auto_imports

# Produce Header-Files & dictionary from XML description
#============================================================================
document obj2doth PhysEventObj2Doth ../xml/PhysEvent.xml
document obj2dict PhysEventObj2Dict ../xml/PhysEvent.xml

# Build libraries (including dictionary)
#============================================================================
library     PhysEvent     *.cpp
library     PhysEventDict ../dict/*.cpp -import=GaudiIntrospection

# Define link options
#============================================================================
apply_pattern    package_linkopts
apply_pattern    package_stamps
apply_pattern    linker_path
macro_append PhysEvent_linkopts "" WIN32 "/include:_PhysEvent_loadRef"


apply_pattern    package_shlibflags
#============================================================================
private
macro PhysEventDict_shlibflags  "$(PhysEvent_linkopts) $(GaudiIntrospection_linkopts) $(use_linkopts) $(libraryshr_linkopts)"
#============================================================================
