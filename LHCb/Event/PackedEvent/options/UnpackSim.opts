// Job options to configure the data on demand service for unpacking the
// packed containers produced by the simulation

// Load the DLL
ApplicationMgr.DLLs += { "PackedEvent" };

// Set up the algorithms
DataOnDemandSvc.Algorithms += {
     "DATA='/Event/Gen/Collisions'     TYPE='UnpackCollision'"
   , "DATA='/Event/MC/Particles'       TYPE='UnpackMCParticle'"
   , "DATA='/Event/MC/Vertices'        TYPE='UnpackMCVertex'"
};
