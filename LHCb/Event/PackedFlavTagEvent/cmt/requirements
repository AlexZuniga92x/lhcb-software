#========================================================================
# Created    : 2008-11-18
# Maintainer : Chris Jones
#========================================================================
package           PackedFlavTagEvent
version           v1r0

#========================================================================
# Structure, i.e. directories to process.
#========================================================================
branches          cmt dict doc src

#========================================================================
# Used packages.
#========================================================================
use   GaudiKernel  v*
use   GaudiAlg     v*
use   LHCbKernel   v*    Kernel
use   Boost        v*    LCG_Interfaces
use   Relations    v*    Kernel
use   MicroDst     v*    Event

private
macro_append Boost_linkopts ' $(Boost_linkopts_regex) '
include_dirs $(PACKEDFLAVTAGEVENTROOT)/src
end_private

#========================================================================
# Linker library building rule
#========================================================================
library          PackedFlavTagEventLib   ../src/lib/*.cpp
apply_pattern    linker_library   library=PackedFlavTagEventLib

#============================================================================
# Produce lcg dictionary
#============================================================================
apply_pattern reflex_dictionary \
                  dictionary=PackedFlavTagEvent \
                  headerfiles=$(PACKEDFLAVTAGEVENTROOT)/dict/PackedFlavTagEventDict.h     \
                  selectionfile=$(PACKEDFLAVTAGEVENTROOT)/dict/PackedFlavTagEventDict.xml
