package GenEvent
version v2r1

branches cmt dict doc src xml Event

use HepMC        v3r121p*	Sim
use GaudiKernel  v12r*
use GaudiObjDesc v4r* 
use EventKernel  v2r*		Event

include_dirs $(GENEVENTROOT)

# Produce Header-Files & dictionary from XML description
#============================================================================
document obj2doth GenEventObj2Doth ../xml/GenEvent.xml
document obj2dict GenEventObj2Dict ../xml/GenEvent.xml

library GenEvent -no_share ../src/*.cpp ../dict/*.cpp

apply_pattern package_linkopts

macro_append GenEvent_linkopts "-u GenEvent_loadRef" \
 WIN32                         "/include:_GenEvent_loadRef"

