<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE gdd SYSTEM 'gdd.dtd' >

<gdd>
  <package name="GenEvent">
    <class
      name   = "HardInfo"
      author = "G.Corti"
      desc   = "Holds parameters associated to hard scatter: Mandelstam variables and Bjorken-x for both incoming partons"
      location = "Gen/HardProcesses"
      id     = "203"
    > 
      &KeyedObject;
      <base name = "KeyedObject&lt;int&gt;"/>
      <attribute
       desc  = "Mandelstam s hat"
       name  = "sHat"
       type  = "double"
       init  = "0.0"
      />
      <attribute
       desc  = "Mandelstam t hat"
       name  = "tHat"
       type  = "double"
       init  = "0.0"
      />
      <attribute
       desc  = "Mandelstam u hat"
       name  = "uHat"
       type  = "double"
       init  = "0.0"
      />
      <attribute
       desc  = "Mandelstam pt hat"
       name  = "ptHat"
       type  = "double"
       init  = "0.0"
      />
      <attribute
       desc  = "Bjorken x1"
       name  = "x1Bjorken"
       type  = "double"
       init  = "0.0"
      />
      <attribute
       desc  = "Bjorken x2"
       name  = "x2Bjorken"
       type  = "double"
       init  = "0.0"
      />
      <relation
       desc  = "Reference to HepMC Event of this collision"
       name  = "event"
       type  = "HepMCEvent"
      />

    </class>    

  </package>
</gdd>
