#============================================================================
# Created    : 2003-07-22
# Maintainer : Helder Lopes
#
# Documentation on the requirement file can be found at
# http://cern.ch/lhcb-comp/Support/html/new_structure.pdf
#============================================================================
package           DAQEvent
version           v4r3

# Structure, i.e. directories to process. 
#============================================================================
branches          cmt dict doc src xml Event 

# Include directories
#============================================================================
include_dirs $(DAQEVENTROOT)

# Used packages.
#============================================================================
use LHCbKernel   v4r*	Kernel

# Produce Header-Files & dictionary from XML description
#============================================================================
document obj2doth DAQEventObj2Doth ../xml/DAQEvent.xml
document obj2dict DAQEventObj2Dict ../xml/DAQEvent.xml

# Produce lcg dictionary for stl containers used in DAQEvent
apply_pattern lcg_dictionary dictionary=DAQEvent                  \
                             headerfiles=$(DAQEVENTROOT)/Event/lcgStl.h     \
                             selectionfile=$(DAQEVENTROOT)/xml/lcg_selection.xml \
                             options="--split"

# Build libraries (including dictionary)
#============================================================================
library          DAQEvent      *.cpp
library          DAQEventDict  ../dict/*.cpp ../$(tag)/dict/DAQEvent/*.cpp

# Standard patterns (order is important!)
apply_pattern component_library library=DAQEventDict
apply_pattern linker_library    library=DAQEvent
macro_append DAQEvent_linkopts "" \
                         WIN32 "/include:_DAQEvent_loadRef"