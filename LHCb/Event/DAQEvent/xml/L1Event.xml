<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE gdd SYSTEM "gdd.dtd">
<gdd>

  <package name="DAQEvent">
<!-- ****************************************************************
     * L1Event                                                    *
     ****************************************************************-->
     <import name="Event/L1Buffer"/>
     <class 
      author="Helder Lopes"
      desc="L1 event"
      name="L1Event"
      location="DAQ/L1Event"
      id="1004"
      serializers="FALSE"
     >
       <base name="DataObject"/>
       &DataObject;
       <attribute
        desc="Map with L1Banks (values) for each bank type"
        name="eventMap"
        type="std::map&lt;int,std::vector&lt;L1Bank&gt; &gt;"
        getMeth="FALSE"
        setMeth="FALSE"
       />
       <attribute
        desc="Pointer to beginning of event buffer"
        name="buffer"
        type="l1_int*"
        setMeth="FALSE"
       />
       <attribute
        desc="Length of event buffer in raw_int words"
        name="bufLen"
        type="unsigned int"
        setMeth="FALSE"
       />
       <constructor desc="Constructor from L1Buffer">
         <arg name="l1Buffer" type="L1Buffer"/>
       </constructor>
       <constructor desc="Constructor from buffer pointer and length (in l1_int words), for use online">
         <arg name="buffer" type="l1_int*"/>
         <arg name="length" type="unsigned int"/>
       </constructor>

       <method
        desc="accessor method to the vector of L1 banks for a given bank type"
        name="banks"
        type="const std::vector&lt;L1Bank &gt; &amp; "
        argList="int bankType"     
       >
         <code> return (m_eventMap[bankType]); </code>
       </method>

       <method
        desc="method to decode buffer into banks, called from constructor"
        name="decode"
        type="void"
        access="PRIVATE"
       />
      </class>
  </package>
</gdd>