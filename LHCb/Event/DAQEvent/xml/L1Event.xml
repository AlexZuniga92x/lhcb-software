<!-- ****************************************************************
     * L1Event                                                    *
     ****************************************************************-->
     <import name="Event/L1Buffer"/>
     <import name="Kernel/CaloMap"/>
     <class 
      author="Helder Lopes"
      desc="L1 event"
      name="L1Event"
      location="DAQ/L1Event"
      id="1004"
      serializers="FALSE"
     >
       <base name="DataObject"/>
       <attribute
        desc="Map with L1Banks (values) for each bank type"
        name="eventMap"
        type="CaloMap &lt;int, std::vector&lt;L1Bank&gt; &gt;"
        getMeth="FALSE"
        setMeth="FALSE"
     />
       <constructor
        desc="Constructor from a map"
       >
         <arg name="eventMap" type="CaloMap &lt;int, std::vector&lt;L1Bank&gt; &gt;"/>
         <code>    m_eventMap=eventMap; </code>
       </constructor>
       <constructor desc="Constructor from L1Buffer">
         <arg name="l1Buffer" type="L1Buffer"/>
       </constructor>

       <method
        desc="accessor method to the vector of L1 banks for a given bank type"
        name="banks"
        type="const std::vector &lt;L1Bank &gt; &amp; "
        argList="int bankType"     
       >
         <code> return (m_eventMap[bankType]); </code>
       </method>
      </class>
