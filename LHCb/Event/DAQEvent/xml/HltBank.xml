<!-- ****************************************************************
     * HltBank                                                    *
     ****************************************************************-->
     <class 
      author="Helder Lopes"
      desc="Hlt bank"
      name="HltBank"
      stdVectorTypeDef="TRUE"
      serializers="FALSE"
     >
       <import name="Event/DAQTypes" soft="FALSE"/>
       <attribute
        desc="Pointer to each data bank(Header+body)"
        name="data"
        type="hlt_int *"
        getMeth="FALSE"
        setMeth="FALSE"
     />
       <constructor
        desc="Constructor from a pointer to a data bank"
       >
         <arg name="pBank" type="hlt_int *"/>
         <code> m_data = pBank; </code>
       </constructor>
       <method
        desc="Return size of the data body part of the bank"
        name="dataSize"
        type="long"
        const="TRUE"
       >
         <code> return m_data[0] - 3; </code>
       </method>
       <method
        desc="Return bankType of this bank "
        name="bankType"
        type="int"
        const="TRUE"
        >
        <code> return int(m_data[2]&amp;65535); </code>
       </method>     
       <method
        desc="Return SourceID of this bank "
        name="bankSourceID"
        type="int"
        const="TRUE"
        >
        <code> return int(m_data[2]&gt;&gt;16); </code>
       </method>     
       <method
        desc="Return pointer to begining of data body of the bank"
        name="data"
        type="hlt_int *"
        const="TRUE"
        >
        <code> return (m_data+3); </code>
       </method>     
     </class>
