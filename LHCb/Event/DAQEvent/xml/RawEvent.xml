<!-- ****************************************************************
     * RawEvent                                                    *
     ****************************************************************-->
     <import name="Event/RawBuffer"/>
     <import name="Kernel/CaloMap"/>
     <class 
      author="Helder Lopes"
      desc="Raw event"
      name="RawEvent"
      location="DAQ/RawEvent"
      id="1002"
      serializers="FALSE"
     >
       <base name="DataObject"/>
       <attribute
        desc="Map with RawBanks (values) for each bank type"
        name="eventMap"
        type="CaloMap &lt;int, std::vector&lt;RawBank&gt; &gt;"
        getMeth="FALSE"
        setMeth="FALSE"
     />
       <constructor
        desc="Constructor from a map"
       >
         <arg name="eventMap" type="CaloMap &lt;int, std::vector&lt;RawBank&gt; &gt;"/>
         <code>m_eventMap=eventMap ; </code>
       </constructor>
       <constructor desc="Constructor from RawBuffer">
         <arg name="rawBuffer" type="RawBuffer"/>
       </constructor>

       <method
        desc="accessor method to the vector of Raw banks for a given bank type"
        name="banks"
        type="const std::vector &lt;RawBank &gt; &amp; "
        argList="int bankType"     
       >
         <code> return (m_eventMap[bankType]); </code>
       </method>
      </class>
