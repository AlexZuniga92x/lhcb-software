<!-- ****************************************************************
     * HLTBank                                                    *
     ****************************************************************-->
     <class 
      author="Helder Lopes"
      desc="HLT bank"
      name="HLTBank"
      stdVectorTypeDef="TRUE"
      serializers="FALSE"
     >
       <import name="Event/DAQTypes" soft="FALSE"/>
       <attribute
        desc="Pointer to each data bank(Header+body)"
        name="data"
        type="hlt_int *"
        getMeth="FALSE"
        setMeth="FALSE"
     />
       <constructor
        desc="Constructor from a pointer to a data bank"
       >
         <arg name="pBank" type="hlt_int *"/>
         <code> m_data = pBank; </code>
       </constructor>
       <method
        desc="Return size of the data body part of the bank"
        name="size"
        type="long"
        const="TRUE"
       >
         <code> return m_data[0]; </code>
       </method>
       <method
        desc="Return Class_ID of this bank "
        name="bankClass_ID"
        type="int"
        const="TRUE"
        >
        <code> return int(m_data[2]&amp;65535); </code>
       </method>     
       <method
        desc="Return Source_ID of this bank "
        name="bankSource_ID"
        type="int"
        const="TRUE"
        >
        <code> return int(m_data[2]&gt;&gt;16); </code>
       </method>     
       <method
        desc="Return pointer to begining of data body of the bank"
        name="data"
        type="hlt_int *"
        const="TRUE"
        >
        <code> return (m_data+3); </code>
       </method>     
     </class>
