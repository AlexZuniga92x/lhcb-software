<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE gdd SYSTEM "gdd.dtd">
<gdd>

  <package name="DAQEvent">
<!-- ****************************************************************
     * RawBank                                                      *
     ****************************************************************-->
     <class 
      author="Helder Lopes"
      desc="Raw data bank as read by DAQ after L1"
      name="RawBank"
      stdVectorTypeDef="TRUE"
      serializers="FALSE"
     >
       <import name="Event/DAQTypes" soft="FALSE"/>
       <attribute
        desc="Pointer to each data bank(Header+body)"
        name="data"
        type="raw_int *"
        getMeth="FALSE"
        setMeth="FALSE"
     />
       <constructor
        desc="Constructor from a pointer to a data bank"
       >
         <arg name="pBank" type="raw_int *"/>
         <code> m_data = pBank; </code>
       </constructor>
       <method
        desc="Return size of the data body part of the bank"
        name="dataSize"
        type="long"
        const="TRUE"
       >
         <code> return m_data[0] - 2; </code>
       </method>
       <method
        desc="Return bankType of this bank "
        name="bankType"
        type="int"
        const="TRUE"
        >
        <code> return int(m_data[1]&amp;0xFF); </code>
       </method>     
       <method
        desc="Return version of this bank "
        name="version"
        type="int"
        const="TRUE"
        >
        <code> return int((m_data[1]&amp;0xFF00)&gt;&gt;8); </code>
       </method>     
       <method
        desc="Return SourceID of this bank "
        name="bankSourceID"
        type="int"
        const="TRUE"
        >
        <code> return int(m_data[1]&gt;&gt;16); </code>
       </method>     
       <method
        desc="Return pointer to begining of data body of the bank"
        name="data"
        type="raw_int *"
        const="TRUE"
        >
        <code> return (m_data+2); </code>
       </method>     
     </class>
  </package>
</gdd>