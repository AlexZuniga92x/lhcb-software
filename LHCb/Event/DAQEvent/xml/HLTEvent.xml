     ****************************************************************-->
     <import name="Event/HLTBuffer"/>
     <class 
      author="Helder Lopes"
      desc="HLT event"
      name="HLTEvent"
      location="DAQ/HLTEvent"
      id="1002"
      serializers="FALSE"
     >
       <base name="DataObject"/>
       <attribute
        desc="Map with HLTBanks (values) for each class ID(keys)"
        name="eventMap"
        type="std::map &lt;int, std::vector&lt;HLTBank&gt; &gt;"
        getMeth="FALSE"
        setMeth="FALSE"
     />
       <constructor
        desc="Constructor from a map"
       >
         <arg name="eventMap" type="std::map &lt;int, std::vector&lt;HLTBank&gt; &gt;"/>
         <code>m_eventMap=eventMap ; </code>
       </constructor>
       <constructor desc="Constructor from HLTBuffer">
         <arg name="hltBuffer" type="HLTBuffer"/>
       </constructor>

       <method
        desc="accessor method to the vector of HLT banks for a given class ID"
        name="banks"
        type="const std::vector &lt;HLTBank &gt; &amp; "
        argList="int class_ID"     
       >
         <code> return (m_eventMap[class_ID]); </code>
       </method>
      </class>