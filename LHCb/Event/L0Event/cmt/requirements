# $Id: requirements,v 1.27 2003-06-16 13:10:01 sponce Exp $
package L0Event
version v13r1

branches Event cmt doc xml src

include_dirs $(L0EVENTROOT)

use 	LHCbKernel	v2r*    Kernel
use     EventKernel     v2r*    Event
use 	MuonKernel 	v2r* 	Muon
use 	GaudiObjDesc	v5r*    -no_auto_imports

#---- Produce Header-Files and from XML description
private
document obj2doth L0EventObj2Doth ../xml/*.xml
document obj2dict L0EventObj2Dict ../xml/*.xml    

# ================ build library (including dictionary) ==================
public
library           L0Event         ../src/*.cpp
library           L0EventDict     ../dict/*.cpp -import=GaudiIntrospection

apply_pattern      package_linkopts
apply_pattern      package_stamps
apply_pattern      linker_path
macro_append L0Event_linkopts "" WIN32 "/include:_L0Event_loadRef"


apply_pattern      package_shlibflags
#===============================================================
private
macro L0EventDict_shlibflags  "$(GaudiIntrospection_linkopts) $(L0Event_linkopts) $(use_linkopts) $(libraryshr_linkopts)"
