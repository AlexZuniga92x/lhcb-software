# $Id: requirements,v 1.30 2003-12-09 10:14:30 cattanem Exp $
package L0Event
version v13r4

branches Event cmt doc xml src

include_dirs $(L0EVENTROOT)

use 	LHCbKernel	v3r*	Kernel
use     EventKernel     v4r*	Event
use 	MuonKernel 	v2r* 	Muon
use 	GaudiObjDesc	v5r*    -no_auto_imports

#---- Produce Header-Files and from XML description
private
document obj2doth L0EventObj2Doth ../xml/*.xml
document obj2dict L0EventObj2Dict ../xml/*.xml    

# ================ build library (including dictionary) ==================
public
library           L0Event         ../src/*.cpp
library           L0EventDict     ../dict/*.cpp -import=GaudiIntrospection

# Standard patterns (order is important!)
#===============================================================
apply_pattern component_library library=L0EventDict
apply_pattern linker_library    library=L0Event
