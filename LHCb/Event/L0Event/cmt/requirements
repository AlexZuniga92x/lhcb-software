# component library
library L0Event          ../src/L0EventInstantiation.cpp \
                         ../src/L0Event_dll.cpp

macro_append L0Event_stamps "  " ${L0EventDir}/L0EventLib.stamp" 

apply_pattern ld_library_path
#=======================================================================
private

apply_pattern package_Lshlibflags
macro_append L0EventLib_shlibflags "  $(Gaudi_linkopts) $(CLHEP_linkopts)"

apply_pattern package_Cshlibflags




 