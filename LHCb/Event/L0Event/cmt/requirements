use 	MuonKernel 	v1r* 	Muon

#---- Produce Header-Files and from XML description
document obj2doth L0EventObj2Doth ../xml/*.xml
# Dictionary does not work with many input files
#document obj2dict L0EventObj2Dict ../xml/*.xml    

# ================ build library (including dictionary) ==================
library           L0Event         ../src/*.cpp
#                                  ../dict/*.cpp

apply_pattern      package_linkopts
apply_pattern      package_stamps
apply_pattern      linker_path       

