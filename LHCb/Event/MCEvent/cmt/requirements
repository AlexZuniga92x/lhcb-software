# Created    : 08/03/2002
# Maintainer : Marco Cattaneo
#
package           MCEvent
version           v1r7

# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc src xml Event Kernel

# Include directories
#============================================================================
include_dirs $(MCEVENTROOT)

# Used packages. 
#============================================================================
use LHCbKernel   v*      Kernel
use EventBase    v*      Event

# Produce Header-Files & dictionary from XML description
#============================================================================
document obj2doth MCEventObj2Doth ../xml/*.xml

# Make custom dictionary. Must be before GOD generation
#============================================================================
document customdict MCEventCustomDict ../Kernel/lcgDict.h

# Generate remaining dictionaries with lcgdict via GOD
#============================================================================
macro MCEventObj2Dict_GODflags " -s ../Event/ " \
      WIN32                    " -s ..\Event\ "

document obj2dict MCEventObj2Dict ../xml/*.xml

# Build libraries (including dictionary)
#============================================================================
library          MCEvent      *.cpp
library          MCEventDict  ../$(tag)/dict/MCEvent/*.cpp

# Define link options
#============================================================================
apply_pattern component_library library=MCEventDict
apply_pattern linker_library    library=MCEvent

private
use GaudiObjDesc v* -no_auto_imports
