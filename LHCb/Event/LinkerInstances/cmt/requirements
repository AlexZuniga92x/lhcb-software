# $Id: requirements,v 1.14 2006-12-19 15:54:29 ranjard Exp $
# =============================================================================
package LinkerInstances
author  Stefan Roiser
manager Thomas Ruf

version v3r2

use LinkerEvent  v*    Event
use MCEvent      v*    Event
use DigiEvent    v*    Event
use RecEvent     v*    Event
use TrackEvent   v*    Event

# Produce lcg dictionary for instances of Linker classes
#============================================================================
apply_pattern reflex_dictionary                                             \
              dictionary=LinkerInstances                                 \
              headerfiles=$(LINKERINSTANCESROOT)/dict/linker_instances.h \
              selectionfile=$(LINKERINSTANCESROOT)/xml/lcg_selection.xml \
              options="-U__MINGW32__"

# Standard patterns
#============================================================================
path_remove PATH "/LinkerInstances/" WIN32 "\LinkerInstances\"
path_append PATH "${LINKERINSTANCESROOT}/$(BINDIR)" \
                 WIN32 "${LINKERINSTANCESROOT}\$(BINDIR)" 
path_append PYTHONPATH "${LINKERINSTANCESROOT}/python" \
                 WIN32 "${LINKERINSTANCESROOT}\python"
