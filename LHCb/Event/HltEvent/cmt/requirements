#============================================================================
# Created    : 2003-04-02
# Maintainer : Olivier Callot
#
# Documentation on the requirement file can be found at
# http://cern.ch/lhcb-comp/Support/html/new_structure.pdf
#============================================================================
package           HltEvent
version           v4r0

#============================================================================
# This template is an example for a standard Algorithm package
#
# Structure, i.e. directories to process. 
#============================================================================
branches          cmt dict doc src Event xml

include_dirs $(HLTEVENTROOT)

#============================================================================
# Used packages. Specify the version, * at the end specifies 'any revision'
#    Put as many lines as needed, with all packages, without the '#'
#============================================================================
use 	LHCbKernel	v2r*    Kernel
use     EventKernel     v2r*    Event
use     VeloEvent       v12r*   Event
use     ITEvent         v12r*   Event
use     OTEvent         v12r*   Event

use     CLHEP           v*

use 	GaudiObjDesc	v5r*    -no_auto_imports

#============================================================================
# Component library building rule
#============================================================================
#---- Produce Header-Files and from XML description
private
document obj2doth L0EventObj2Doth ../xml/*.xml
document obj2dict L0EventObj2Dict ../xml/*.xml    

public
library          HltEvent    ../src/*.cpp
library          HltEventDict     ../dict/*.cpp -import=GaudiIntrospection

#============================================================================
# define component library link options
#============================================================================
apply_pattern      package_linkopts
apply_pattern      package_stamps
apply_pattern      linker_path
macro_append HltEvent_linkopts "" WIN32 "/include:_HltEvent_loadRef"

apply_pattern      package_shlibflags
#===============================================================
private
macro HltEventDict_shlibflags  "$(GaudiIntrospection_linkopts) $(HltEvent_linkopts) $(use_linkopts) $(libraryshr_linkopts)"
