package MuonKernelStandalone

version v2r6

branches cmt src MuonKernel doc 

use Boost v1 LCG_Interfaces
use Python v1 LCG_Interfaces

use GaudiPolicy v5r*

include_dirs $(MUONKERNELSTANDALONEROOT)

library MuonKernelStandalone  ../src/*.cpp

apply_pattern linker_library library=MuonKernelStandalone

path_append PYTHONPATH "$(MUONKERNELSTANDALONEROOT)/$(BINDIR)"
path_append PYTHONPATH "$(MUONKERNELSTANDALONEROOT)/Lib"

#++++++++++++++++++++++++++++
private

library MuonKernelW -import=Boost ../python_wrapper/*.cpp
apply_pattern ld_library_path


macro Boost_linkopts "-L$(Boost_home)/lib $(Boost_linkopts_python)"

macro MuonKernelW_shlibflags "$(use_linkopts) $(MuonKernelStandalone_linkopts) $(Boost_linkopts) $(libraryshr_linkopts)"
