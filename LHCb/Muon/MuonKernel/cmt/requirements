package MuonKernel

version v1

branches cmt src MuonKernel doc Test

include_dirs $(MUONKERNELROOT)

use GaudiKernel v11* 

#----------------------------------------------
library MuonKernelLib ../src/*.cpp

apply_pattern package_Llinkopts  
apply_pattern linker_path   

#----------------------------------------------
#  Build small test program which also presents examples
#  of MuonKernel classes use

application test   ../Test/*.cpp

apply_pattern application_path
macro Test_linkopts  "$(application_linkopts)"   

#----------------------------------------------

private

apply_pattern package_Lshlibflags

#####################################################################
#  For the "standalone" MuonKernel library version remove dependancy
#  on the GaudiKernel library
#####################################################################
macro_append MuonKernelLib_shlibflags "$(GaudiKernel_linkopts)" standalone ""
macro_append MuonKernel_cppflags "" standalone "-DMUONKERNEL_LOCAL" 
