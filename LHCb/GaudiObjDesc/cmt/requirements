package GaudiObjDesc

version v6r3p1

branches doc cmt src GaudiObjDesc

use XercesC v* LCG_Interfaces -no_auto_imports
use GaudiPolicy v*

include_dirs $(GAUDIOBJDESCROOT)

# Macro defintion used by both fragments below
macro xmlsrc "xml"

# Fragment for producing the .h-files of a package
make_fragment obj2doth -header=obj2doth_header -trailer=obj2doth_trailer

# Fragment for producing the cpp-files which will fill the MetaModel auf GaudiDict
make_fragment obj2dict -header=obj2dict_header -trailer=obj2dict_trailer

application GODWriteCppHeader -import=XercesC ../src/DaDiFrontEnd.cpp ../src/DaDiTools.cpp ../src/DaDiCppHeader.cpp
application GODWriteCppDict   -import=XercesC ../src/DaDiFrontEnd.cpp ../src/DaDiTools.cpp ../src/DaDiCppDict.cpp

private

use GaudiKernel v*           -no_auto_imports
use CLHEP  v* LCG_Interfaces -no_auto_imports
use GSL    v* LCG_Interfaces -no_auto_imports   # Only needed to please SealCLHEPDict
use Python v* LCG_Interfaces -no_auto_imports


macro xmlsrc "test"
document obj2doth EventObj2Doth -group=tests ../test/TestModel.xml 
document obj2dict EventObj2Dict -group=tests ../test/TestModel.xml 
library           TestModelDict -group=tests ../dict/*.cpp -import=GaudiKernel -import=CLHEP
macro TestModelDict_cppflags "-I../test -I../Event" 
apply_pattern component_library library=TestModelDict
apply_pattern ld_library_path

