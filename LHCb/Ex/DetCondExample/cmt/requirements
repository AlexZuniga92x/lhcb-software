# $Id: requirements,v 1.7 2001-12-17 20:14:40 andreav Exp $
package DetCondExample
version v2r0

branches doc src job options cmt XMLDDDB
ignore_pattern package_stamps 

# Main program and standard job options
use GaudiConf v6*

# GAUDI framework dependencies
use GaudiSys v9*

# Detector Description
use DetDesc v9* Det

# Detector Conditions (only on Linux)
macro DetCond_use "DetCond v2r0* Det" \
      WIN32       ""
use $(DetCond_use)

# XML detector description database location
set DETCONDEXAMPLE_XMLDDDB ${DETCONDEXAMPLEROOT}/XMLDDDB

# Build a test CondDB for the example (only on Linux)
setup_script setupDB

# Remove the test CondDB for the example (only on Linux)
cleanup_script cleanupDB

#==================================================================
private

#==> Detector Conditions example
macro DetCondExample_sources "*.cpp" \
      WIN32 "DumpDetectorStore.cpp EvtClock.cpp XmlTestAlgorithm.cpp"
application DetCondExample \
	$(DetCondExample_sources) "$(GAUDICONFROOT)/src/GaudiMain.cpp"
macro DetCondExample_linkopts "$(application_linkopts)"


