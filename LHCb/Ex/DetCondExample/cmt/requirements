# $Id: requirements,v 1.19 2004-12-08 17:21:27 marcocle Exp $
package DetCondExample
version v5r0

branches doc src job options cmt XMLDDDB sql
ignore_pattern package_stamps 

# Main program and standard job options
use GaudiConf v*

# GAUDI framework dependencies
use GaudiKernel v*
use GaudiSvc v*
use GaudiAlg v*

# Detector Description
use DetDesc v* Det
use DetDescCnv v* Det
use XmlDDDB v* Det

# Detector Conditions
use DetCond v* Det

# Xml Parsing services (XmlCnvSvc)
use XmlTools v* Tools

# XML detector description database location
set DETCONDEXAMPLE_XMLDDDB ${DETCONDEXAMPLEROOT}/XMLDDDB

# DAQ test parameters (number of events, folder name and record size in bytes)
set DETCONDEXAMPLE_DAQEVTMAX 10
set DETCONDEXAMPLE_DAQFOLDERNAME DAQ
set DETCONDEXAMPLE_DAQRECORDSIZE 100000

# Setup for the test CondDB used in the example
setup_script setupDB

# Path to some useful scripts using sql
path_append PATH ${DETCONDEXAMPLEROOT}/sql

# Path to the shared libraries in the bin directory
path_remove LD_LIBRARY_PATH ${DETCONDEXAMPLEROOT}
path_append LD_LIBRARY_PATH ${DETCONDEXAMPLEROOT}/${BINDIR}

# Set the debug level for the CONDDB libraries. 
# Possible debug levels are:
#    none: no message is printed (default)
#    prof: only print messages which do not disturb profiling measurements
#    user: only print messages of "general" interest
#    devl: also print messages of interest only for the package developer
#    more: more paranoid messages are printed 
#    all:  any debug message will be printed
# Objy debug level (no default set in package CONDDB)
# MySQL debug level (override values set in package CondDBMYSQL)
set COND_DB_DEBUG none
# Oracle debug level (override values set in package CondDBOracle)
set CONDDBORACLE_DEBUG none

#==================================================================
private

#==> Detector Conditions example
application DetCondExample *.cpp $(GAUDICONFROOT)/src/GaudiMain.cpp
macro DetCondExample_linkopts "$(application_linkopts)"

path JOBOPTSEARCHPATH ../options
