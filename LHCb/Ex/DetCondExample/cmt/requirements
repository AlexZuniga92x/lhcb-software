# $Id: requirements,v 1.49 2006-06-12 13:53:02 marcocle Exp $
package DetCondExample
version v8r0

branches doc src job options cmt XMLDDDB python logs
ignore_pattern package_stamps 

# Main program and standard job options
use GaudiConf v*

# GAUDI framework dependencies
use GaudiKernel v*
use GaudiSvc v*
use GaudiAlg v*

# Detector Description
use DetDesc v* Det
use DetDescSvc v* Det
use DetDescCnv v* Det
use XmlDDDB v* Det
use XmlConditions v* Det

# Xml Parsing services (XmlCnvSvc)
use XmlTools v* Tools
use CondDBEntityResolver v* Tools

# Detector Conditions
use DetCond v* Det
apply_tag NEEDS_COOL_FACTORY
use Python v* LCG_Interfaces
apply_tag NEEDS_PYCOOL

# library path needed for mysql backend
use mysql    v* LCG_Interfaces

# library path needed for sqlite backend
use sqlite   v* LCG_Interfaces

# library path needed for oracle backend
use oracle   v* LCG_Interfaces

# XML detector description database location
set DETCONDEXAMPLE_XMLDDDB ${DETCONDEXAMPLEROOT}/XMLDDDB

# DAQ test parameters (number of events, folder name and record size in bytes)
set DETCONDEXAMPLE_DAQEVTMAX 10
set DETCONDEXAMPLE_DAQFOLDERNAME DAQ
#set DETCONDEXAMPLE_DAQRECORDSIZE 100000
# currently COOL can store only strings <= 4000 chars
set DETCONDEXAMPLE_DAQRECORDSIZE 3999

# Path to some useful scripts using sql
#path_append PATH ${DETCONDEXAMPLEROOT}/sql

apply_pattern ld_library_path

#==================================================================
private

#==> Detector Conditions example
application DetCondExample *.cpp $(GAUDICONFROOT)/src/GaudiMain.cpp

# Set default environment variables to use SQLite by default for tests.
set CONDDBCONNECTIONSTRING "sqlite://none;schema=CONDDB.sqlite;dbname=CONDDB"

# for testMultiDB.opts
set CONDDBCONNECTIONSTRING1 "sqlite://none;schema=CONDDB1.sqlite;dbname=CONDDB1"
set CONDDBCONNECTIONSTRING2 "sqlite://none;schema=CONDDB2.sqlite;dbname=CONDDB2"

macro_append SEAL_linkopts ' -llcg_SealServices ' WIN32 ' lcg_SealServices.lib '

path JOBOPTSEARCHPATH ../options
