package DetCondExample
version v7r1

branches doc src job options cmt XMLDDDB sql
ignore_pattern package_stamps 

# Main program and standard job options
use GaudiConf v*

# GAUDI framework dependencies
use GaudiKernel v*
use GaudiSvc v*
use GaudiAlg v*

# Detector Description
use DetDesc v15r* Det
use DetDescCnv v* Det
use XmlDDDB v* Det

# Detector Conditions
use DetCond v7* Det

# library path needed for mysql backend
use myodbc   v* LCG_Interfaces
use mysql    v* LCG_Interfaces
use unixodbc v* LCG_Interfaces
set ODBCINST $(unixodbc_home)

# library path needed for sqlite backend
#path_remove LD_LIBRARY_PATH "/sqlite/"
#path_append LD_LIBRARY_PATH "$(LCG_external)/sqlite/3.0.8/$(CMTCONFIG)/lib" WIN32 ""
#### sqlite is not working

# library path needed for oracle backend
macro Oracle_version "10.1.0.3-1"
macro Oracle_base "/afs/cern.ch/project/oracle/instantclient"
path_remove LD_LIBRARY_PATH "/oracle/"
path_append LD_LIBRARY_PATH "$(Oracle_base)/$(Oracle_version)/$(CMTCONFIG)/lib" WIN32 "" \
	    rh73_gcc323_dbg "$(Oracle_base)/$(Oracle_version)/rh73_gcc323/lib" \
            slc3_ia32_gcc323_dbg "$(Oracle_base)/$(Oracle_version)/slc3_ia32_gcc323/lib"
set TNS_ADMIN "/afs/cern.ch/project/oracle/admin"


# Xml Parsing services (XmlCnvSvc)
use XmlTools v* Tools

# XML detector description database location
set DETCONDEXAMPLE_XMLDDDB ${DETCONDEXAMPLEROOT}/XMLDDDB

# DAQ test parameters (number of events, folder name and record size in bytes)
set DETCONDEXAMPLE_DAQEVTMAX 10
set DETCONDEXAMPLE_DAQFOLDERNAME DAQ
#set DETCONDEXAMPLE_DAQRECORDSIZE 100000
# currently COOL can store only strings <= 4000 chars
set DETCONDEXAMPLE_DAQRECORDSIZE 3999

# Path to some useful scripts using sql
path_append PATH ${DETCONDEXAMPLEROOT}/sql

# Path to the shared libraries in the bin directory
path_remove LD_LIBRARY_PATH ${DETCONDEXAMPLEROOT}
path_append LD_LIBRARY_PATH ${DETCONDEXAMPLEROOT}/${BINDIR}

#==================================================================
private

#==> Detector Conditions example
application DetCondExample *.cpp $(GAUDICONFROOT)/src/GaudiMain.cpp
macro DetCondExample_linkopts "$(application_linkopts) -L$(DETCONDROOT)/$(CMTCONFIG) -lDetCond "

path JOBOPTSEARCHPATH ../options
