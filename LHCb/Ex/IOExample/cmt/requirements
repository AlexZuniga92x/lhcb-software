                         GaudiDb/*.cpp      \
                         GaudiSvc/*.cpp     \
                         Common/*.cpp

#==> IO example
library IOMin        DataSvc/StoreExplorer.cpp            \
                         Common/TestAlgorithm.cpp             \
                         Common/RelationsDict.cpp             \
                         Common/GaudiMain.cpp
                         
# ========================= set macros ============================
apply_pattern  package_Clinkopts
apply_pattern  library_Lshlibflags library=IOExample
apply_pattern  library_Lshlibflags library=IOMin
apply_pattern  application_path 
macro_append   IOExample_linkopts " $(GaudiKernel_linkopts) $(GaudiDb_linkopts) "
macro_append   IOMin_linkopts     " $(GaudiKernel_linkopts) $(GaudiDb_linkopts) "
set LHCBTESTROOT ${IOEXAMPLEROOT}
