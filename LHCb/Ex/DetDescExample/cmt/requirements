package DetDescExample
version v3r0

branches doc src options cmt

# Main program and standard job options
use GaudiConf     v6*     

# GAUDI framework
use GaudiSys      v9r*

# Detector Description package and database
use DetDesc       v9*   Det
use XmlDDDB       v7*   Det

#==> DetDesc example
application DetDescExample *.cpp \
            "$(GAUDICONFROOT)/src/GaudiMain.cpp"

# ========================= set macros ============================

ignore_pattern package_stamps 
apply_pattern  application_path
macro DetDescExample_linkopts  "$(application_linkopts)"
