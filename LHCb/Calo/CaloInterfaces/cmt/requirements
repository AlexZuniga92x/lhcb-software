# =============================================================================
package           CaloInterfaces
version           v7r1

# =============== structure ===================================================
branches          cmt doc CaloInterfaces

# =============== dependencies ================================================
use GaudiKernel     v*
use LHCbKernel      v*    Kernel
use RecEvent        v*    Event
use PhysEvent       v*    Event
use CaloDet         v*    Det

# =============== include directories =========================================
apply_pattern	  install_more_includes more=CaloInterfaces
 

# =============== LCG Dictionaries ============================================
apply_pattern reflex_dictionary                                                 \
              dictionary=CaloInterfaces                                        \
              headerfiles=$(CALOINTERFACESROOT)/dict/CaloInterfacesDict.h     \
              selectionfile=$(CALOINTERFACESROOT)/dict/CaloInterfacesDict.xml \
              options="-U__MINGW32__"

# Hack for cmt v1r19 bug to link dictionary on windows
macro CaloInterfacesDict_use_linkopts $(use_linkopts)


