package           CaloKernel
version           v2r0

# =============== structure ===================================================
branches          src cmt doc CaloKernel

# =============== own includes ================================================
include_dirs      $(CALOKERNELROOT)

# =============== used packages ===============================================
use LHCbKernel    v1r*  Kernel
use GaudiKernel   v12r*
use CLHEP         v17r* 
        
# =============== linker library ==============================================
library           CaloKernel            *.cpp 
apply_pattern     package_stamps 

# =============== mandatory patterns ==========================================
apply_pattern     package_linkopts
apply_pattern     linker_path 
apply_pattern     package_libraries 

# =============== private stuff ===============================================
private
apply_pattern     package_shlibflags    
# macro_append      CaloKernel_shlibflags " $(LHCbKernel_linkopts) "
# macro_append      CaloKernel_shlibflags " $(GaudiKernel_linkopts) "
# macro_append      CaloKernel_shlibflags " $(CLHEP_linkopts) "

# =============== test application ============================================
private
application       CaloKernelTest  -check Test/*.cpp 
macro CaloKernelTestlinkopts " $(CaloKernel_linkopts) "
apply_pattern     application_path

# =============== make the executable "visible" ===============================
path_remove       PATH               "CaloKernel"
path_prepend      PATH               ${CALOKERNELROOT}/${BINDIR}

