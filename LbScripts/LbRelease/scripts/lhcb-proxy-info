#!/bin/csh
set narg = $#argv
set nar = 1
set version = ""
set list_arg = ""
set dirac_dev = ""

#if ($narg != 0) then
while ($nar <= $narg) 
  if ( "$argv[${nar}]" == "-d" ) then
     @ nar = ${nar} + 1
     set version = $argv[${nar}]
  else if ("$argv[${nar}]" == "-h") then
     echo "Usage : lhcb-proxy-info [-h] [-t] [-d dirac_version]"
     echo "      -h : provide this help"
     echo "      -t : to use the Dirac version which is DEV"
     echo "      -d : to specify which version of DIRAC you want to use"
     exit 0
  else if ("$argv[${nar}]" == "-t") then
     set dirac_dev = " --dev"
     @ nar = ${nar} + 1
  else
     @ nar = ${nar} + 1
  endif
end

if ! $?DIRACROOT then
   unsetenv User_release_area
   source `which SetupProject.csh` $dirac_dev Dirac $version >&! /dev/null
   if $SetupProjectStatus != 0 then
      echo Problem to set the Dirac environment
      exit 1
   endif
endif

`which dirac-proxy-info` --checkvalid
set rc_dirac = $status
if ($rc_dirac != 0 ) then
   echo " "
   echo problem to get the Proxy info
   exit $rc_dirac
endif

exit 0
