package           Analysis
version           v8r1

# ============================================================================
# Structure, i.e. directories to process. 
# ============================================================================
branches          cmt doc src options solutions exercises

# ============================================================================
# Used packages.
# ============================================================================
use DaVinciKernel       v*  Phys
use DaVinciMCKernel     v* Phys

# ============================================================================
# Use MC
# ============================================================================
macro_append     cppflags " -DMCCheck " \
                 VisualC  " /DMCCheck "
# ============================================================================
# Component library building rule
# ============================================================================
library     Analysis     ../src/*.cpp -import=AIDA

# ============================================================================
# define component library link options
# ============================================================================
apply_pattern component_library library=Analysis

# ============================================================================
# Testing Component library building rule
# This is only to check that the code compiles in the release
# ============================================================================
private
library     AnalysisTest -suffix=Test ../solutions/DaVinci3/*.cpp 
apply_pattern linker_library library=AnalysisTest
end_private
