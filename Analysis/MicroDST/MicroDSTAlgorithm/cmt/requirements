package MicroDST
version v2r0

#############################################################
# BRANCHES
#############################################################
branches component MicroDST src cmt doc

#############################################################
# USE
#############################################################
use DaVinciKernel      v*  Phys
use MCEvent            v*  Event
use LinkerEvent        v*  Event

#for ODIN
use   DAQEvent        v*    Event

#############################################################
apply_pattern install_more_includes more=MicroDST

#############################################################
# BUILD
#############################################################
# build a component library
library MicroDST ../src/*.cpp

# build a link kibrary
library MicroDSTLib ../src/Lib/*.cpp

apply_pattern component_library library=MicroDST

#===============================================================


