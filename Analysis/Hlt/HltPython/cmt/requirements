path_remove  PYTHONPATH "/HltPython/" WIN32 "\HltPython\"
path_append  PYTHONPATH "$(HLTPYTHONROOT)/python/modules"
path_append  PYTHONPATH "$(HLTPYTHONROOT)/python/examples"
path_append  PYTHONPATH "$(HLTPYTHONROOT)/python/scripts"



