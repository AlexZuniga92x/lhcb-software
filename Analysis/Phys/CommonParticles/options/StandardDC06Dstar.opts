StdDC06LooseDstarWithD02PiPi.Window = 50.0 * MeV; // hlt presel: 50 MeV
StdDC06LooseDstarWithD02PiPi.MinPt  = 1250.0 * MeV; // hlt presel: 2000 MeV
// Cuts for mother
StdDC06LooseDstarWithD02PiPi.MotherFilter.Selections = {"D*(2010)+  : VtxFilterCriterion, MassDifferenceFilterCriterion"};
StdDC06LooseDstarWithD02PiPi.MotherFilter.VtxFilterCriterion.MaxChi2 = 25.0; // hlt presel: 16
