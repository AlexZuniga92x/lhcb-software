MergedPi0Alg.ParticleFilter.PIDFilterCriterion.ConfidenceLevels = { 0.4 };
MergedPi0Alg.ParticleFilter.PIDFilterCriterion.OutputLevel = 4;

MergedPi0Alg.DecayDescriptor = "pi0 -> gamma gamma";
