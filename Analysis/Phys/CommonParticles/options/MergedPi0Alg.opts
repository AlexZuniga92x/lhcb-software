// Configure PhysDesktop Tool with necessary values
MergedPi0Alg.PhysDesktop.ParticleMakerType = "PhotonFromMergedParticleMaker";
//MergedPi0Alg.PhysDesktop.OutputLocation="/Event/Phys/MergedPi0";
MergedPi0Alg.PhysDesktop.PhotonFromMergedParticleMaker.OutputLevel = 4;

////////////////////////////////////////
MergedPi0Alg.Pi0MassWindow = 60.;    // MeV
MergedPi0Alg.GammaPtCut    = 0.;     // MeV 
