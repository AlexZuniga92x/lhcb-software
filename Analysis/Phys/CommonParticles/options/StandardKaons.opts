/** @file 
 *
 *  The configuration file for "standard" kaons, created "on-demand"
 * 
 * The configuration includes:
 *    - "/Event/Phys/StdNoPIDsKaons"  
 *    - "/Event/Phys/StdLooseKaons"
 *    - "/Event/Phys/StdTightKaons"
 *
 *  @author Vanya BELYAEV ibelyaev@physics.syr.edu
 *  @author Juan PALACIOS juan.palacios@cern.ch
 *  @date 2006-06-27
 */

DataOnDemandSvc.Algorithms += {
  // No PID kaons
  "DATA='/Event/Phys/StdNoPIDsKaons/Particles'     TYPE='GaudiSequencer/StdNoPIDsKaonsSeq'",
  "DATA='/Event/Phys/StdNoPIDsKaons/Vertices'      TYPE='GaudiSequencer/StdNoPIDsKaonsSeq'",
  // Loose kaons      
  "DATA='/Event/Phys/StdLooseKaons/Particles'     TYPE='GaudiSequencer/StdLooseKaonsSeq'",
  "DATA='/Event/Phys/StdLooseKaons/Vertices'      TYPE='GaudiSequencer/StdLooseKaonsSeq'",
  // Tight kaons  
  "DATA='/Event/Phys/StdTightKaons/Particles'     TYPE='GaudiSequencer/StdTightKaonsSeq'",
  "DATA='/Event/Phys/StdTightKaons/Vertices'      TYPE='GaudiSequencer/StdTightKaonsSeq'"
};
StdNoPIDsKaonsSeq.Members += { "PreLoadParticles/StdNoPIDsKaons" };
StdNoPIDsKaonsSeq.MeasureTime = true;
StdLooseKaonsSeq.Members += { "PreLoadParticles/StdLooseKaons" };
StdLooseKaonsSeq.MeasureTime = true;
StdTightKaonsSeq.Members += { "PreLoadParticles/StdTightKaons" };
StdTightKaonsSeq.MeasureTime = true;

// ============================================================================
// NO PID, all tracks
// ============================================================================
StdNoPIDsKaons.PhysDesktop.ParticleMakerType = "NoPIDsParticleMaker" ;
StdNoPIDsKaons.PhysDesktop.NoPIDsParticleMaker.Particle =  "kaon" ;
StdNoPIDsKaons.DecayDescriptor = "Kaon" ;
// ============================================================================
// LOOSE long
// ============================================================================
StdLooseKaons.PhysDesktop.ParticleMakerType = "CombinedParticleMaker" ;
StdLooseKaons.PhysDesktop.CombinedParticleMaker.ExclusiveSelection = false ;
StdLooseKaons.PhysDesktop.CombinedParticleMaker.Particles = {"kaon"} ;
StdLooseKaons.PhysDesktop.CombinedParticleMaker.TrackSelector.TrackTypes = {"Long"};
StdLooseKaons.PhysDesktop.CombinedParticleMaker.Kaon.Selection = {"RequiresDet='RICH' CombDLL(k-pi)>'-5.0'"} ;
StdLooseKaons.DecayDescriptor = "Kaon" ;

// ============================================================================
// TIGHT
// ============================================================================
StdTightKaons.PhysDesktop.ParticleMakerType = "CombinedParticleMaker" ;
StdTightKaons.PhysDesktop.CombinedParticleMaker.ExclusiveSelection = false ;
StdTightKaons.PhysDesktop.CombinedParticleMaker.Particles = {"kaon"} ;
StdTightKaons.PhysDesktop.CombinedParticleMaker.Kaon.Selection = {"RequiresDet='RICH' CombDLL(k-pi)>'0.0'" }  ;
StdTightKaons.PhysDesktop.CombinedParticleMaker.TrackSelector.TrackTypes = {"Long"};
StdTightKaons.DecayDescriptor = "Kaon" ;

// ============================================================================
// The END 
// ============================================================================
