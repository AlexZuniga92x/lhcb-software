#============================================================================
package           FlavourTagging
version           v5r5

# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc src options summary

# Set the default paths for the Tagging options
#============================================================================
set FLAVOURTAGGINGOPTS ${FLAVOURTAGGINGROOT}/options
include_dirs           $(FLAVOURTAGGINGROOT)

# Used packages. 
#============================================================================
use DaVinciTools    v*  Phys
use DaVinciMCTools  v*  Phys
use MCTools         v*  Phys
use L0Event	    v*  Event
use TrgEvent        v*  Event
use GenEvent        v*  Event
use RecoTools       v*  Rec
use Tampering       v*  Phys

# Component library building rule
#============================================================================
library          FlavourTagging    ../src/*.cpp -import=AIDA

# define component library link options
#============================================================================
apply_pattern component_library library=FlavourTagging

# =================== summary application  ==================================
private 
 application       summaryof      ../summary/summaryof.cpp
 apply_pattern     application_path
