package           FlavourTagging
version           v4r2

#============================================================================
# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc src options FlavourTagging 

#============================================================================
# Set the default paths for the Tagging options
#============================================================================
set FLAVOURTAGGINGOPTS ${FLAVOURTAGGINGROOT}/options
include_dirs           $(FLAVOURTAGGINGROOT)

#============================================================================
# Used packages. 
#============================================================================
use DaVinciTools	v7r*	Phys
use DaVinciMCTools	v4r*	Phys
use DaVinciAssociators	v3r*    Phys
use L0Event		v13r*	Event
use TrAssociators	v3r*	Tr

#============================================================================
# Component library building rule
#============================================================================
library          FlavourTagging    ../src/*.cpp

#============================================================================
# define component library link options
#============================================================================
apply_pattern    package_Clinkopts
apply_pattern    packageShr

#============================================================================
private
apply_pattern    package_Cshlibflags

