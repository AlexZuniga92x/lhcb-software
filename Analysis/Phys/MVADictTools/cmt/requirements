package           MVADictTools
version           v1r0

#============================================================================
# Structure
#============================================================================
branches          cmt doc src tests options
include_path      none

#============================================================================
# Used packages.
#============================================================================
# Depend on the various component packages, so they get built before the
# python stuff below.
use   DecayTreeTuple            v*    Phys
use   LoKiPhys                  v*    Phys
#use   HepMC                     v*    LCG_Interfaces
use   ROOT                      v*    LCG_Interfaces -no_auto_imports

#============================================================================
# building rules
#============================================================================
library          MVADictToolsLib -import=ROOT ../src/lib/*.cpp 
apply_pattern    linker_library  library=MVADictToolsLib

library          MVADictTools -import=ROOT ../src/component/*.cpp 
apply_pattern    component_library  library=MVADictTools
macro_append     MVADictTools_dependencies " MVADictToolsLib "

application      utesttmva     ../src/applications/utesttmva.cxx
macro_append     utesttmva_dependencies " MVADictToolsLib "

#============================================================================
# Python
#============================================================================
#apply_pattern    install_python_modules
#macro_append MVADictToolsGenConfUser_dependencies MVADictToolsConfDbMerge

#============================================================================
# private build options
#============================================================================
private
include_dirs $(MVADICTTOOLSROOT)/src
macro_append ROOT_linkopts " -lTMVA "
macro_append Boost_linkopts " -lboost_unit_test_framework-${Boost_compiler_version}-mt-${Boost_file_version} "
end_private

#============================================================================
# Test Suite
#============================================================================
apply_pattern QMTest
