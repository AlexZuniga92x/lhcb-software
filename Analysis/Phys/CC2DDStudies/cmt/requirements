use   GaudiPolicy         v*
use   ROOT                v*    LCG_Interfaces
use   DecayTreeTuple      v*    Phys
use   DaVinciInterfaces   v*    Phys
use   TrackFitEvent       v*    Tr
use   DecayTreeTupleBase  v*    Phys
use   HltEvent            v*    Event

#### ROOT libraries ####
macro_append    ROOT_linkopts " -lHist -lTreePlayer -lGraf -lGraf3d -lGpad"
macro_append    ROOT_linkopts " -lMatrix -lMathCore -lMathMore -lSPlot"
macro_append    ROOT_linkopts " -lXMLParser"


#### RooFit libraries ####
macro_append ROOT_linkopts " -lRooFitCore -lRooFit -lRooStats"

#### LowLevel multi-thread ####
macro_append ROOT_linkopts " -lpthread"

#### TMVA libraries ####
macro_append ROOT_linkopts " -lMLP -lXMLIO -lTMVA"


#### Cintex libraries (Reflex -> CINT) ####
macro_append ROOT_linkopts " -lCintex"


#DEBUG STUFF
#macro_append cppflags " -g -pedantic -fstack-protector-all -Wall -Wextra"

