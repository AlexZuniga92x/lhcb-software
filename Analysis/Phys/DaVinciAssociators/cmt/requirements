package           DaVinciAssociators
version           v5r0

# This template is an example for a standard Algorithm package
#
# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc src DaVinciAssociators

# Exported header files
#============================================================================
include_dirs     $(DAVINCIASSOCIATORSROOT)

# Used packages. 
#============================================================================
use AIDA            v* 
use PhysEvent       v*     Event
use TrAssociators   v*     Tr 
use CaloAssociators v*     Calo  
use LinkerEvent     v*     Event
use MCTools         v*     Phys

# Linker library building rule
library          DaVinciAssociatorsLib   ../src/Lib/*.cpp

# Component library building rule
#============================================================================
library          DaVinciAssociators      ../src/*.cpp

# define component library link options
#============================================================================
#apply_pattern    package_Clinkopts
#apply_pattern    packageShr
apply_pattern    component_library  library=DaVinciAssociators
apply_pattern    linker_library     library=DaVinciAssociatorsLib

#============================================================================
private
