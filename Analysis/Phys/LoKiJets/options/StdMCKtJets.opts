#include "$MCSTANDARDPARTICLESROOT/options/StandardMCPions.opts"
#include "$MCSTANDARDPARTICLESROOT/options/StandardMCKaons.opts"
#include "$MCSTANDARDPARTICLESROOT/options/StandardMCMuons.opts"
#include "$MCSTANDARDPARTICLESROOT/options/StandardMCElectrons.opts"
// ============================================================================
/** @file
 *  Configuration file to run "standard HepMC Kt-jets"
 *  @author Vanya BELYAEV ibelyaev@physics.syr.edu
 *  @date 2006-11-10
 */
// ============================================================================
/// load the service 
// ============================================================================
ApplicationMgr.ExtSvc  += { "LoKiSvc" } ;
// ============================================================================
// configure Data-On-Demans service 
// ============================================================================
DataOnDemandSvc.AlgMap += {
  'Phys/StdMCKtJets/Particles' : 'LoKi::JetMaker/StdMCKtJets' ,
  'Phys/StdMCKtJets/Vertices'  : 'LoKi::JetMaker/StdMCKtJets'  
} ;
// ============================================================================
// configure the algorithm
// ============================================================================
StdMCKtJets.PhysDesktop.InputLocations =  {
  "Phys/StdMCPions"     ,
  "Phys/StdMCKaons"     ,
  "Phys/StdMCMuons"     ,
  "Phys/StdMCElectrons" ,
  "Phys/StdMCProtons"   ,
  "Phys/StdMCPhotons"   
} ;
